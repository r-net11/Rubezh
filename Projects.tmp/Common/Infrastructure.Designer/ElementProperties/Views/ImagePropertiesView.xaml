<UserControl x:Class="Infrastructure.Designer.ElementProperties.Views.ImagePropertiesView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:extToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended"
			 xmlns:xc="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
			 MinWidth="400" MinHeight="400">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Border Grid.Column="0" Background="{Binding ImageBrush}" />
		<StackPanel Grid.Column="1">
			<Button Margin="2" Command="{Binding SelectPictureCommand}" Content="Выбрать картинку" />
			<Button Margin="2" Command="{Binding RemovePictureCommand}" Content="Очистить картинку" />
		</StackPanel>
	</Grid>
</UserControl>