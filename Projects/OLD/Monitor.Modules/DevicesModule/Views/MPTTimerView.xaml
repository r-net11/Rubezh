<UserControl x:Class="DevicesModule.Views.MPTTimerView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 MinWidth="400" MinHeight="200">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0" Text="{Binding Device.Zone.PresentationName}" Foreground="White" FontSize="16" Margin="2" />
		<StackPanel Grid.Row="1" Orientation="Horizontal">
			<Label Content="{Binding TimeLeft}" FontSize="72" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="Red" Margin="2" />
			<Label Content="сек" FontSize="72" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="Red" Margin="10 2 2 2" />
		</StackPanel>
	</Grid>
</UserControl>