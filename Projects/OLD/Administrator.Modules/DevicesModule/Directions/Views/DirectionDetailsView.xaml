<UserControl x:Class="DevicesModule.Views.DirectionDetailsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Controls="clr-namespace:Controls;assembly=Controls"
			 MinWidth="400" MinHeight="400">

	<TabControl>
		<TabItem Header="Основные">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<Label Grid.Column="0" Grid.Row="0" Content="Номер направления" HorizontalAlignment="Right" />
				<Label Grid.Column="0" Grid.Row="1" Content="Наименование" HorizontalAlignment="Right" />
				<Label Grid.Column="0" Grid.Row="2" Content="Примечание" HorizontalAlignment="Right" />
				<TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Id}" Margin="2" IsEnabled="False" />
				<TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Name}" Margin="2" />
				<TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Description}" TextWrapping="Wrap" AcceptsReturn="True" Margin="2" />
			</Grid>
		</TabItem>

		<TabItem Header="Настройки направления">
			<StackPanel>
				<Label Content="Внешняя сигнализация УАПТ заблокировано (РМ)" FontWeight="Bold" Margin="5" />
				<Grid Margin="5">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<TextBlock Grid.Column="0">
						<Hyperlink Command="{Binding ChooseRmCommand}" Style="{StaticResource HyperlinkStyle}">
							<TextBlock Text="{Binding DeviceRm.DottedPresentationAddressAndName}" />
							<TextBlock Text="Нажмите для выбора устройства" Margin="2">
								<TextBlock.Style>
									<Style>
										<Setter Property="TextBlock.Visibility" Value="Collapsed" />
										<Style.Triggers>
										<DataTrigger Binding="{Binding DeviceRm}" Value="{x:Null}">
											<Setter Property="TextBlock.Visibility" Value="Visible" />
										</DataTrigger>
										</Style.Triggers>
									</Style>
								</TextBlock.Style>
							</TextBlock>
						</Hyperlink>
					</TextBlock>

					<StackPanel Grid.Column="1" Orientation="Horizontal">
						<ToolBarButton Command="{Binding ResetRmCommand}" ToolTip="Удалить" ImageSource="deleteCross"  Height="32" Width="32" HorizontalAlignment="Right" />
					</StackPanel>
				</Grid>

				<Label Content="Кнопка сброса блокировки" FontWeight="Bold" Margin="2" />
				<Grid Margin="2">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<TextBlock Grid.Column="0">
						<Hyperlink Command="{Binding ChooseButtonCommand}" Style="{StaticResource HyperlinkStyle}">
							<TextBlock Text="{Binding DeviceButton.DottedPresentationAddressAndName}" />
							<TextBlock  Text="Нажмите для выбора устройства" Margin="2">
								<TextBlock.Style>
									<Style>
										<Setter Property="TextBlock.Visibility" Value="Collapsed" />
										<Style.Triggers>
										<DataTrigger Binding="{Binding DeviceButton}" Value="{x:Null}">
											<Setter Property="TextBlock.Visibility" Value="Visible" />
										</DataTrigger>
										</Style.Triggers>
									</Style>
								</TextBlock.Style>
							</TextBlock>
						</Hyperlink>
					</TextBlock>

					<StackPanel Grid.Column="1" Orientation="Horizontal">
						<Controls:ToolBarButton Command="{Binding ResetButtonCommand}" ToolTip="Удалить" Background="{DynamicResource deleteCross}"  Height="32" Width="32" HorizontalAlignment="Right" />
					</StackPanel>
				</Grid>

			</StackPanel>
		</TabItem>
	</TabControl>
</UserControl>