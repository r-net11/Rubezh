<UserControl x:Class="FireMonitor.Views.UserFotterView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:lang="clr-namespace:Localization.FireMonitor.Views;assembly=Localization">
	<StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20, 0, 0, 3"
			TextBlock.FontSize="11" TextBlock.FontWeight="Bold" TextBlock.Foreground="Orange">
        <TextBlock Text="{x:Static lang:CommonViews.User}" />
		<TextBlock Text="{Binding UserName}" />
	</StackPanel>
</UserControl>