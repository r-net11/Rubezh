<UserControl x:Class="GKModule.Views.SKDZoneToolTipView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<UserControl.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>
		<Style TargetType="Image">
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>
	</UserControl.Resources>
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<Image Margin="2" Width="16" Height="16" Source="/Controls;component/Images/Zone.png" />
            <TextBlock Text="{Binding SKDZone.PresentationName}" FontWeight="Bold" />
		</StackPanel>
        <TextBlock Text="{Binding SKDZone.Description}" Visibility="{Binding SKDZone.Description, Converter={StaticResource StringToVisibilityConverter}}" />
		<!--<StackPanel Orientation="Horizontal">
			<Image Margin="0 0 2 0" Width="16" Height="16" Source="{Binding State.StateClass, Converter={StaticResource XStateClassToIconConverter}}" />
			<TextBlock Text="{Binding State.StateClass, Converter={StaticResource XStateClassToSKDStringConverter}}" />
		</StackPanel>-->
		<StackPanel Orientation="Horizontal">
			<ItemsControl ItemsSource="{Binding StateClasses}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<Image Source="{Binding ., Converter={StaticResource XStateClassToIconConverter}}" Width="16" Height="16" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding ., Converter={StaticResource XStateClassToSKDStringConverter}}" VerticalAlignment="Center" Margin="5, 1, 1, 1" />
						</StackPanel>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</StackPanel>
	</StackPanel>
</UserControl>