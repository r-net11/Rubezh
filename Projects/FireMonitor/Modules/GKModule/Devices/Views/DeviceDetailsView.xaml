<UserControl
	x:Class="GKModule.Views.DeviceDetailsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Converters="clr-namespace:GKModule.Converters"
	xmlns:Views="clr-namespace:GKModule.Views"
	MinWidth="400"
	MinHeight="400"
	MaxWidth="600"
	MaxHeight="600">
	<UserControl.Resources>
		<Converters:DeviceControlRegimeToStringConverter x:Key="DeviceControlRegimeToStringConverter" />
		<Converters:DeviceControlRegimeToIconConverter x:Key="DeviceControlRegimeToIconConverter" />
	</UserControl.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0" Orientation="Horizontal">
				<Border
					Width="50"
					Height="50"
					Margin="0, 0, 0, 5"
					Background="{Binding DevicePicture}"
					BorderThickness="0" />
				<Views:DeviceStateView Margin="5 0 0 0" TextElement.Foreground="White" />
			</StackPanel>
			<StackPanel
				Grid.Column="1"
				HorizontalAlignment="Right"
				Orientation="Horizontal">
				<StackPanel TextBlock.Foreground="Red">
					<StackPanel Visibility="{Binding HasOnDelay, Converter={StaticResource BoolToVisibilityConverter}}">
						<TextBlock
							Margin="2"
							Foreground="White"
							Text="Задержка на включение" />
						<StackPanel Orientation="Horizontal">
							<TextBlock
								Margin="2"
								FontSize="24"
								Text="{Binding State.OnDelay}" />
							<TextBlock
								Margin="2"
								FontSize="24"
								Text="Сек" />
						</StackPanel>
					</StackPanel>
					<StackPanel Visibility="{Binding HasHoldDelay, Converter={StaticResource BoolToVisibilityConverter}}">
						<TextBlock
							Margin="2"
							Foreground="White"
							Text="Удержание"
							Visibility="{Binding HasRunTime,
						                                Converter={StaticResource BoolToVisibilityConverter}}" />
						<TextBlock
							Margin="2"
							Foreground="White"
							Text="Время хода"
							Visibility="{Binding HasRunTime,
						                                Converter={StaticResource InversedBoolToVisibilityConverter}}" />
						<StackPanel Orientation="Horizontal">
							<TextBlock
								Margin="2"
								FontSize="24"
								Text="{Binding State.HoldDelay}" />
							<TextBlock
								Margin="2"
								FontSize="24"
								Text="Сек" />
						</StackPanel>
					</StackPanel>
					<StackPanel Visibility="{Binding HasOffDelay, Converter={StaticResource BoolToVisibilityConverter}}">
						<TextBlock
							Margin="2"
							Foreground="White"
							Text="Задержка на выключение" />
						<StackPanel Orientation="Horizontal">
							<TextBlock
								Margin="2"
								FontSize="24"
								Text="{Binding State.OffDelay}" />
							<TextBlock
								Margin="2"
								FontSize="24"
								Text="Сек" />
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</StackPanel>
		</Grid>
		<TabControl Grid.Row="1">
			<TabItem
				DataContext="{Binding DeviceCommandsViewModel}"
				Header="Управление"
				IsSelected="{Binding IsTriStateControl,
			                              Mode=OneWay}"
				Visibility="{Binding IsTriStateControl,
			                              Converter={StaticResource BoolToVisibilityConverter}}">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>
					<StackPanel
						Grid.Column="0"
						Margin="0 0 0 5"
						VerticalAlignment="Center"
						Orientation="Horizontal">
						<Image
							Width="16"
							Margin="2"
							Source="{Binding ControlRegime,
						                        Converter={StaticResource DeviceControlRegimeToIconConverter}}" />
						<TextBlock
							Margin="2"
							HorizontalAlignment="Center"
							FontSize="16"
							FontWeight="Bold"
							Foreground="White"
							Text="Режим" />
						<TextBlock
							Margin="2"
							FontSize="16"
							FontWeight="Bold"
							Foreground="White"
							Text="{Binding ControlRegime,
						                          Converter={StaticResource DeviceControlRegimeToStringConverter}}" />
					</StackPanel>
					<Grid Grid.Row="1" Background="White">
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>
						<StackPanel Grid.Column="0">
							<Button
								Width="200"
								Height="50"
								Margin="2"
								Command="{Binding SetAutomaticStateCommand}"
								Content="Автоматика" />
							<Button
								Width="200"
								Height="50"
								Margin="2"
								Command="{Binding SetManualStateCommand}"
								Content="Ручное" />
							<Button
								Width="200"
								Height="50"
								Margin="2"
								Command="{Binding SetIgnoreStateCommand}"
								Content="Отключение" />
						</StackPanel>
						<StackPanel Grid.Column="1" IsEnabled="{Binding IsControlRegime}">
							<ItemsControl ItemsSource="{Binding DeviceExecutableCommands}">
								<ItemsControl.ItemTemplate>
									<DataTemplate>
										<Button
											Width="200"
											Height="50"
											Margin="2"
											Command="{Binding ExecuteControlCommand}"
											Content="{Binding Name}" />
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
						</StackPanel>
					</Grid>
				</Grid>
			</TabItem>
			<TabItem
				DataContext="{Binding DeviceCommandsViewModel}"
				Header="Управление"
				IsSelected="{Binding IsBiStateControl,
			                              Mode=OneWay}"
				Visibility="{Binding IsBiStateControl,
			                              Converter={StaticResource BoolToVisibilityConverter}}">
				<Grid Background="White">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<Button
						Grid.Row="0"
						Width="200"
						Height="50"
						Margin="2"
						VerticalAlignment="Top"
						Command="{Binding SetAutomaticStateCommand}"
						Content="Снять отключение" />
					<Button
						Grid.Row="1"
						Width="200"
						Height="50"
						Margin="2"
						VerticalAlignment="Top"
						Command="{Binding SetIgnoreStateCommand}"
						Content="Отключение" />
					<Button
						Grid.Row="2"
						Width="200"
						Height="50"
						Margin="2"
						Command="{Binding ResetCommand}"
						Content="Сбросить"
						Visibility="{Binding HasReset,
					                             Converter={StaticResource BoolToVisibilityConverter}}" />
				</Grid>
			</TabItem>
			<TabItem Header="Свойства" IsSelected="{Binding CanNotControl, Mode=OneWay}">
				<ScrollViewer VerticalScrollBarVisibility="Auto">
					<ItemsControl Background="White" Padding="2">
						<ItemsControl.Items>
							<StackPanel Margin="2" Orientation="Horizontal">
								<TextBlock
									Width="110"
									HorizontalAlignment="Right"
									VerticalAlignment="Center"
									FontWeight="Bold"
									Text="Устройство: " />
								<WrapPanel>
									<TextBlock>
										<Hyperlink Command="{Binding ShowCommand}" Style="{StaticResource HyperlinkStyle2}">
											<StackPanel Orientation="Horizontal">
												<Image Width="16" Source="{Binding Device.Driver.ImageSource}" />
												<TextBlock
													Margin="2"
													VerticalAlignment="Center"
													Text="{Binding Device.PresentationName}"
													TextWrapping="Wrap" />
											</StackPanel>
										</Hyperlink>
									</TextBlock>
								</WrapPanel>
							</StackPanel>

							<WrapPanel Margin="2">
								<TextBlock
									Width="110"
									HorizontalAlignment="Right"
									VerticalAlignment="Center"
									FontWeight="Bold"
									Text="Подключено к: " />
								<TextBlock>
									<Hyperlink Command="{Binding ShowParentCommand}" Style="{StaticResource HyperlinkStyle2}">
										<StackPanel Orientation="Horizontal">
											<Image Width="16" Source="{Binding Device.Parent.Driver.ImageSource}" />
											<TextBlock
												Margin="2"
												VerticalAlignment="Center"
												Text="{Binding Device.Parent.PresentationName}"
												TextWrapping="Wrap" />
										</StackPanel>
									</Hyperlink>
								</TextBlock>
								<WrapPanel.Style>
									<Style>
										<Style.Triggers>
											<DataTrigger Binding="{Binding Device.Parent}" Value="{x:Null}">
												<Setter Property="StackPanel.Visibility" Value="Collapsed" />
											</DataTrigger>
										</Style.Triggers>
									</Style>
								</WrapPanel.Style>
							</WrapPanel>

							<WrapPanel Margin="2">
								<TextBlock
									Width="110"
									HorizontalAlignment="Right"
									VerticalAlignment="Center"
									FontWeight="Bold"
									Text="Зона или Логика: " />
								<TextBlock>
									<Hyperlink Command="{Binding ShowZoneCommand}" Style="{StaticResource HyperlinkStyle2}">
										<StackPanel Orientation="Horizontal">
											<Image Width="16" Source="/Controls;component/Images/Zone.png" />
											<TextBlock
												Margin="2"
												VerticalAlignment="Center"
												Text="{Binding PresentationZone}"
												TextWrapping="Wrap" />
										</StackPanel>
									</Hyperlink>
								</TextBlock>
								<WrapPanel.Style>
									<Style>
										<Style.Triggers>
											<DataTrigger Binding="{Binding PresentationZone}" Value="{x:Null}">
												<Setter Property="StackPanel.Visibility" Value="Collapsed" />
											</DataTrigger>
											<DataTrigger Binding="{Binding PresentationZone}" Value="">
												<Setter Property="StackPanel.Visibility" Value="Collapsed" />
											</DataTrigger>
										</Style.Triggers>
									</Style>
								</WrapPanel.Style>
							</WrapPanel>

							<StackPanel Margin="2" Orientation="Horizontal">
								<WrapPanel>
									<TextBlock>
										<Hyperlink Command="{Binding ShowJournalCommand}" Style="{StaticResource HyperlinkStyle2}">
											<StackPanel Orientation="Horizontal">
												<Grid Width="16" Background="{DynamicResource BJournal}" />
												<TextBlock
													Margin="2"
													VerticalAlignment="Center"
													FontWeight="Bold"
													Text="Показать связанные события"
													TextWrapping="Wrap" />
											</StackPanel>
										</Hyperlink>
									</TextBlock>
								</WrapPanel>
							</StackPanel>

							<ItemsControl Margin="2" ItemsSource="{Binding PlanNames}">
								<ItemsControl.ItemTemplate>
									<DataTemplate>
										<StackPanel Orientation="Horizontal">
											<TextBlock
												Width="110"
												HorizontalAlignment="Right"
												VerticalAlignment="Center"
												FontWeight="Bold"
												Text="План: " />
											<TextBlock>
												<Hyperlink Command="{Binding ShowOnPlanCommand}" Style="{StaticResource HyperlinkStyle2}">
													<StackPanel Orientation="Horizontal">
														<Image
															Width="16"
															Margin="1"
															Source="/Controls;component/Images/CMap.png" />
														<TextBlock
															Margin="1"
															VerticalAlignment="Center"
															Text="{Binding Name}" />
													</StackPanel>
												</Hyperlink>
											</TextBlock>
										</StackPanel>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
						</ItemsControl.Items>
					</ItemsControl>
				</ScrollViewer>
			</TabItem>
			<TabItem Header="Параметры" Visibility="{Binding DevicePropertiesViewModel.HasAUParameters, Converter={StaticResource BoolToVisibilityConverter}}">
				<DataGrid CanUserSortColumns="True" ItemsSource="{Binding DevicePropertiesViewModel.Properties}">
					<DataGrid.Columns>
						<DataGridTemplateColumn Width="*" Header="Параметр">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock
										Margin="5 0 0 0"
										Text="{Binding Name}"
										ToolTip="{Binding Name}" />
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTemplateColumn Width="Auto" Header="Значение">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock
										Margin="5 0 0 0"
										Text="{Binding Value}"
										ToolTip="{Binding Value}" />
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
					</DataGrid.Columns>
				</DataGrid>
			</TabItem>
			<TabItem Header="Измерения" Visibility="{Binding HasMeasureParameters, Converter={StaticResource BoolToVisibilityConverter}}">
				<DataGrid CanUserSortColumns="True" ItemsSource="{Binding MeasureParameters}">
					<DataGrid.Columns>
						<DataGridTemplateColumn Width="*" Header="Параметр">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock
										Margin="5 0 0 0"
										Text="{Binding Name}"
										ToolTip="{Binding Name}" />
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
						<DataGridTemplateColumn Width="Auto" Header="Значение">
							<DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<TextBlock
										Margin="5 0 0 0"
										Text="{Binding StringValue}"
										ToolTip="{Binding StringValue}" />
								</DataTemplate>
							</DataGridTemplateColumn.CellTemplate>
						</DataGridTemplateColumn>
					</DataGrid.Columns>
				</DataGrid>
			</TabItem>
		</TabControl>
	</Grid>
</UserControl>