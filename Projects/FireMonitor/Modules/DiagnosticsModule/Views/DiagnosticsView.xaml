<UserControl
	x:Class="DiagnosticsModule.Views.DiagnosticsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="300"
	d:DesignWidth="900"
	mc:Ignorable="d">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/Controls;component/Themes/StrazhTheme.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<Grid Margin="2" Background="{StaticResource BaseWindowBackgroundBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TabControl>
			<TabItem Header="Управление">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<Button
						Width="100"
						Margin="2"
						Command="{Binding CheckHaspCommand}"
						Content="Проверить HASP" />
					<Button
						Grid.Column="1"
						Width="250"
						Margin="2"
						Command="{Binding TestCommand}"
						Content="Сгенерировать графики  сотрудников" />
					<Button
						Grid.Column="2"
						Width="250"
						Margin="2"
						Command="{Binding SKDDataCommand}"
						Content="Сгенерировать тестовые данные" />
					<Button
						Grid.Column="3"
						Width="100"
						Margin="2"
						Command="{Binding GenerateEmployeeDaysCommand}"
						Content="GenerateEmployeeDays" />
					<DockPanel Grid.Row="1" Grid.Column="1">
						<TextBlock
							Margin="5"
							VerticalAlignment="Center"
							Foreground="White"
							Text="Введите UID зоны"
							TextWrapping="Wrap" />
						<TextBox
							Width="100"
							Margin="5"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							Text="{Binding ZoneUID}" />
					</DockPanel>
					<DockPanel Grid.Row="1" Grid.Column="2">
						<TextBlock
							Margin="5"
							VerticalAlignment="Center"
							Foreground="White"
							Text="Введите количество сотрудников"
							TextWrapping="Wrap" />
						<TextBox
							Width="100"
							Margin="5"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							Text="{Binding EmployeeCount,
						                        FallbackValue=0}" />
					</DockPanel>
				</Grid>
			</TabItem>
			<TabItem Header="Основные">
				<WrapPanel />
			</TabItem>
		</TabControl>
		<ScrollViewer Grid.Row="1" Margin="2">
			<TextBox Margin="2" Text="{Binding Text}" />
		</ScrollViewer>
	</Grid>
</UserControl>