<UserControl
	x:Class="DiagnosticsModule.Views.DiagnosticsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Grid Margin="2">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TabControl Grid.Row="0">
			<TabItem Header="Управление">
				<WrapPanel>
					<Button
						Width="200"
						Margin="2"
						Command="{Binding CheckHaspCommand}"
						Content="Проверить HASP" />
					<Button
						Width="200"
						Margin="2"
						Command="{Binding TestCommand}"
						Content="Сгенерировать графики  сотрудников" />
					<Button
						Width="200"
						Margin="2"
						Command="{Binding SKDDataCommand}"
						Content="Сгенерировать тестовые данные" />
					<Button
						Width="200"
						Margin="2"
						Command="{Binding GenerateEmployeeDaysCommand}"
						Content="GenerateEmployeeDays" />
				</WrapPanel>
			</TabItem>
			<TabItem Header="Основные">
				<WrapPanel />
			</TabItem>
		</TabControl>
		<ScrollViewer Grid.Row="1" Margin="2">
			<TextBox Margin="2" Text="{Binding Text}" />
		</ScrollViewer>
	</Grid>
</UserControl>