<UserControl
	x:Class="SKDModule.Views.PositionsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Views="clr-namespace:SKDModule.Views"
	xmlns:ctr="clr-namespace:Controls.ListViewLayoutManager;assembly=Controls"
	xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
	xmlns:viewModel="clr-namespace:SKDModule.ViewModels"
	xmlns:langCommon="clr-namespace:Localization.SKD.Common;assembly=Localization">
	<UserControl.Resources>
		<viewModel:PositionViewModelNameComparer x:Key="PositionViewModelNameComparer" />
		<viewModel:PositionViewModelDescriptionComparer x:Key="PositionViewModelDescriptionComparer" />
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" MinHeight="200" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" MinHeight="200" />
		</Grid.RowDefinitions>
		<tree:TreeList
			Name="_treeList"
			Focusable="True"
			ctr:ListViewLayoutManager.Enabled="True"
			ItemActivatedCommand="{Binding EditCommand}"
			SelectedTreeNode="{Binding SelectedItem}"
			Source="{Binding Organisations, Mode=OneWay}"
			tree:SortBehavior.CanUserSortColumns="True"
			tree:SortBehavior.DefaultSortComparer="{StaticResource PositionViewModelNameComparer}">
			<tree:TreeList.View>
				<GridView>
					<GridViewColumn
						Width="300"
						Header="{x:Static langCommon:CommonResources.Name}"
						tree:SortBehavior.SortComparer="{StaticResource PositionViewModelNameComparer}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Image
										Width="16"
										Margin="1 0"
										VerticalAlignment="Center"
										Source="/Controls;component/Images/Organisation.png"
										Visibility="{Binding IsOrganisation,
									                            Converter={StaticResource BoolToVisibilityConverter}}" />
									<Image
										Width="16"
										Margin="1 0"
										VerticalAlignment="Center"
										Source="/Controls;component/Images/Position.png"
										Visibility="{Binding IsOrganisation,
									                            Converter={StaticResource InversedBoolToVisibilityConverter}}" />
									<TextBlock Style="{StaticResource IsDeletedStyle}" Text="{Binding Name}" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn
						Width="200"
						Header="{x:Static langCommon:CommonResources.Note}"
						ctr:ProportionalColumn.Width="1"
						tree:SortBehavior.SortComparer="{StaticResource PositionViewModelDescriptionComparer}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<TextBlock Style="{StaticResource IsDeletedStyle}" Text="{Binding Description}" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</tree:TreeList.View>
		</tree:TreeList>
		<GridSplitter
			Grid.Row="1"
			Height="5"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Background="Transparent"
			Cursor="SizeNS" />
		<Views:EmployeeListView
			Grid.Row="2"
			DataContext="{Binding EmployeeListViewModel}"
			Visibility="{Binding DataContext.IsShowEmployeeList,
		                                             RelativeSource={RelativeSource AncestorType=UserControl},
		                                             Converter={StaticResource BoolToVisibilityConverter}}" />
	</Grid>
</UserControl>