<UserControl
	x:Class="SKDModule.PassCard.Views.PassCardView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:clientPlans="clr-namespace:Infrastructure.Client.Plans;assembly=Infrastructure.Client"
	xmlns:lang="clr-namespace:Localization.SKD.Views;assembly=Localization"
	MinWidth="500"
	MinHeight="500">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Border Background="{DynamicResource BackgroundBrush}">
			<DockPanel Margin="10">
				<StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <TextBlock Margin="2" VerticalAlignment="Center" Foreground="White" Text="{x:Static lang:CommonViews.PassCardTemplate}" />
					<ComboBox Width="200" DisplayMemberPath="Name" ItemsSource="{Binding PassCardTemplates}" SelectedItem="{Binding SelectedPassCardTemplate}" />
				</StackPanel>
				<clientPlans:PlanDesignerView />
			</DockPanel>
		</Border>
        <Button Grid.Row="1" Content="{x:Static lang:CommonViews.Printing}" Command="{Binding PrintCommand}" HorizontalAlignment="Right" Width="100" Margin="0 2 0 0" />
	</Grid>
</UserControl>