<UserControl x:Class="SKDModule.Views.ImportEmployeesFromCSVView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 Width="300" Height="175">
	<StackPanel>
		<TextBlock Margin="0 5" Foreground="White">Организация</TextBlock>
		<ComboBox Margin="0 5" ItemsSource="{Binding AvailableOrganisations}" SelectedItem="{Binding SelectedOrganisation}" DisplayMemberPath="Name"></ComboBox>
		<Button Margin="0 5" Command="{Binding SelectFileCommand}">Выбор файла</Button>
		<TextBlock Margin="0 5" Foreground="White" Text="{Binding StatusText}" />
		<Button Margin="0 5" Command="{Binding ImportCommand}">Импортировать</Button>
		<CheckBox Margin="0 5" Foreground="White" IsChecked="{Binding ShowErrors}">Отображать ошибки</CheckBox>
	</StackPanel>
</UserControl>
