<UserControl x:Class="SKDModule.PassCardDesigner.Views.PassCardTemplatePropertiesView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:extToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended" xmlns:xc="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" MinWidth="400" MinHeight="400">
	<TabControl Background="{DynamicResource AlternativeBackgroundBrush}">
		<TabItem Header="Основные">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Content="Название" />
				<Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Content="Примечание" />
				<Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Content="Ширина" />
				<Label Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Content="Высота" />
				<Label Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" Content="Цвет фона" />
				<Label Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" Content="Цвет границы" />
				<Label Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right" Content="Ширина границы" />
				<TextBox Grid.Row="0" Grid.Column="1" MaxLength="50" Margin="2" Text="{Binding Caption, UpdateSourceTrigger=PropertyChanged}" />
				<TextBox Grid.Row="1" Grid.Column="1" Margin="2" MaxLength="50" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />
				<extToolkit:IntegerUpDown Grid.Row="2" Grid.Column="1" Margin="2" Minimum="10" Value="{Binding Width, UpdateSourceTrigger=PropertyChanged}" />
				<extToolkit:IntegerUpDown Grid.Row="3" Grid.Column="1" Margin="2" Minimum="10" Value="{Binding Height, UpdateSourceTrigger=PropertyChanged}" />
				<xc:ColorPicker Grid.Row="4" Grid.Column="1" Margin="2" SelectedColor="{Binding BackgroundColor, UpdateSourceTrigger=PropertyChanged}" />
				<xc:ColorPicker Grid.Row="5" Grid.Column="1" Margin="2" SelectedColor="{Binding BorderColor, UpdateSourceTrigger=PropertyChanged}" />
				<extToolkit:IntegerUpDown Grid.Row="6" Grid.Column="1" Margin="2" Maximum="100" Minimum="0" Value="{Binding BorderThickness, UpdateSourceTrigger=PropertyChanged}" />
			</Grid>
		</TabItem>
		<TabItem Header="Изображение">
			<Grid DataContext="{Binding ImagePropertiesViewModel}">
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<ContentControl Grid.Column="0" Content="{Binding Image}" />
				<StackPanel Grid.Column="1">
					<Button Margin="2" Command="{Binding SelectPictureCommand}" Content="Выбрать картинку" />
					<Button Margin="2" Command="{Binding RemovePictureCommand}" Content="Очистить картинку" />
				</StackPanel>
			</Grid>
		</TabItem>
	</TabControl>

</UserControl>