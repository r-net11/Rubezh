<UserControl
	x:Class="SKDModule.PassCardDesigner.Views.TemplatePropertiesView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:extToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended"
	xmlns:xc="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
	xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
	xmlns:controls="clr-namespace:SKDModule.PassCardDesigner.Views"
	MinWidth="650"
	MaxWidth="500"
	MinHeight="510"
	MaxHeight="510">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/Controls;component/Themes/StrazhTheme.xaml" />
				<ResourceDictionary Source="pack://application:,,,/Controls;component/Themes/VerticalSeparatorStyle.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid x:Name="BaseInformation">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<TextBlock
					Foreground="White"
					Text="Название"
					VerticalAlignment="Center"
					HorizontalAlignment="Right"
					Margin="5"/>
				<TextBox
					Grid.Column="1"
					VerticalAlignment="Center"
					Text="{Binding PassCardTemplate.Caption}"
					Margin="5"/>
				<TextBlock
					Grid.Row="1"
					Foreground="White"
					VerticalAlignment="Center"
					HorizontalAlignment="Right"
					Text="Примечание"
					Margin="5"/>
				<TextBox
					Grid.Row="1"
					Grid.Column="1"
					Text="{Binding PassCardTemplate.Description}"
					VerticalAlignment="Center"
					Margin="5"/>
			</Grid>
			<Grid Grid.Column="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<TextBlock
					Foreground="White"
					VerticalAlignment="Center"
					HorizontalAlignment="Right"
					Text="Ширина, мм"
					Margin="5"/>
				<extToolkit:IntegerUpDown
					Grid.Column="1"
					Margin="5"
					Minimum="10"
					VerticalAlignment="Center"
					Value="{Binding PassCardTemplate.Width, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
				<TextBlock
					Grid.Row="1"
					Foreground="White"
					Text="Высота, мм"
					VerticalAlignment="Center"
					HorizontalAlignment="Right"
					Margin="5"/>
				<extToolkit:IntegerUpDown
					Grid.Column="1"
					Grid.Row="1"
					Margin="5"
					VerticalAlignment="Center"
					Minimum="10"
					Value="{Binding PassCardTemplate.Height, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
			</Grid>
		</Grid>
		<Separator
			Grid.Row="1"
			Style="{x:Null}"
			Background="White"
			Height="1"
			Margin="20 10"/>
		<Grid
			x:Name="Images"
			Grid.Row="2">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<StackPanel
				Grid.Column="2"
				Orientation="Horizontal">
				<TextBlock
					Text="Обратная сторона"
					Foreground="White"
					Margin="5"
					VerticalAlignment="Center"/>
				<CheckBox
					Margin="5"
					VerticalAlignment="Center"
					IsChecked="{Binding PassCardTemplate.IsDualTemplateEnabled}"/>
			</StackPanel>
			<controls:ImageViewerControl
				Grid.Row="1"
				IsFront="True"
				DataContext="{Binding PassCardTemplate.Front}"/>
			<Separator
				Grid.Column="1"
				Grid.RowSpan="2"
				Style="{StaticResource VerticalSeparatorStyle}"
				Height="1"
				Background="White"
				Margin="10"/>
			<ContentControl
				Grid.Column="2"
				Grid.Row="1"
				IsEnabled="{Binding PassCardTemplate.IsDualTemplateEnabled}">
				<controls:ImageViewerControl DataContext="{Binding PassCardTemplate.Back}"/>
			</ContentControl>
		</Grid>
	</Grid>
</UserControl>