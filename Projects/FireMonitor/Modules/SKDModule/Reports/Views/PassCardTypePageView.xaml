<UserControl x:Class="SKDModule.Reports.Views.PassCardTypePageView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<UserControl.Resources>
		<Style BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="{x:Type CheckBox}">
			<Setter Property="Foreground" Value="White" />
			<Setter Property="Margin" Value="2" />
		</Style>
	</UserControl.Resources>
	<Grid Margin="20">
        <StackPanel>
		<CheckBox Content="Активные пропуска" IsChecked="{Binding PassCardActive}" />
            <StackPanel IsEnabled="{Binding PassCardActive, Converter={StaticResource InverseBooleanConverter}}" Margin="30 0 0 0">
                <CheckBox Content="Постоянный" IsChecked="{Binding PassCardPermanent}" />
                <CheckBox Content="Временный" IsChecked="{Binding PassCardTemprorary}" />
                <CheckBox Content="Разовый" IsChecked="{Binding PassCardOnceOnly}" />
                <CheckBox Content="Принуждение" IsChecked="{Binding PassCardForcing}" />
                <CheckBox Content="Заблокированный" IsChecked="{Binding PassCardLocked}" />
            </StackPanel>
            <CheckBox Content="Деактивированный" IsChecked="{Binding PassCardInactive}" Visibility="{Binding AllowInactive, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>