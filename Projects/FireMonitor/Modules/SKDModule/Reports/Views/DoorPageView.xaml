<UserControl
	x:Class="SKDModule.Reports.Views.DoorPageView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewModels="clr-namespace:SKDModule.ViewModels"
	d:DesignHeight="600"
	d:DesignWidth="600"
	mc:Ignorable="d">
	<UserControl.Resources>
		<viewModels:DoorPageViewModelNameComparer x:Key="DoorPageViewModelNameComparer" />
		<viewModels:DoorPageViewModelDescriptionComparer x:Key="DoorPageViewModelDescriptionComparer" />
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<DataGrid
			ItemsSource="{Binding Doors}"
			CanUserSortColumns="True">
			<DataGrid.Columns>
				<DataGridTemplateColumn Header="Название" SortMemberPath="Item.Name" Width="0.5*">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<CheckBox
									Margin="2"
									IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
								<Image
									Width="16"
									Margin="1 0"
									VerticalAlignment="Center"
									Source="/Controls;component/Images/Door.png" />
								<TextBlock Text="{Binding Item.Name}" />
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<DataGridTemplateColumn Header="Примечание" SortMemberPath="Item.Description" Width="*">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Item.Description}" />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
		<StackPanel
			Grid.Row="1"
			Orientation="Horizontal">
			<ToolBarButton
				Command="{Binding SelectAllCommand}"
				ImageSource="SelectAll"
				ToolTip="Выделить всё" />
			<ToolBarButton
				Command="{Binding SelectNoneCommand}"
				ImageSource="SelectNone"
				ToolTip="Снять все выделения" />
		</StackPanel>
	</Grid>
</UserControl>
