<UserControl
	x:Class="SKDModule.Reports.Views.SchedulePageView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:component="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    mc:Ignorable="d"
    d:DesignHeight="300"
	d:DesignWidth="300">
	<UserControl.Resources>
		<CollectionViewSource x:Key="cvsSchedules" Source="{Binding Schedules}">
			<CollectionViewSource.SortDescriptions>
				<component:SortDescription PropertyName="Item.Name" />
			</CollectionViewSource.SortDescriptions>
		</CollectionViewSource>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<DataGrid
			CanUserSortColumns="True"
			ItemsSource="{Binding Source={StaticResource cvsSchedules}}">
			<DataGrid.Columns>
				<DataGridTemplateColumn Header="Название" Width="0.5*" SortMemberPath="Item.Name">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<CheckBox
									Margin="2"
									IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
								<Image
									Width="16"
									Margin="1 0"
									VerticalAlignment="Center"
									Source="/Controls;component/Images/Shedule.png" />
								<TextBlock
									Text="{Binding Item.Name}"
									VerticalAlignment="Center"/>
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<DataGridTemplateColumn Header="Примечание" Width="*" SortMemberPath="Item.Description">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Item.Description}" VerticalAlignment="Center" />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
		<StackPanel Grid.Row="1" Orientation="Horizontal">
			<ToolBarButton Command="{Binding SelectAllCommand}" ImageSource="SelectAll" ToolTip="Выбрать все" />
			<ToolBarButton Command="{Binding SelectNoneCommand}" ImageSource="SelectNone" ToolTip="Отменить выбор" />
		</StackPanel>
	</Grid>
</UserControl>
