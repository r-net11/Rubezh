<UserControl
	x:Class="SKDModule.Reports.Views.PlacementMainPageView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviours="clr-namespace:Controls.Behaviours;assembly=Controls">
	<UserControl.Resources>
		<SolidColorBrush x:Key="WatermarkColor" Color="LightGray"/>
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="2*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TextBlock
			Margin="2"
			HorizontalAlignment="Right"
			VerticalAlignment="Center"
			Foreground="White"
			Text="Использовать текущую дату и время" />
		<CheckBox
			Grid.Column="1"
			Margin="2"
			VerticalAlignment="Center"
			IsChecked="{Binding UseCurrentDate}"
			HorizontalAlignment="Left"/>
		<TextBlock
			Grid.Row="1"
			Margin="2"
			HorizontalAlignment="Right"
			VerticalAlignment="Center"
			Foreground="White"
			IsEnabled="{Binding UseCurrentDate, Converter={StaticResource InverseBooleanConverter}}"
			Text="Дата" />
		<DatePicker
			Grid.Row="1"
			Grid.Column="1"
			behaviours:DatePickerCustomWatermark.Watermark="{StaticResource WatermarkColor}"
			behaviours:DatePickerCustomWatermark.WatermarkText="дд.мм.ггг"
			VerticalAlignment="Center"
			Validation.ErrorTemplate="{x:Null}"
			HorizontalAlignment="Left"
			SelectedDate="{Binding ReportDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
			IsEnabled="{Binding UseCurrentDate, Converter={StaticResource InverseBooleanConverter}}"
			Width="140"
			Margin="2" />
		<TextBlock
			Grid.Row="2"
			Text="Время"
			VerticalAlignment="Center"
			Foreground="White"
			HorizontalAlignment="Right"
			IsEnabled="{Binding UseCurrentDate, Converter={StaticResource InverseBooleanConverter}}"
			Margin="2"/>
		<TimePicker
			Grid.Row="2"
			Grid.Column="1"
			Validation.ErrorTemplate="{x:Null}"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			TimeSpan="{Binding ReportTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
			IsEnabled="{Binding UseCurrentDate, Converter={StaticResource InverseBooleanConverter}}"
			Margin="2" />
	</Grid>
</UserControl>