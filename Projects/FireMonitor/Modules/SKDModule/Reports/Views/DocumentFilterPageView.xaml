<UserControl
	x:Class="SKDModule.Reports.Views.DocumentFilterPageView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:lang="clr-namespace:Localization.SKD.Views;assembly=Localization">
	<UserControl.Resources>
		<Style BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="{x:Type CheckBox}">
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="Margin" Value="5" />
		</Style>
	</UserControl.Resources>
	<StackPanel Margin="10" Orientation="Vertical">
        <CheckBox IsChecked="{Binding Overtime}" Content="{x:Static lang:CommonViews.DocumentOvertime}" />
        <CheckBox IsChecked="{Binding Presence}" Content="{x:Static lang:CommonViews.DocumentVisiting}" />
        <CheckBox IsChecked="{Binding Abcense}" Content="{x:Static lang:CommonViews.NotReasonMiss}" />
        <CheckBox IsChecked="{Binding AbcenseReasonable}" Content="{x:Static lang:CommonViews.ReasonMiss}" />
	</StackPanel>
</UserControl>
