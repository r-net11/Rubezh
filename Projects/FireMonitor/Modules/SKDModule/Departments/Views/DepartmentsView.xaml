<UserControl
	x:Class="SKDModule.Views.DepartmentsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Views="clr-namespace:SKDModule.Views"
	xmlns:ctr="clr-namespace:Controls.ListViewLayoutManager;assembly=Controls"
	xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
	xmlns:viewModel="clr-namespace:SKDModule.ViewModels">
	<UserControl.Resources>
		<viewModel:DepartmentViewModelNameComparer x:Key="DepartmentViewModelNameComparer" />
		<viewModel:DepartmentViewModelDescriptionComparer x:Key="DepartmentViewModelDescriptionComparer" />
		<viewModel:DepartmentViewModelPhoneComparer x:Key="DepartmentViewModelPhoneComparer" />
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" MinHeight="200" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" MinHeight="200" />
		</Grid.RowDefinitions>
		<tree:TreeList
			Name="_treeList"
			ctr:ListViewLayoutManager.Enabled="True"
			Focusable="True"
			ItemActivatedCommand="{Binding EditCommand}"
			SelectedTreeNode="{Binding SelectedItem}"
			Source="{Binding Organisations}"
			tree:SortBehavior.CanUserSortColumns="True">
			<tree:TreeList.View>
				<GridView>
					<GridViewColumn
						Width="350"
						Header="Название"
						tree:SortBehavior.SortComparer="{StaticResource DepartmentViewModelNameComparer}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Image
										Width="16"
										Margin="1 0"
										VerticalAlignment="Center"
										Source="/Controls;component/Images/Organisation.png"
										Visibility="{Binding IsOrganisation,
									                            Converter={StaticResource BoolToVisibilityConverter}}" />
									<Image
										Width="16"
										Margin="1 0"
										VerticalAlignment="Center"
										Source="/Controls;component/Images/Department.png"
										Visibility="{Binding IsOrganisation,
									                            Converter={StaticResource InversedBoolToVisibilityConverter}}" />
									<TextBlock Style="{StaticResource IsDeletedStyle}" Text="{Binding Name}" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn
						Width="250"
						Header="Примечание"
						tree:SortBehavior.SortComparer="{StaticResource DepartmentViewModelDescriptionComparer}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<TextBlock Style="{StaticResource IsDeletedStyle}" Text="{Binding Description}" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn
						Width="200"
						Header="Телефон"
						ctr:ProportionalColumn.Width="1"
						tree:SortBehavior.SortComparer="{StaticResource DepartmentViewModelPhoneComparer}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<TextBlock Style="{StaticResource IsDeletedStyle}" Text="{Binding Phone}" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</tree:TreeList.View>
		</tree:TreeList>
		<GridSplitter
			Grid.Row="1"
			Height="5"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Background="Transparent"
			Cursor="SizeNS" />
		<Views:DepartmentEmployeeListView
			Grid.Row="2"
			DataContext="{Binding EmployeeListViewModel}"
			Visibility="{Binding DataContext.IsShowEmployeeList,
		                                                       RelativeSource={RelativeSource AncestorType=UserControl},
		                                                       Converter={StaticResource BoolToVisibilityConverter}}" />
	</Grid>
</UserControl>