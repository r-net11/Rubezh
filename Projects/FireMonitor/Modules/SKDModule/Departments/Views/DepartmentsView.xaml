<UserControl x:Class="SKDModule.Views.DepartmentsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
			 xmlns:Controls="clr-namespace:Controls;assembly=Controls"
			 xmlns:viewModel="clr-namespace:SKDModule.ViewModels"
			 xmlns:Views="clr-namespace:SKDModule.Views">
	<UserControl.Resources>
		<viewModel:DepartmentViewModelNameComparer x:Key="DepartmentViewModelNameComparer" />
		<viewModel:DepartmentViewModelDescriptionComparer x:Key="DepartmentViewModelDescriptionComparer" />
    </UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" MinHeight="200" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" MinHeight="200" />
		</Grid.RowDefinitions>
        <tree:TreeList Name="_treeList" Grid.Row="0" Grid.Column="0" Focusable="True" tree:SortBehavior.CanUserSortColumns="True" 
                       Source="{Binding Organisations}" SelectedTreeNode="{Binding SelectedItem}" ItemActivatedCommand="{Binding EditCommand}" >
			<tree:TreeList.View>
                <GridView>
					<GridViewColumn Header="Название" ListViewLayoutManager.StarWidth="1" tree:SortBehavior.SortComparer="{StaticResource DepartmentViewModelNameComparer}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
                                    <Image Width="16" Source="/Controls;component/Images/Organisation.png"  VerticalAlignment="Center" Margin="1 0" 
                                           Visibility="{Binding IsOrganisation, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    <Image Width="16" Source="/Controls;component/Images/Department.png" VerticalAlignment="Center" Margin="1 0" 
                                           Visibility="{Binding IsOrganisation, Converter={StaticResource InversedBoolToVisibilityConverter}}" />
									<TextBlock Text="{Binding Name}" Style="{StaticResource IsDeletedStyle}" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
                    <GridViewColumn Header="Примечание" ListViewLayoutManager.StarWidth="1" tree:SortBehavior.SortComparer="{StaticResource DepartmentViewModelDescriptionComparer}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="{Binding Description}" Style="{StaticResource IsDeletedStyle}" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="Телефон" ListViewLayoutManager.StarWidth="1">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="{Binding Phone}" Visibility="{Binding IsOrganisation, Converter={StaticResource InversedBoolToVisibilityConverter}}" Style="{StaticResource IsDeletedStyle}" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
                </GridView>
            </tree:TreeList.View>
		</tree:TreeList>
        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" Cursor="SizeNS" />
		<Views:DepartmentEmployeeListView Grid.Row="2" DataContext="{Binding SelectedItem.EmployeeListViewModel}" 
			  Visibility="{Binding DataContext.SelectedItem.IsOrganisation, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InversedBoolToVisibilityConverter}}" />
	</Grid>
</UserControl>