<UserControl
	x:Class="SKDModule.Views.DepartmentDetailsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:Controls;assembly=Controls"
	xmlns:converters="clr-namespace:Controls.Converters;assembly=Controls"
	MinWidth="450"
	MinHeight="400">
	<UserControl.Resources>
		<converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
		<converters:InversedBoolToVisibilityConverter x:Key="InversedBoolToVisibilityConverter"/>
	</UserControl.Resources>
	<TabControl>
		<TabItem Header="Основные">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<!-- Название -->
				<TextBlock
					Grid.Row="0"
					Grid.Column="0"
					Text="Название"
					Foreground="White"
					HorizontalAlignment="Right"
					VerticalAlignment="Center"/>
				<TextBox
					MaxLength="50"
					Grid.Row="0"
					Grid.Column="1"
					Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
					Margin="2" />

				<!-- Примечание -->
				<TextBlock
					Grid.Row="1"
					Grid.Column="0"
					Text="Примечание"
					Foreground="White"
					HorizontalAlignment="Right"
					VerticalAlignment="Center"/>
				<TextBox
					Grid.Row="1"
					Grid.Column="1"
					MaxLength="50"
					Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
					Margin="2" />

				<!-- Руководитель -->
				<TextBlock
					Grid.Row="2"
					Grid.Column="0"
					Text="Руководитель"
					HorizontalAlignment="Right"
					VerticalAlignment="Center"
					Foreground="White"
					Visibility="{Binding IsNew, Converter={StaticResource InversedBoolToVisibilityConverter}}" />
				<StackPanel
					Grid.Row="2"
					Grid.Column="1"
					Orientation="Horizontal"
					VerticalAlignment="Center"
					Visibility="{Binding IsNew, Converter={StaticResource InversedBoolToVisibilityConverter}}"
					Margin="2">
					<TextBlock VerticalAlignment="Center">
						<Hyperlink Command="{Binding ChiefViewModel.SelectCommand}" Style="{StaticResource HyperlinkStyle}">
							<TextBlock
								Text="{Binding ChiefViewModel.SelectedEmployee.Name}"
								TextDecorations="Underline" />
							<TextBlock>
								<TextBlock.Style>
									<Style>
										<Style.Triggers>
											<DataTrigger Binding="{Binding ChiefViewModel.HasSelected}" Value="false">
												<Setter Property="TextBlock.Text" Value="Нажмите для выбора" />
											</DataTrigger>
										</Style.Triggers>
									</Style>
								</TextBlock.Style>
							</TextBlock>
						</Hyperlink>
					</TextBlock>
				</StackPanel>

				<!-- Родительское подразделение -->
				<TextBlock
					Grid.Row="3"
					Grid.Column="0"
					Text="Родительское подразделение"
					Foreground="White"
					HorizontalAlignment="Right"
					VerticalAlignment="Center" />
				<StackPanel
					Grid.Row="3"
					Grid.Column="1"
					Orientation="Horizontal"
					VerticalAlignment="Center"
					Margin="2" >
					<TextBlock VerticalAlignment="Center">
						<Hyperlink Command="{Binding SelectDepartmentCommand}" Style="{StaticResource HyperlinkStyle}">
							<TextBlock
								Text="{Binding SelectedDepartment.Name}"
								TextDecorations="Underline" />
								<TextBlock>
									<TextBlock.Style>
										<Style>
											<Style.Triggers>
												<DataTrigger Binding="{Binding HasSelectedDepartment}" Value="false">
													<Setter Property="TextBlock.Text" Value="Нажмите для выбора" />
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</TextBlock.Style>
								</TextBlock>
							</Hyperlink>
						</TextBlock>
				</StackPanel>

				<!-- Телефон -->
				<TextBlock
					Grid.Row="4"
					Grid.Column="0"
					Text="Телефон"
					Foreground="White"
					HorizontalAlignment="Right"
					VerticalAlignment="Center"/>
				<TextBox
					Grid.Row="4"
					Grid.Column="1"
					MaxLength="50"
					Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
					Margin="2" />

				<!-- Шаблон доступа -->
				<TextBlock
					Grid.Row="5"
					Grid.Column="0"
					Text="Шаблон доступа"
					Foreground="White"
					HorizontalAlignment="Right"
					VerticalAlignment="Center" />
				<StackPanel
					Grid.Row="5"
					Grid.Column="1"
					Orientation="Horizontal"
					VerticalAlignment="Center"
					Margin="2">
					<TextBlock VerticalAlignment="Center">
						<Hyperlink Command="{Binding SelectAccessTemplateCommand}" Style="{StaticResource HyperlinkStyle}">
							<TextBlock
								Text="{Binding SelectedAccessTemplate.Name}"
								TextDecorations="Underline"
								Visibility="{Binding HasSelectedAccessTemplate, Converter={StaticResource BoolToVisibilityConverter}}" />
							<TextBlock
								Text="Нажмите для выбора"
								Visibility="{Binding HasSelectedAccessTemplate, Converter={StaticResource InversedBoolToVisibilityConverter}}"/>
						</Hyperlink>
					</TextBlock>
				</StackPanel>

				<!-- График работы -->
				<TextBlock
					Grid.Row="6"
					Grid.Column="0"
					Text="График работы"
					Foreground="White"
					HorizontalAlignment="Right"
					VerticalAlignment="Center" />
				<StackPanel
					Grid.Row="6"
					Grid.Column="1"
					Orientation="Horizontal"
					VerticalAlignment="Center"
					Margin="2">
					<TextBlock VerticalAlignment="Center">
						<Hyperlink Command="{Binding SelectScheduleCommand}" Style="{StaticResource HyperlinkStyle}">
							<TextBlock
								Text="{Binding SelectedSchedule.Name}"
								TextDecorations="Underline"
								Visibility="{Binding HasSelectedSchedule, Converter={StaticResource BoolToVisibilityConverter}}" />
							<TextBlock
								Text="Нажмите для выбора"
								Visibility="{Binding HasSelectedSchedule, Converter={StaticResource InversedBoolToVisibilityConverter}}"/>
						</Hyperlink>
					</TextBlock>
				</StackPanel>

				<!-- Шаблон пропуска -->
				<TextBlock
					Grid.Row="7"
					Grid.Column="0"
					Text="Шаблон пропуска"
					Foreground="White"
					HorizontalAlignment="Right"
					VerticalAlignment="Center" />
				<StackPanel
					Grid.Row="7"
					Grid.Column="1"
					Orientation="Horizontal"
					VerticalAlignment="Center"
					Margin="2">
					<TextBlock VerticalAlignment="Center">
						<Hyperlink Command="{Binding SelectPassCardTemplateCommand}" Style="{StaticResource HyperlinkStyle}">
							<TextBlock
								Text="{Binding SelectedPassCardTemplate.Caption}"
								TextDecorations="Underline"
								Visibility="{Binding HasSelectedPassCardTemplate, Converter={StaticResource BoolToVisibilityConverter}}" />
							<TextBlock
								Text="Нажмите для выбора"
								Visibility="{Binding HasSelectedPassCardTemplate, Converter={StaticResource InversedBoolToVisibilityConverter}}"/>
						</Hyperlink>
					</TextBlock>
				</StackPanel>
			</Grid>
		</TabItem>
		<TabItem Header="Логотип">
			<controls:PhotoSelectation Data="{Binding PhotoData}" />
		</TabItem>
	</TabControl>
</UserControl>