<UserControl x:Class="SKDModule.Views.DepartmentParamsApplyableToEmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:langCommon="clr-namespace:Localization.SKD.Common;assembly=Localization"
             xmlns:lang="clr-namespace:Localization.SKD.Views;assembly=Localization"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<!-- Панель настроек, применяемых для сотрудника/посетителя -->
	<StackPanel Visibility="{Binding ShowApplyToEmployeeSettings, Converter={StaticResource BoolToVisibilityConverter}}">
		<TextBlock
				Text="{x:Static lang:CommonViews.AcceptForEmplByDef}"
				Foreground="{DynamicResource ForegroundColorLight}"
				TextWrapping="Wrap"
				Margin="2"/>
		<CheckBox
				IsChecked="{Binding NeedApplyAccessTemplateToEmployee}"
				Margin="2">
			<TextBlock
					Text="{x:Static langCommon:CommonResources.AccessTemplate}"
					Foreground="{DynamicResource ForegroundColorLight}"
					Margin="2"/>
		</CheckBox>
		<CheckBox
				Visibility="{Binding IsEmployee, Converter={StaticResource BoolToVisibilityConverter}}"
				IsChecked="{Binding NeedApplyScheduleToEmployee}"
				Margin="2">
			<TextBlock
					Text="{x:Static langCommon:CommonResources.WorkSchedule}"
					Foreground="{DynamicResource ForegroundColorLight}"
					Margin="2"/>
		</CheckBox>
	</StackPanel>
</UserControl>
