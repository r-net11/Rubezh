<UserControl
	x:Class="SKDModule.Views.ResetRepeatEnterConfirmationDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:Localization.SKD.Views;assembly=Localization"
    mc:Ignorable="d"
    Width="400"
	Height="150">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/Controls;component/XamlImages/Help.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.2*" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<StackPanel
			Background="{StaticResource Help}"
			Margin="10"
			VerticalAlignment="Top"
			Height="50"
			Width="50"/>
		<StackPanel
			Grid.Column="1"
			Margin="10">
			<TextBlock
				Foreground="White"
				TextWrapping="Wrap"
				Text="{x:Static lang:CommonViews.ResetAllAlert}" />
			<TextBlock
				TextWrapping="Wrap"
				Foreground="White"
				Margin="0 15"
				Text="{x:Static lang:CommonViews.ConfirmLimitReset}" />
		</StackPanel>
	</Grid>
</UserControl>
