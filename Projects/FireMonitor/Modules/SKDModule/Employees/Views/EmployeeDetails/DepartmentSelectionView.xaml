<UserControl
	x:Class="SKDModule.Views.DepartmentSelectionView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
    xmlns:Controls="clr-namespace:Controls;assembly=Controls"
	xmlns:viewModel="clr-namespace:SKDModule.ViewModels"
	xmlns:listViewLayoutManager="clr-namespace:Controls.ListViewLayoutManager;assembly=Controls"
	xmlns:langCommon="clr-namespace:Localization.SKD.Common;assembly=Localization"
	xmlns:lang="clr-namespace:Localization.SKD.Views;assembly=Localization"
	MinWidth="500" MinHeight="500">
	<UserControl.Resources>
		<viewModel:DepartmentSelectionItemViewModelNameComparer x:Key="DepartmentSelectionItemViewModelNameComparer"/>
	</UserControl.Resources>
	<Grid>
        <Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<tree:TreeList
			Focusable="True"
			Source="{Binding RootDepartments}"
			SelectedItem="{Binding SelectedDepartment}"
			listViewLayoutManager:ListViewLayoutManager.Enabled="True"
			UIBehavior.ShowSelectionMark="True"
			UIBehavior.IsActiveSelectionMark="True"
			tree:SortBehavior.CanUserSortColumns="True">
            <tree:TreeList.Resources>
                <InputBindingCollection x:Key="inputCollection" x:Shared="False">
                    <MouseBinding Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType={x:Type tree:TreeList}}}" MouseAction="LeftDoubleClick" />
                </InputBindingCollection>
            </tree:TreeList.Resources>
            <tree:TreeList.ItemContainerStyle>
                <Style BasedOn="{StaticResource {x:Type tree:TreeListItem}}" TargetType="{x:Type tree:TreeListItem}">
                    <Setter Property="Controls:Attach.InputBindings" Value="{StaticResource inputCollection}" />
                </Style>
            </tree:TreeList.ItemContainerStyle>
            <tree:TreeList.View>
				<GridView>
					<GridViewColumn
						Header="{x:Static langCommon:CommonResources.Name}"
						listViewLayoutManager:ProportionalColumn.Width="1"
						tree:SortBehavior.SortDirection="Ascending"
						tree:SortBehavior.SortComparer="{StaticResource DepartmentSelectionItemViewModelNameComparer}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Image Width="16" Source="/Controls;component/Images/Department.png" VerticalAlignment="Center" Margin="1 0 0 0" />
									<TextBlock Text="{Binding Department.Name}" VerticalAlignment="Center" Margin="2" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</tree:TreeList.View>
		</tree:TreeList>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="{x:Static lang:CommonViews.DepartCancel}" Command="{Binding ClearCommand}" Width="205" Margin="2" />
            <Button Content="{x:Static lang:CommonViews.NewDepatAdd}" Command="{Binding AddCommand}" Width="205" Margin="2" />
        </StackPanel>
	</Grid>
</UserControl>