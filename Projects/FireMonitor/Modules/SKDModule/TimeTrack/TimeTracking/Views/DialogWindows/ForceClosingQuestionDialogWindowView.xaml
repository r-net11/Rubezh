<UserControl
	x:Class="SKDModule.Views.ForceClosingQuestionDialogWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:Localization.SKD.Views;assembly=Localization"
    mc:Ignorable="d"
    d:DesignHeight="300"
	Width="400"
	Height="140"
	d:DesignWidth="300">
    <StackPanel Margin="10" Orientation="Vertical">
		<TextBlock
			Margin="0 5"
			Foreground="White"
			TextWrapping="Wrap">
			<Run Text="{x:Static lang:CommonViews.ForceCloseIntAlert}" />
			<LineBreak />
			<Run Text="{x:Static lang:CommonViews.SureWorkerLeftZoneIntervalClose}" />
		</TextBlock>
		<TextBlock
			Margin="0 5"
			Foreground="White"
			Text="{x:Static lang:CommonViews.LockedIntervalOpenAlert}" />
		<TextBlock
			Margin="0 5"
			Foreground="White"
			Text="{x:Static lang:CommonViews.ConfrimForceIntervalLock}" />
    </StackPanel>
</UserControl>
