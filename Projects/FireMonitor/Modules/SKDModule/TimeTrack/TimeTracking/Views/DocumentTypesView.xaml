<UserControl
	x:Class="SKDModule.Views.DocumentTypesView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
    xmlns:Controls="clr-namespace:Controls;assembly=Controls"
	xmlns:layout="clr-namespace:Controls.ListViewLayoutManager;assembly=Controls"
	MinWidth="500"
	MinHeight="500">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<StackPanel
			Orientation="Horizontal"
			Margin="2">
			<ToolBarButton
				Command="{Binding AddCommand}"
				ToolTip="Добавить"
				ImageSource="Add"  />
			<ToolBarButton
				Command="{Binding RemoveCommand}"
				ToolTip="Удалить"
				ImageSource="Delete"  />
			<ToolBarButton
				Command="{Binding EditCommand}"
				ToolTip="Редактировать"
				ImageSource="Edit"  />
		</StackPanel>
		<tree:TreeList
			Grid.Row="1"
			Focusable="True"
			SelectedTreeNode="{Binding SelectedDocumentType}"
			Source="{Binding Organisations}"
			Margin="2">
            <tree:TreeList.Resources>
                <InputBindingCollection x:Key="inputCollection" x:Shared="False">
                    <MouseBinding Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType={x:Type tree:TreeList}}}" MouseAction="LeftDoubleClick" />
                </InputBindingCollection>
            </tree:TreeList.Resources>
            <tree:TreeList.ItemContainerStyle>
                <Style BasedOn="{StaticResource {x:Type tree:TreeListItem}}" TargetType="{x:Type tree:TreeListItem}">
                    <Setter Property="Controls:Attach.InputBindings" Value="{StaticResource inputCollection}" />
                </Style>
            </tree:TreeList.ItemContainerStyle>
            <tree:TreeList.View>
				<GridView layout:ListViewLayoutManager.Enabled="True">
					<GridViewColumn Header="Название" layout:FixedColumn.Width="100">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Image Width="16" Source="/Controls;component/Images/Organisation.png" Visibility="{Binding IsOrganisation, Converter={StaticResource BoolToVisibilityConverter}}" VerticalAlignment="Center" Margin="1 0" />
									<Image Width="16" Source="/Controls;component/Images/Position.png" Visibility="{Binding IsOrganisation, Converter={StaticResource InversedBoolToVisibilityConverter}}" VerticalAlignment="Center" Margin="1 0" />
									<TextBlock Text="{Binding Name}">
										<TextBlock.Style>
											<Style TargetType="{x:Type TextBlock}">
												<Style.Triggers>
													<DataTrigger Binding="{Binding IsSystem}" Value="True">
														<Setter Property="Foreground" Value="#FF808080" />
													</DataTrigger>
												</Style.Triggers>
											</Style>
										</TextBlock.Style>
									</TextBlock>
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="Буквенный код">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding TimeTrackDocumentType.ShortName}" Margin="1" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="Числовой код">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding TimeTrackDocumentType.Code}" Margin="1" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="Тип" layout:ProportionalColumn.Width="1">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding TimeTrackDocumentType.DocumentType, Converter={StaticResource EnumToDescriptionConverter}}" Margin="1" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</tree:TreeList.View>
		</tree:TreeList>
	</Grid>
</UserControl>