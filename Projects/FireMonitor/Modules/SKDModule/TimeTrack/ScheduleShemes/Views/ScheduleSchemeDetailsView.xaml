<UserControl
	x:Class="SKDModule.Views.ScheduleSchemeDetailsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Width="350"
	Height="190">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TextBlock
			VerticalAlignment="Center"
			Margin="5"
			Foreground="White"
			Text="Название" />
		<TextBox
			Grid.Column="1"
			MaxLength="50"
			Margin="5"
			VerticalAlignment="Center"
			Text="{Binding Name,
		                        UpdateSourceTrigger=PropertyChanged}" />
		<TextBlock
			Grid.Row="1"
			Margin="5"
			VerticalAlignment="Center"
			Foreground="White"
			Text="Примечание" />
		<TextBox
			Grid.Row="1"
			MaxLength="50"
			Grid.Column="1"
			Margin="5"
			VerticalAlignment="Center"
			Text="{Binding Description,
		                        UpdateSourceTrigger=PropertyChanged}" />
		<TextBlock
			Grid.Row="2"
			Margin="5"
			VerticalAlignment="Center"
			Foreground="White"
			Text="Тип графика"
			Visibility="{Binding IsNew,
		                                Converter={StaticResource BoolToVisibilityConverter}}" />
		<ComboBox
			Grid.Row="2"
			Grid.Column="1"
			Margin="5"
			VerticalAlignment="Center"
			VerticalContentAlignment="Center"
			ItemsSource="{Binding ScheduleSchemeTypes}"
			SelectedItem="{Binding SelectedScheduleSchemeType}"
			Visibility="{Binding IsNew,
		                               Converter={StaticResource BoolToVisibilityConverter}}">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock VerticalAlignment="Center" Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<TextBlock
			Grid.Row="3"
			VerticalAlignment="Center"
			Margin="5"
			Foreground="White"
			Text="Дневной график"
			Visibility="{Binding CanSelectDayInterval,
		                                Converter={StaticResource BoolToVisibilityConverter}}" />
		<ComboBox
			Grid.Row="3"
			Grid.Column="1"
			Margin="5"
			VerticalAlignment="Center"
			VerticalContentAlignment="Center"
			ItemsSource="{Binding DayIntervals}"
			SelectedItem="{Binding SelectedDayInterval}"
			Visibility="{Binding CanSelectDayInterval,
		                               Converter={StaticResource BoolToVisibilityConverter}}">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
	</Grid>
</UserControl>