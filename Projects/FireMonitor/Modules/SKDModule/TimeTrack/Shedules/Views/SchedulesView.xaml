<UserControl
	x:Class="SKDModule.Views.SchedulesView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Controls="clr-namespace:Controls;assembly=Controls"
	xmlns:Converters="clr-namespace:SKDModule.Converters"
	xmlns:extToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended"
	xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
	xmlns:viewModel="clr-namespace:SKDModule.ViewModels"
	DataContextChanged="UserControl_DataContextChanged"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
	mc:Ignorable="d" 
	d:DesignHeight="250"
	d:DesignWidth="400">
	<UserControl.Resources>
		<viewModel:ScheduleViewModelNameComparer x:Key="ScheduleViewModelNameComparer" />
		<viewModel:ScheduleViewModelSchemeComparer x:Key="ScheduleViewModelSchemeComparer" />
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<tree:TreeList
			Name="_treeList"
			Source="{Binding Organisations}" 
			SelectedTreeNode="{Binding SelectedItem}" 
			ItemActivatedCommand="{Binding EditCommand}"
			Focusable="True" 
			tree:SortBehavior.CanUserSortColumns="True">
			<tree:TreeList.View>
				<GridView>
					<GridViewColumn 
						Header="Название"
						ListViewLayoutManager.StarWidth="1"
						tree:SortBehavior.SortComparer="{StaticResource ScheduleViewModelNameComparer}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Image Width="16" Margin="1 0" VerticalAlignment="Center" Source="/Controls;component/Images/Organisation.png" Visibility="{Binding IsOrganisation, Converter={StaticResource BoolToVisibilityConverter}}" />
									<Image Width="16" Margin="1 0" VerticalAlignment="Center" Source="/Controls;component/Images/Shedule.png" Visibility="{Binding IsOrganisation, Converter={StaticResource InversedBoolToVisibilityConverter}}" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased" />
									<TextBlock Text="{Binding Name}" Style="{StaticResource IsDeletedStyle}" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn
						Header="График"
						ListViewLayoutManager.StarWidth="1"
						tree:SortBehavior.SortComparer="{StaticResource ScheduleViewModelSchemeComparer}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="{Binding Scheme}" Style="{StaticResource IsDeletedStyle}" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</tree:TreeList.View>
		</tree:TreeList>
		<Grid Grid.Column="1" Margin="4 0 0 0" DataContext="{Binding SelectedItem}" IsEnabled="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.IsConnected}">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<StackPanel Orientation="Horizontal">
				<ToolBarButton Command="{Binding EditCommand}" ImageSource="EditCheckBoxList" ToolTip="Редактировать зоны" />
			</StackPanel>
			<DataGrid
				Grid.Row="1"
				Margin="2"
				IsReadOnly="False"
				ItemsSource="{Binding ScheduleZones}"
				SelectedItem="{Binding SelectedScheduleZone}">
				<DataGrid.Columns>
					<DataGridTemplateColumn 
						Header="№">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<TextBlock
										Margin="2" 
										VerticalAlignment="Center"
										Text="{Binding No}"
										Style="{StaticResource IsDeletedTimeTrackStyle}" />
								</StackPanel>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTemplateColumn 
						Width="*"
						Header="Название">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Image 
										Margin="1 0 0 0" 
										VerticalAlignment="Center" 
										Source="/Controls;component/Images/Zone.png" />
									<TextBlock
										Margin="2" 
										VerticalAlignment="Center"
										Text="{Binding Name}"
										Style="{StaticResource IsDeletedTimeTrackStyle}" />
								</StackPanel>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
				</DataGrid.Columns>
			</DataGrid>
		</Grid>
	</Grid>
</UserControl>