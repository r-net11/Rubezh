<UserControl
	x:Class="SKDModule.Views.ScheduleDetailsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Width="580"
	Height="370">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/Controls;component/Themes/StrazhTheme.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<Grid IsSharedSizeScope="True">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="1.3*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock
			Margin="20 5"
			VerticalAlignment="Center"
			Foreground="White"
			Text="Название" />
		<TextBox
			Grid.Column="1"
			Margin="5"
			MaxLength="50"
			VerticalAlignment="Center"
			Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
		<TextBlock
			Grid.Row="1"
			Margin="20 5"
			VerticalAlignment="Center"
			Foreground="White"
			Text="Тип графика работы" />
		<ComboBox
			Grid.Row="1"
			Grid.Column="1"
			Margin="5"
			VerticalAlignment="Center"
			VerticalContentAlignment="Center"
			ItemsSource="{Binding AvailableScheduleTypes}"
			SelectedItem="{Binding SelectedScheduleType, UpdateSourceTrigger=PropertyChanged}">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Foreground="Black" Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<TextBlock
			Grid.Row="2"
			Text="График"
			Margin="20 0"
			Foreground="White"
			VerticalAlignment="Center"/>
		<ComboBox
			Grid.Row="2"
			Grid.Column="1"
			Margin="5"
			VerticalAlignment="Center"
			VerticalContentAlignment="Center"
			ItemsSource="{Binding AvailableScheduleSchemes}"
			SelectedItem="{Binding SelectedScheduleScheme, UpdateSourceTrigger=PropertyChanged}">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Foreground="Black" Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<CheckBox
			Grid.Row="3"
			Grid.Column="1"
			Margin="5"
			VerticalAlignment="Center"
			Content="Не учитывать расписание праздников и сокращенных дней"
			Foreground="White"
			IsEnabled="{Binding IsIgnoreHolydayEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
			IsChecked="{Binding IsIgnoreHoliday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
		<CheckBox
			Grid.Row="4"
			Grid.Column="1"
			Margin="5"
			VerticalAlignment="Center"
			Content="Учитывать только первый вход последний выход"
			Foreground="White"
			IsChecked="{Binding IsOnlyFirstEnter, UpdateSourceTrigger=PropertyChanged}" />
		<Grid
			Grid.Row="5"
			Grid.ColumnSpan="2"
			Margin="10">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
				<Separator Style="{x:Null}" Width="100" Margin="7 7" Opacity="0.6" BorderBrush="LightBlue" BorderThickness="5" />
				<TextBlock Margin="5 0" VerticalAlignment="Center" Foreground="White" Text="Правила учета отклонений от рабочего расписания" />
				<Separator Style="{x:Null}" Width="100" Margin="7 7" Opacity="0.6" BorderBrush="LightBlue" BorderThickness="5" />
			</StackPanel>
			<Grid Grid.Row="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
				</Grid.RowDefinitions>
				<CheckBox
					Grid.Column="1"
					VerticalAlignment="Center"
					Foreground="White"
					IsChecked="{Binding IsEnabledAllowLate, UpdateSourceTrigger=PropertyChanged}">
					<TextBlock Margin="0 -1 0 0" Text="Не учитывать опаздания меньше" TextWrapping="Wrap" />
				</CheckBox>
				<TimePicker
					Grid.Column="2"
					Margin="5"
					VerticalAlignment="Center"
					TimeSpan="{Binding AllowedLate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
				<CheckBox
					Grid.Row="1"
					Grid.Column="1"
					VerticalAlignment="Center"
					Foreground="White"
					IsChecked="{Binding IsAllowAbsent, UpdateSourceTrigger=PropertyChanged}">
						<TextBlock Margin="0 -1 0 0" Text="Разрешить отсутствия меньше" TextWrapping="Wrap" />
				</CheckBox>
				<TimePicker
					Grid.Row="1"
					Grid.Column="2"
					Margin="5"
					VerticalAlignment="Center"
					TimeSpan="{Binding AllowedAbsentLowThan, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
				<CheckBox
					Grid.Row="2"
					Grid.Column="1"
					VerticalAlignment="Center"
					Foreground="White"
					IsChecked="{Binding IsEnabledAllowEarlyLeave, UpdateSourceTrigger=PropertyChanged}">
					<TextBlock Margin="0 -1 0 0" Text="Не учитывать уходы раньше меньше" TextWrapping="Wrap" />
				</CheckBox>
				<TimePicker
					Grid.Row="2"
					Grid.Column="2"
					Margin="5"
					VerticalAlignment="Center"
					TimeSpan="{Binding AllowedEarlyLeave, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
				<CheckBox
					Grid.Row="3"
					Grid.Column="1"
					VerticalAlignment="Center"
					Foreground="White"
					IsChecked="{Binding IsEnabledOvertime, UpdateSourceTrigger=PropertyChanged}">
					<TextBlock Margin="0 -1 0 0" Text="Не учитывать переработки меньше" TextWrapping="Wrap" />
				</CheckBox>
				<TimePicker
					Grid.Row="3"
					Grid.Column="2"
					Margin="5"
					VerticalAlignment="Center"
					TimeSpan="{Binding NotAllowOvertimeLowerThan, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
			</Grid>
		</Grid>
	</Grid>
</UserControl>