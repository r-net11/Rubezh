<UserControl
	x:Class="SKDModule.Views.ScheduleDetailsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	xmlns:ext="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended"
	xmlns:langCommon="clr-namespace:Localization.SKD.Common;assembly=Localization"
	xmlns:lang="clr-namespace:Localization.SKD.Views;assembly=Localization"
	Width="580"
	Height="370">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="1.3*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock
			Margin="20 5"
			VerticalAlignment="Center"
			Foreground="White"
			Text="{x:Static langCommon:CommonResources.Name}" />
		<TextBox
			Grid.Column="1"
			Margin="5"
			MaxLength="50"
			VerticalAlignment="Center"
			Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
		<TextBlock
			Grid.Row="1"
			Margin="20 5"
			VerticalAlignment="Center"
			Foreground="White"
			Text="{x:Static lang:CommonViews.WorkScheduleType}" />
		<ComboBox
			Grid.Row="1"
			Grid.Column="1"
			Margin="5"
			VerticalAlignment="Center"
			VerticalContentAlignment="Center"
			ItemsSource="{Binding AvailableScheduleTypes}"
			SelectedItem="{Binding SelectedScheduleType, UpdateSourceTrigger=PropertyChanged}">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Foreground="Black" Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<TextBlock
			Grid.Row="2"
			Text="{x:Static langCommon:CommonResources.Schedule}"
			Margin="20 0"
			Foreground="White"
			VerticalAlignment="Center"/>
		<ComboBox
			Grid.Row="2"
			Grid.Column="1"
			Margin="5"
			VerticalAlignment="Center"
			VerticalContentAlignment="Center"
			ItemsSource="{Binding AvailableScheduleSchemes}"
			SelectedItem="{Binding SelectedScheduleScheme, UpdateSourceTrigger=PropertyChanged}">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Foreground="Black" Text="{Binding Name}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<CheckBox
			Grid.Row="3"
			Grid.Column="1"
			Margin="5"
			VerticalAlignment="Center"
			Content="{x:Static lang:CommonViews.ShortHolidayIgnore}"
			Foreground="White"
			IsEnabled="{Binding IsIgnoreHolydayEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
			IsChecked="{Binding IsIgnoreHoliday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
		<CheckBox
			Grid.Row="4"
			Grid.Column="1"
			Margin="5"
			VerticalAlignment="Center"
			Content="{x:Static lang:CommonViews.OnlyFirstLastConsider}"
			Foreground="White"
			IsChecked="{Binding IsOnlyFirstEnter, UpdateSourceTrigger=PropertyChanged}" />
		<Grid
			Grid.Row="5"
			Grid.ColumnSpan="2"
			Margin="10">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
				<Separator Style="{x:Null}" Width="100" Margin="7 7" Opacity="0.6" BorderBrush="LightBlue" BorderThickness="5" />
                <TextBlock Margin="5 0" VerticalAlignment="Center" Foreground="White" Text="{x:Static lang:CommonViews.ScheduleDevRules}" />
				<Separator Style="{x:Null}" Width="100" Margin="7 7" Opacity="0.6" BorderBrush="LightBlue" BorderThickness="5" />
			</StackPanel>
			<Grid Grid.Row="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
				</Grid.RowDefinitions>
				<CheckBox
					Grid.Column="1"
					VerticalAlignment="Center"
					Foreground="White"
					IsChecked="{Binding IsEnabledAllowLate, UpdateSourceTrigger=PropertyChanged}">
                    <TextBlock Margin="0 -1 0 0" Text="{x:Static lang:CommonViews.LatenessIgnore}" TextWrapping="Wrap" />
				</CheckBox>
				<ext:IntegerUpDown
					Grid.Column="2"
					Margin="5"
					Height="25"
					Width="70"
					VerticalAlignment="Center"
					IsEnabled="{Binding IsEnabledAllowLate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
					Value="{Binding AllowedLate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Minimum="0" />
				<CheckBox
					Grid.Row="1"
					Grid.Column="1"
					VerticalAlignment="Center"
					Foreground="White"
					IsChecked="{Binding IsAllowAbsent, UpdateSourceTrigger=PropertyChanged}">
                    <TextBlock Margin="0 -1 0 0" Text="{x:Static lang:CommonViews.Miss}" TextWrapping="Wrap" />
				</CheckBox>
				<ext:IntegerUpDown
					Grid.Row="1"
					Grid.Column="2"
					Height="25"
					Width="70"
					Margin="5"
					VerticalAlignment="Center"
					IsEnabled="{Binding IsAllowAbsent, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
					Value="{Binding AllowedAbsentLowThan, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Minimum="0" />
				<CheckBox
					Grid.Row="2"
					Grid.Column="1"
					VerticalAlignment="Center"
					Foreground="White"
					IsChecked="{Binding IsEnabledAllowEarlyLeave, UpdateSourceTrigger=PropertyChanged}">
                    <TextBlock Margin="0 -1 0 0" Text="{x:Static lang:CommonViews.LeavingEarlIgnore}" TextWrapping="Wrap" />
				</CheckBox>
				<ext:IntegerUpDown
					Grid.Row="2"
					Grid.Column="2"
					Height="25"
					Width="70"
					Margin="5"
					VerticalAlignment="Center"
					IsEnabled="{Binding IsEnabledAllowEarlyLeave, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
					Value="{Binding AllowedEarlyLeave, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Minimum="0" />
				<CheckBox
					Grid.Row="3"
					Grid.Column="1"
					VerticalAlignment="Center"
					Foreground="White"
					IsChecked="{Binding IsEnabledOvertime, UpdateSourceTrigger=PropertyChanged}">
                    <TextBlock Margin="0 -1 0 0" Text="{x:Static lang:CommonViews.OverTimeIgnore}" TextWrapping="Wrap" />
				</CheckBox>
				<ext:IntegerUpDown
					Grid.Row="3"
					Height="25"
					Width="70"
					Grid.Column="2"
					Margin="5"
					VerticalAlignment="Center"
					IsEnabled="{Binding IsEnabledOvertime, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
					Value="{Binding NotAllowOvertimeLowerThan, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Minimum="0" />
			</Grid>
		</Grid>
	</Grid>
</UserControl>