<UserControl x:Class="SKDModule.Views.WebCameraDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:WPFMediaKit="clr-namespace:WPFMediaKit.DirectShow.Controls;assembly=WPFMediaKit"
             Height="600" Width="640">
    <StackPanel Orientation="Vertical">
		<WPFMediaKit:VideoCaptureElement x:Name="videoCapElement"
			LoadedBehavior="Play"
			UnloadedBehavior="Stop"
			DesiredPixelWidth="640"
			DesiredPixelHeight="480"
			VideoCaptureDevice="{Binding VideoDevicesList}"
			Stretch="Fill"
			FPS="30" 
			Width="640" Height="480" 
			EnableSampleGrabbing="True"
			HorizontalAlignment="Center"
			 />
		<Button Click="TakeSnapshot" Content="Take Snapshot" Margin="10 10 10 0" />
		<Button Click="SavePicture" Content="Save Picture" Margin="10 0 10 0" />
		<Button Click="ResumePreview" Content="Resume Preview" Margin="10 0 10 10" />
	</StackPanel>
</UserControl>
