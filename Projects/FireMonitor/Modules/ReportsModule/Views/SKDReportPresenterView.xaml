<UserControl
	x:Class="ReportsModule.Views.SKDReportPresenterView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing"
	xmlns:lang="clr-namespace:Localization.Reports.Views;assembly=Localization">
	<UserControl.Resources>
		<dxp:DisabledCommand x:Key="disabledCommand" />
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<StackPanel Orientation="Horizontal">
                <ToolBarButton Command="{Binding ChangeFilterCommand}" ImageSource="filter"  ToolTip="{x:Static lang:CommonViews.SetUpFilter}" />
                <ToolBarButton Command="{Binding RefreshReportCommand}"  ImageSource="Refresh"  ToolTip="{x:Static lang:CommonViews.RefreshReport}" />
                <ToolBarButton Command="{Binding Model.FirstPageCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" ImageSource="leftLeft"  ToolTip="{x:Static lang:CommonViews.StartPage}" />
                <ToolBarButton Command="{Binding Model.PreviousPageCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" ImageSource="left"  ToolTip="{x:Static lang:CommonViews.PreviousPage}" />
				<TextBox x:Name="currentPage" ContextMenu="{x:Null}"  Height="30" MinWidth="25" MinHeight="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" FontSize="20" MaxWidth="120" Text="{Binding Model.SelectedPage, ElementName=viewer, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Model.PageCount, ElementName=viewer, FallbackValue={StaticResource False}}" />
				<Label VerticalContentAlignment="Center" Content="/" FontSize="20" />
				<Label VerticalContentAlignment="Center" Content="{Binding Model.PageCount, ElementName=viewer, FallbackValue='0'}" FontSize="20" />
                <ToolBarButton Command="{Binding Model.NextPageCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" ImageSource="right"  ToolTip="{x:Static lang:CommonViews.NextPage}" />
                <ToolBarButton Command="{Binding Model.LastPageCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" ImageSource="rightRight"  ToolTip="{x:Static lang:CommonViews.LastPage}" />
                <ToolBarButton Command="{Binding FitPageSizeCommand}" CommandParameter="{x:Static dxp:ZoomFitMode.PageWidth}" ImageSource="WidthToPage"  ToolTip="{x:Static lang:CommonViews.AtWidthOfPage}" />
                <ToolBarButton Command="{Binding FitPageSizeCommand}" CommandParameter="{x:Static dxp:ZoomFitMode.PageHeight}" ImageSource="HeightToPage"  ToolTip="{x:Static lang:CommonViews.AtHeightOfPage}" />
                <ToolBarButton Command="{Binding FitPageSizeCommand}" CommandParameter="{x:Static dxp:ZoomFitMode.WholePage}" ImageSource="FidthToPage"  ToolTip="{x:Static lang:CommonViews.InitialSize}" />
			</StackPanel>
			<DockPanel Grid.Column="1">
                <ToolBarButton Command="{Binding Model.ZoomOutCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" DockPanel.Dock="Left" ImageSource="ZoomOut"  ToolTip="{x:Static lang:CommonViews.DecreaseScale}" />
                <ToolBarButton Command="{Binding Model.ZoomInCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" DockPanel.Dock="Right" ImageSource="ZoomIn"  ToolTip="{x:Static lang:CommonViews.IncreaseScale}" />
                <Slider x:Name="slider" VerticalAlignment="Center" Maximum="500" Minimum="10" Orientation="Horizontal" TickFrequency="10" ToolTip="{x:Static lang:CommonViews.ChangeScale}" Value="{Binding Model.Zoom, ElementName=viewer}" />
			</DockPanel>
			<StackPanel Grid.Column="2" Orientation="Horizontal">
                <ToolBarButton Command="{Binding Model.PrintCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" ImageSource="Print"  ToolTip="{x:Static lang:CommonViews.PrintReport}" />
				<ToggleButton x:Name="button" Width="40" Height="40">
					<ToggleButton.Template>
						<ControlTemplate>
							<Border Name="border" Margin="2" Background="Transparent" BorderBrush="Transparent" BorderThickness="1" CornerRadius="2" Padding="2" ToolTip="{x:Static lang:CommonViews.DocumentExport}" ToolTipService.ShowOnDisabled="True">
								<Grid Margin="2" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{DynamicResource Pdf}" />
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="UIElement.IsMouseOver" Value="True">
									<Setter TargetName="border" Property="Border.Background" Value="{DynamicResource HighlightedBackgoundBrush}" />
									<Setter TargetName="border" Property="Border.BorderBrush" Value="{DynamicResource PressedBackgroundBrush}" />
								</Trigger>
								<Trigger Property="Button.IsPressed" Value="True">
									<Setter TargetName="border" Property="Border.Background" Value="{DynamicResource PressedBackgroundBrush}" />
								</Trigger>
								<Trigger Property="ToggleButton.IsChecked" Value="True">
									<Setter TargetName="border" Property="Border.Background" Value="{DynamicResource PressedBackgroundBrush}" />
								</Trigger>
								<Trigger Property="Button.IsEnabled" Value="False">
									<Setter TargetName="border" Property="Opacity" Value="0.5" />
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</ToggleButton.Template>
				</ToggleButton>
				<Popup IsOpen="{Binding IsChecked, ElementName=button, Mode=TwoWay}" Placement="Bottom" PlacementTarget="{Binding ElementName=button}" StaysOpen="False" AllowsTransparency="True">
					<Border CornerRadius="5" BorderThickness="1" BorderBrush="{DynamicResource WindowBorderBrush}" Background="{DynamicResource BackgroundBrush}">
						<ItemsControl>
							<ItemsControl.Triggers>
								<EventTrigger RoutedEvent="Button.Click">
									<BeginStoryboard>
										<Storyboard>
											<BooleanAnimationUsingKeyFrames Storyboard.TargetName="button" Storyboard.TargetProperty="IsChecked">
												<DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False" />
											</BooleanAnimationUsingKeyFrames>
										</Storyboard>
									</BeginStoryboard>
								</EventTrigger>
							</ItemsControl.Triggers>
							<ItemsControl.Items>
                                <ToolBarButton Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Pdf" ImageSource="ExportPDF"  ToolTip="{x:Static lang:CommonViews.ExportToPDF}" />
                                <ToolBarButton Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Htm" ImageSource="ExportHTM"  ToolTip="{x:Static lang:CommonViews.ExportToHTM}" />
                                <ToolBarButton Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Mht" ImageSource="ExportMHT"  ToolTip="{x:Static lang:CommonViews.ExportToMHT}" />
                                <ToolBarButton Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Rtf" ImageSource="ExportRTF"  ToolTip="{x:Static lang:CommonViews.ExportToRTF}" />
                                <ToolBarButton Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Xls" ImageSource="ExportXLS"  ToolTip="{x:Static lang:CommonViews.ExportToXLS}" />
                                <ToolBarButton Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Xlsx" ImageSource="ExportXLSX"  ToolTip="{x:Static lang:CommonViews.ExportToXLSX}" />
                                <ToolBarButton Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Csv" ImageSource="ExportCSV"  ToolTip="{x:Static lang:CommonViews.ExportToCSV}" />
                                <ToolBarButton Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Txt" ImageSource="ExportTXT"  ToolTip="{x:Static lang:CommonViews.ExportToTXT}" />
                                <ToolBarButton Command="{Binding Model.ExportCommand, ElementName=viewer, FallbackValue={StaticResource disabledCommand}}" CommandParameter="Xps" ImageSource="ExportXPS"  ToolTip="{x:Static lang:CommonViews.ExportToXPS}" />
							</ItemsControl.Items>
						</ItemsControl>
					</Border>
				</Popup>
			</StackPanel>
		</Grid>

		<dxp:DocumentViewer x:Name="viewer" Grid.Row="1" Model="{Binding Model}" />

		<Grid Grid.Row="2" Margin="10,3,3,3">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="30" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0" Orientation="Vertical">
				<StackPanel Orientation="Horizontal">
					<TextBlock Foreground="White" Text="{x:Static lang:CommonViews.Filter2}" />
					<TextBlock FontWeight="Bold" Foreground="White" Text="{Binding FilterName}" />
				</StackPanel>
				<StackPanel Orientation="Horizontal" Visibility="{Binding IsPeriodReport, Converter={StaticResource BoolToVisibilityConverter}}" HorizontalAlignment="Right" Width="45">
                    <TextBlock Foreground="White" Text="{x:Static lang:CommonViews.Period}" />
					<TextBlock FontWeight="Bold" Foreground="White" Text="{Binding PeriodType, Converter={StaticResource EnumToDescriptionConverter}}" />
				</StackPanel>
			</StackPanel>
			<StackPanel Grid.Column="2" Orientation="Horizontal" Visibility="{Binding Model.ProgressVisibility, ElementName=viewer, FallbackValue=Collapsed, Converter={StaticResource BoolToVisibilityConverter}}">
				<ProgressBar Width="150" Height="15" VerticalAlignment="Center" VerticalContentAlignment="Center" IsIndeterminate="True" />
				<TextBlock Margin="2,0,2,0" Text="{Binding ElapsedTime, StringFormat={}{0} c.}" Foreground="White" VerticalAlignment="Center" />
			</StackPanel>
			<TextBlock Grid.Column="4" Foreground="White" Text="{Binding Model.ZoomDisplayText, ElementName=viewer}" VerticalAlignment="Center" />
		</Grid>
	</Grid>
</UserControl>
