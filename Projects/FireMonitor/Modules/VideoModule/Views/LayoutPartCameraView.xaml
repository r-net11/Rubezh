<UserControl x:Class="VideoModule.Views.LayoutPartCameraView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:wpf="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf"
			 xmlns:mediaSourcePlayer="clr-namespace:MediaSourcePlayer;assembly=MediaSourcePlayer">
	<Grid Background="Black">
		<Border Grid.Row="5" Grid.ColumnSpan="2">
			<Border.Background>
				<VisualBrush Stretch="Uniform">
					<VisualBrush.Visual>
						<mediaSourcePlayer:MediaPlayer
			                        x:Name="MediaSourcePlayer"
			                        Grid.Row="1"
			                        Grid.RowSpan="5"
			                        Grid.Column="2"
			                        Width="250"
			                        Height="250"
			                        Margin="5"
								    VerticalAlignment="Top">
						</mediaSourcePlayer:MediaPlayer>
					</VisualBrush.Visual>
				</VisualBrush >
			</Border.Background>
		</Border>
	</Grid>
</UserControl>