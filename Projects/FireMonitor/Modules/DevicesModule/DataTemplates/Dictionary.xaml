<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Views="clr-namespace:DevicesModule.Views"
                    xmlns:ViewModels="clr-namespace:DevicesModule.ViewModels">
    
    <DataTemplate DataType="{x:Type ViewModels:DevicesViewModel}">
        <Views:DevicesView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type ViewModels:ZonesViewModel}">
        <Views:ZonesView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type ViewModels:DeviceDetailsViewModel}">
        <Views:DeviceDetailsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:MPTTimerViewModel}">
        <Views:MPTTimerView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ValveControlViewModel}">
        <Views:ValveControlView />
    </DataTemplate>

	<DataTemplate DataType="{x:Type ViewModels:ConnectionIndicatorViewModel}">
		<Views:ConnectionIndicatorView />
	</DataTemplate>

</ResourceDictionary>