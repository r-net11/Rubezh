<UserControl x:Class="JournalModule.Views.VideoView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mediaSourcePlayer="clr-namespace:MediaSourcePlayer;assembly=MediaSourcePlayer"
			 MinWidth="400" MinHeight="400">
    <Border>
		<Border.Background>
			<VisualBrush Stretch="Uniform">
				<VisualBrush.Visual>
					<mediaSourcePlayer:MediaPlayer
			                        x:Name="MediaSourcePlayer"
			                        Grid.Row="1"
			                        Grid.RowSpan="5"
			                        Grid.Column="2"
			                        Width="250"
			                        Height="250"
			                        Margin="5"
								    VerticalAlignment="Top">
					</mediaSourcePlayer:MediaPlayer>
				</VisualBrush.Visual>
			</VisualBrush>
		</Border.Background>
	</Border>
</UserControl>