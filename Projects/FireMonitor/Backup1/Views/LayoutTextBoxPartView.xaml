<UserControl x:Class="AutomationModule.Views.LayoutTextBoxPartView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<TextBox 
		VerticalScrollBarVisibility="Auto"
		HorizontalAlignment="{Binding HorizontalAlignment, Mode=OneTime}" 
		VerticalAlignment="{Binding VerticalAlignment, Mode=OneTime}" 
		Background="{Binding BackgroundBrush, Mode=OneTime}" 
		Foreground="{Binding ForegroundBrush, Mode=OneTime}" 
		FontFamily="{Binding FontFamily, Mode=OneTime}" 
		FontSize="{Binding FontSize, Mode=OneTime}" 
		FontStyle="{Binding FontStyle, Mode=OneTime}" 
		FontWeight="{Binding FontWeight, Mode=OneTime}" 
		TextAlignment="{Binding TextAlignment, Mode=OneTime}" 
		TextWrapping="{Binding TextWrapping, Mode=OneTime}" 
		AcceptsReturn="{Binding AcceptsReturn, Mode=OneTime}" 
		AcceptsTab="{Binding AcceptsTab, Mode=OneTime}" 
		Text="{Binding Text}" />
</UserControl>
