<UserControl
	x:Class="Infrastructure.Designer.Views.ElementsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:Controls;assembly=Controls"
	xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
    xmlns:res="clr-namespace:Infrastructure.Designer.Resources.Language.Views">
    <UserControl.Resources>
        <Style x:Key="IsSelectableCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Image
							Name="_image"
							Margin="3,0,0,0"
							Source="/Controls;component/Images/Lock.png" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="_image" Property="Source" Value="/Controls;component/Images/Unlock.png" />
                                <Setter TargetName="_image" Property="ToolTip" Value="{x:Static res:ElementsView.Unlock}" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="false">
                                <Setter TargetName="_image" Property="Source" Value="/Controls;component/Images/Lock.png" />
                                <Setter TargetName="_image" Property="ToolTip" Value="{x:Static res:ElementsView.Lock}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="IsVisibleCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Image Name="_image" Source="/Controls;component/Images/Eye1.png" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="_image" Property="Source" Value="/Controls;component/Images/Eye2.png" />
                                <Setter TargetName="_image" Property="ToolTip" Value="{x:Static res:ElementsView.Visible}" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="false">
                                <Setter TargetName="_image" Property="Source" Value="/Controls;component/Images/Eye3.png" />
                                <Setter TargetName="_image" Property="ToolTip" Value="{x:Static res:ElementsView.Hidden}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <tree:TreeList SelectedTreeNode="{Binding SelectedElement}" Source="{Binding Elements}">
        <tree:TreeList.ItemContainerStyle>
            <Style BasedOn="{StaticResource {x:Type tree:TreeListItem}}" TargetType="{x:Type tree:TreeListItem}">
                <Setter Property="Visibility" Value="{Binding IsGroupHasChild, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Setter Property="ContextMenu" Value="{Binding ContextMenu}" />
                <Setter Property="ToolTip" Value="{Binding ToolTip}" />
            </Style>
        </tree:TreeList.ItemContainerStyle>
        <tree:TreeList.View>
            <GridView>
                <GridViewColumn Width="180" Header="{x:Static res:ElementsView.Layers}">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Image
									Width="16"
									Height="16"
									Margin="5, 0, 5, 0"
									Source="{Binding IconSource, Converter={StaticResource NullToImageConverter}}"
									Visibility="{Binding IconSource,
								                            Converter={StaticResource NullToVisibilityConverter}}" />
                                <TextBlock Margin="1" Text="{Binding Name}">
                                    <TextBlock.Style>
                                        <Style>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsBold}" Value="True">
                                                    <DataTrigger.Setters>
                                                        <Setter Property="TextBlock.FontWeight" Value="Bold" />
                                                    </DataTrigger.Setters>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
                <GridViewColumn Width="35" Header="">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox
								Margin="1"
								IsChecked="{Binding IsVisible,
							                              Mode=TwoWay,
							                              UpdateSourceTrigger=PropertyChanged}"
								Style="{StaticResource IsVisibleCheckBoxStyle}" />
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
                <GridViewColumn Width="35" Header="">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox
								Margin="1"
								IsChecked="{Binding IsSelectable,
							                              Mode=TwoWay,
							                              UpdateSourceTrigger=PropertyChanged}"
								Style="{StaticResource IsSelectableCheckBoxStyle}" />
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
            </GridView>
        </tree:TreeList.View>
    </tree:TreeList>
</UserControl>