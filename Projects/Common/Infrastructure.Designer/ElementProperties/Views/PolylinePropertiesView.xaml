<UserControl x:Class="Infrastructure.Designer.ElementProperties.Views.PolylinePropertiesView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:extToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended" MinHeight="400" MinWidth="400" xmlns:xc="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit">

	<Border Background="{DynamicResource AlternativeBackgroundBrush}">
		<Grid Margin="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Content="Название" />
			<Label Grid.Column="0" Grid.Row="1" Content="Цвет линии" HorizontalAlignment="Right" />
			<Label Grid.Column="0" Grid.Row="2" Content="Ширина линии" HorizontalAlignment="Right" />

			<TextBox Grid.Row="0" Grid.Column="1" Text="{Binding PresentationName, UpdateSourceTrigger=PropertyChanged}" Margin="2" VerticalContentAlignment="Center" />
			<xc:ColorPicker Grid.Column="1" Grid.Row="1" SelectedColor="{Binding BorderColor, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
			<extToolkit:IntegerUpDown Grid.Column="1" Grid.Row="2" Value="{Binding StrokeThickness, UpdateSourceTrigger=PropertyChanged}" Margin="2" Minimum="0" Maximum="100" />
		</Grid>
	</Border>
</UserControl>
