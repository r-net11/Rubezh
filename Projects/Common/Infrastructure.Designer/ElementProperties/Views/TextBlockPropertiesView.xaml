<UserControl
	x:Class="Infrastructure.Designer.ElementProperties.Views.TextBlockPropertiesView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:extToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended"
	xmlns:xc="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
    xmlns:res="clr-namespace:Infrastructure.Designer.Resources.Language"
	MinWidth="400"
	MinHeight="500">
	<Border
		Background="{DynamicResource BackgroundBrush}"
		CornerRadius="5">
		<Grid Margin="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" MinWidth="150" />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<TextBlock
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.Name}"
				Foreground="White"
				VerticalAlignment="Center"/>
			<TextBlock
				Grid.Row="1"
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.Text}"
				Foreground="White"/>
			<TextBlock
				Grid.Row="2"
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.HorizontalAlign}"
				Foreground="White"
				VerticalAlignment="Center"/>
			<TextBlock
				Grid.Row="3"
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.VerticalAlign}"
				Foreground="White"
				VerticalAlignment="Center"/>
			<TextBlock
				Grid.Row="4"
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.FontColor}"
				Foreground="White"
				VerticalAlignment="Center"/>
			<TextBlock
				Grid.Row="5"
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.BackgroundColor}"
				Foreground="White"
				VerticalAlignment="Center"/>
			<TextBlock
				Grid.Row="6"
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.StrokeColor}"
				Foreground="White"
				VerticalAlignment="Center"/>
			<TextBlock
				Grid.Row="7"
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.StrokeThickness}"
				Foreground="White"
				VerticalAlignment="Center"/>
			<TextBlock
				Grid.Row="8"
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.FontSize}"
				Foreground="White"
				VerticalAlignment="Center"/>
			<TextBlock
				Grid.Row="9"
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.Font}"
				Foreground="White"
				VerticalAlignment="Center"/>
			<TextBlock
				Grid.Row="10"
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.Bold}"
				Foreground="White"
				VerticalAlignment="Center"/>
			<TextBlock
				Grid.Row="11"
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.Italic}"
				Foreground="White"
				VerticalAlignment="Center"/>
			<TextBlock
				Grid.Row="12"
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.Strech}"
				Foreground="White"
				VerticalAlignment="Center"/>
			<TextBlock
				Grid.Row="13"
				Margin="2"
				HorizontalAlignment="Right"
				Text="{x:Static res:TextBlockPropertiesView.Hyphenation}"
				Foreground="White"
				VerticalAlignment="Center"/>
			<TextBox
				Grid.Column="1"
				Text="{Binding PresentationName, UpdateSourceTrigger=PropertyChanged}"
				Margin="2"
				VerticalContentAlignment="Center" />
			<TextBox
				x:Name="_textBox"
				Grid.Row="1"
				Grid.Column="1"
				Height="160"
				Margin="2"
				TextWrapping="Wrap"
				VerticalContentAlignment="Top"
				AcceptsReturn="True"
				Background="White"
				HorizontalScrollBarVisibility="Auto"
				Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
				VerticalScrollBarVisibility="Auto" />
			<ComboBox
				Grid.Row="2"
				Grid.Column="1"
				Margin="2"
				ItemsSource="{Binding TextAlignments}"
				SelectedIndex="{Binding TextAlignment, UpdateSourceTrigger=PropertyChanged}" />
			<ComboBox
				Grid.Row="3"
				Grid.Column="1"
				Margin="2"
				ItemsSource="{Binding VerticalAlignments}"
				SelectedIndex="{Binding VerticalAlignment, UpdateSourceTrigger=PropertyChanged}" />
			<xc:ColorPicker
				Grid.Row="4"
				Grid.Column="1"
				Margin="2"
				SelectedColor="{Binding ForegroundColor, UpdateSourceTrigger=PropertyChanged}" />
			<xc:ColorPicker
				Grid.Row="5"
				Grid.Column="1"
				Margin="2"
				SelectedColor="{Binding BackgroundColor, UpdateSourceTrigger=PropertyChanged}" />
			<xc:ColorPicker
				Grid.Row="6"
				Grid.Column="1"
				Margin="2"
				SelectedColor="{Binding BorderColor, UpdateSourceTrigger=PropertyChanged}" />
			<extToolkit:IntegerUpDown
				Grid.Row="7"
				Grid.Column="1"
				Margin="2"
				Maximum="100"
				Minimum="0"
				Value="{Binding StrokeThickness, UpdateSourceTrigger=PropertyChanged}" />
			<extToolkit:IntegerUpDown
				Grid.Row="8"
				Grid.Column="1"
				Margin="2"
				Maximum="1000"
				Minimum="5"
				Value="{Binding FontSize, UpdateSourceTrigger=PropertyChanged}" />
			<ComboBox
				Grid.Row="9"
				Grid.Column="1"
				Margin="2"
				ItemsSource="{Binding Fonts}"
				SelectedItem="{Binding FontFamilyName, UpdateSourceTrigger=PropertyChanged}">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock FontFamily="{Binding}" Text="{Binding}" />
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
			<CheckBox
				Grid.Row="10"
				Grid.Column="1"
				VerticalAlignment="Center"
				IsChecked="{Binding FontBold, UpdateSourceTrigger=PropertyChanged}" />
			<CheckBox
				Grid.Row="11"
				Grid.Column="1"
				VerticalAlignment="Center"
				IsChecked="{Binding FontItalic, UpdateSourceTrigger=PropertyChanged}" />
			<CheckBox
				Grid.Row="12"
				Grid.Column="1"
				VerticalAlignment="Center"
				IsChecked="{Binding Stretch, UpdateSourceTrigger=PropertyChanged}" />
			<CheckBox
				Grid.Row="13"
				Grid.Column="1"
				VerticalAlignment="Center"
				IsChecked="{Binding WordWrap, UpdateSourceTrigger=PropertyChanged}" />
		</Grid>
	</Border>
</UserControl>