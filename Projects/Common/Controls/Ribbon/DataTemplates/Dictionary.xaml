<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:view="clr-namespace:Controls.Ribbon.Views"
					xmlns:ribbon="clr-namespace:Infrastructure.Common.Windows.Ribbon;assembly=Infrastructure.Common.Windows">
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="../Themes/RibbonButton.xaml" />
		<ResourceDictionary Source="../Themes/RibbonMenuItemView.xaml" />
		<ResourceDictionary Source="../Themes/RibbonMenuView.xaml" />
	</ResourceDictionary.MergedDictionaries>
	<DataTemplate DataType="{x:Type ribbon:RibbonMenuViewModel}">
		<view:RibbonMenuView />
	</DataTemplate>
	<DataTemplate DataType="{x:Type ribbon:RibbonMenuItemViewModel}">
		<view:RibbonMenuItemView />
	</DataTemplate>
	<DataTemplate DataType="{x:Type ribbon:RibbonViewModel}">
		<view:RibbonView />
	</DataTemplate>
</ResourceDictionary>