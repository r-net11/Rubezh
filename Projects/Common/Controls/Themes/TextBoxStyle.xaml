<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
	xmlns:loc="clr-namespace:Controls"
	xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	xmlns:lang="clr-namespace:Localization.Common.Controls;assembly=Localization.Common">

	<Style x:Key="{x:Type TextBox}" TargetType="{x:Type TextBoxBase}">
		<Setter Property="SnapsToDevicePixels" Value="True" />
		<Setter Property="OverridesDefaultStyle" Value="True" />
		<Setter Property="KeyboardNavigation.TabNavigation" Value="None" />
		<Setter Property="FocusVisualStyle" Value="{x:Null}" />
		<Setter Property="MinWidth" Value="120" />
		<Setter Property="MinHeight" Value="20" />
		<Setter Property="AllowDrop" Value="true" />
		<Setter Property="BorderThickness" Value="0" />
		<Setter Property="Padding" Value="0" />
		<Setter Property="VerticalContentAlignment" Value="Center" />
		<Setter Property="Background" Value="White" />
		<Setter Property="BorderBrush" Value="Black" />
		<Setter Property="loc:TextBoxHelper.HighlightTextOnFocus" Value="True" />
		<Setter Property="ContextMenu">
			<Setter.Value>
				<ContextMenu>
					<loc:IconedMenuItem
						Command="ApplicationCommands.Copy"
						FontSize="12"
						ImageSource="BCopy"
						Text="{x:Static lang:CommonResources.Copy}" />
					<loc:IconedMenuItem
						Command="ApplicationCommands.Cut"
						FontSize="12"
						ImageSource="BCut"
						Text="{x:Static lang:CommonResources.Cut}" />
					<loc:IconedMenuItem
						Command="ApplicationCommands.Paste"
						FontSize="12"
						ImageSource="BPaste"
						Text="{x:Static lang:CommonResources.Paste}" />
				</ContextMenu>
			</Setter.Value>
		</Setter>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type TextBoxBase}">
					<Border
						Name="Border"
						Background="{TemplateBinding Background}"
						BorderBrush="{TemplateBinding BorderBrush}"
						BorderThickness="{TemplateBinding BorderThickness}"
						ContextMenu="{x:Null}"
						CornerRadius="3"
						Padding="2">
						<ScrollViewer x:Name="PART_ContentHost" Margin="0" />
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsEnabled" Value="False">
							<Setter TargetName="Border" Property="Background" Value="{DynamicResource DisabledBackgroundBrush}" />
							<Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource DisabledBorderBrush}" />
							<Setter Property="Foreground" Value="{DynamicResource DisabledForegroundBrush}" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style BasedOn="{StaticResource {x:Type controls:AutoCompleteBox}}" TargetType="{x:Type controls:AutoCompleteBox}">
		<Setter Property="TextBoxStyle">
			<Setter.Value>
				<Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="{x:Type TextBox}" />
			</Setter.Value>
		</Setter>
	</Style>
	<Style BasedOn="{StaticResource {x:Type controls:AutoCompleteBox}}" TargetType="{x:Type loc:XAutoCompleteBox}" />
	<Style TargetType="{x:Type xctk:MaskedTextBox}" BasedOn="{StaticResource {x:Type TextBox}}" />
</ResourceDictionary>