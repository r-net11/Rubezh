<UserControl x:Class="Infrastructure.Common.Windows.Windows.Views.SaveCancelDialogView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<ContentPresenter Grid.Row="0" Content="{Binding}" />
		<DockPanel Grid.Row="1" Margin="0, 4, 0, 0">
			<Button Name="bCancel"
					Width="100"
					Command="{Binding CancelCommand}"
					Content="{Binding CancelCaption}"
					DockPanel.Dock="Right" />
			<Button Name="bOk" 
					Width="100" 
					Margin="0, 0, 4, 0"
					Command="{Binding SaveCommand}"
					Content="{Binding SaveCaption}"
					DockPanel.Dock="Right"
					IsDefault="True"
					Visibility="{Binding AllowSave, Converter={StaticResource BoolToVisibilityConverter}}" />
			<ContentPresenter Content="{Binding CommandPanel}" />
		</DockPanel>
	</Grid>
</UserControl>
