<UserControl x:Class="Infrastructure.Common.Windows.Windows.Views.RightContentView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:loc="clr-namespace:Infrastructure.Common.Windows.Windows.ViewModels"
			 xmlns:Navigation="clr-namespace:Infrastructure.Common.Windows.Navigation"
			 xmlns:converters="clr-namespace:Infrastructure.Common.Windows.Windows.Converters">
	<UserControl.Resources>
		<converters:PanelTooltipConverter x:Key="tooltipConverter" />
	</UserControl.Resources>
	<DockPanel>
		<Border Background="{DynamicResource WindowBlacHeaderkBackgroundBrush}" DockPanel.Dock="Top">
			<DockPanel>
				<Button Command="{Binding Shell.MinimizeCommand}"
						ToolTip="{Binding Shell.LeftPanelVisible, Converter={StaticResource tooltipConverter}, ConverterParameter=False}"
						CommandParameter="{x:Static loc:MinimizeTarget.RightPanel}"
						Style="{DynamicResource ToolBarButtonStyle}"
						DockPanel.Dock="Left"
						Background="{DynamicResource Minify}"
						RenderTransformOrigin="0.5,0.5">
					<Button.RenderTransform>
						<TransformGroup>
							<RotateTransform Angle="180" />
						</TransformGroup>
					</Button.RenderTransform>
				</Button>
				<ContentPresenter Content="{Binding Menu}" />
			</DockPanel>
		</Border>
		<ContentPresenter Content="{Binding Content}" />
	</DockPanel>
</UserControl>