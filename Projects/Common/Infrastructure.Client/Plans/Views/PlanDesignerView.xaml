<UserControl
	x:Class="Infrastructure.Client.Plans.PlanDesignerView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Controls="clr-namespace:Controls;assembly=Controls">
	<Grid Visibility="{Binding IsNotEmpty, Converter={StaticResource BoolToVisibilityConverter}}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<ContentPresenter Content="{Binding Toolbox}" DockPanel.Dock="Top" />

		<ScrollViewer
			Name="_scrollViewer"
			Grid.Row="1"
			FocusVisualStyle="{x:Null}"
			HorizontalScrollBarVisibility="Visible"
			VerticalScrollBarVisibility="Visible">
			<Grid
				Name="_grid"
				Background="Transparent"
				MouseDown="OnContentMouseDown">
				<Grid.LayoutTransform>
					<TransformGroup>
						<ScaleTransform x:Name="scaleTransform" />
					</TransformGroup>
				</Grid.LayoutTransform>
				<ContentPresenter Name="_contentControl" Content="{Binding Canvas}" />
			</Grid>
		</ScrollViewer>

		<Grid Grid.Row="2" Visibility="{Binding HasPermissionsToScale, Converter={StaticResource BoolToVisibilityConverter}}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="{Binding AllowScalePoint, Converter={StaticResource BoolToGridLengthConverter}}" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<DockPanel Visibility="{Binding AllowScalePoint, Converter={StaticResource BoolToVisibilityConverter}}">
				<ToolBarButton
					Command="{Binding DeviceZoomOutCommand,
				                                 RelativeSource={RelativeSource FindAncestor,
				                                                                AncestorType={x:Type UserControl}}}"
					DockPanel.Dock="Left"
					ImageSource="ZoomOut"
					ToolTip="Уменьшить размер устройства" />
				<ToolBarButton
					Command="{Binding DeviceZoomInCommand,
				                                 RelativeSource={RelativeSource FindAncestor,
				                                                                AncestorType={x:Type UserControl}}}"
					DockPanel.Dock="Right"
					ImageSource="ZoomIn"
					ToolTip="Увеличить размер устройства" />
				<Slider
					x:Name="deviceSlider"
					VerticalAlignment="Center"
					IsMoveToPointEnabled="True"
					IsSnapToTickEnabled="True"
					Maximum="50"
					Minimum="15"
					Orientation="Horizontal"
					TickFrequency="1"
					TickPlacement="None"
					ToolTip="Изменить размер устройства"
					Value="30" />
			</DockPanel>
			<DockPanel Grid.Column="1">
				<ToolBarButton
					Command="{Binding ZoomOutCommand,
				                                 RelativeSource={RelativeSource FindAncestor,
				                                                                AncestorType={x:Type UserControl}}}"
					DockPanel.Dock="Left"
					ImageSource="ZoomOut"
					ToolTip="Уменьшить масштаб плана" />
				<ToolBarButton
					Command="{Binding ZoomInCommand,
				                                 RelativeSource={RelativeSource FindAncestor,
				                                                                AncestorType={x:Type UserControl}}}"
					DockPanel.Dock="Right"
					ImageSource="ZoomIn"
					ToolTip="Увеличить масштаб плана" />
				<Slider
					x:Name="slider"
					VerticalAlignment="Center"
					IsMoveToPointEnabled="True"
					Maximum="10"
					Minimum="1"
					Orientation="Horizontal"
					ToolTip="Изменить масштаб плана"
					Value="1" />
			</DockPanel>
			<Controls:ToggleButton
				Grid.Column="2"
				Width="50"
				HorizontalAlignment="Right"
				VerticalAlignment="Center"
				Content="{Binding IsCollapsed,
			                                         Converter={StaticResource BoolToMinimizeTextConverter}}"
				IsChecked="{Binding IsCollapsed}"
				ToolTip="{Binding IsCollapsed,
			                                         Converter={StaticResource BoolToMinimizeTooltipConverter},
			                                         ConverterParameter=True}"
				Visibility="{Binding CanCollapse,
			                                            Converter={StaticResource BoolToVisibilityConverter}}" />
		</Grid>
	</Grid>
</UserControl>