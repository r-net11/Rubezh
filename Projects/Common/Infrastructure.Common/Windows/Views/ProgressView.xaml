<UserControl
	x:Class="Infrastructure.Common.Windows.Views.ProgressView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	MinWidth="500"
	Foreground="{DynamicResource ForegroundColorLight}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="30" />
			<RowDefinition Height="Auto" MinHeight="20" />
		</Grid.RowDefinitions>
		<TextBlock
			Grid.Row="0"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			FontSize="17"
			FontWeight="Black"
			Foreground="{DynamicResource ForegroundColorLight}"
			Text="{Binding Title,
		                          Mode=OneWay}"
			TextAlignment="Center"
			TextWrapping="Wrap" />
		<ProgressBar
			Grid.Row="1"
			Margin="10 3 10 3"
			Maximum="{Binding StepCount}"
			Value="{Binding CurrentStep}" />
		<TextBlock
			Grid.Row="1"
			Margin="10 3 10 3"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			FontSize="14"
			Foreground="{DynamicResource ForegroundColorDark}"
			Text="{Binding Text}" />
		<Button
			Grid.Row="2"
			Width="70"
			Margin="5"
			Command="{Binding CancelCommand}"
			Content="{Binding CancelText}"
			Visibility="{Binding CanCancel,
		                             Converter={StaticResource BoolToVisibilityConverter}}" />
	</Grid>
</UserControl>