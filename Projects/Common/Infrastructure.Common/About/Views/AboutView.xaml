<UserControl
	x:Class="Infrastructure.Common.About.Views.AboutView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:lang="clr-namespace:Localization.Common.InfrastructureCommon;assembly=Localization.Common"
	MinWidth="310" MinHeight="130">
	<Border Grid.Column="1" Padding="5">
		<StackPanel>
			<StackPanel.Resources>
				<Style TargetType="TextBlock">
					<Setter Property="Foreground" Value="White" />
					<Setter Property="Margin" Value="2" />
				</Style>
			</StackPanel.Resources>
			<TextBlock Text="{Binding Product, Mode=OneWay}" FontWeight="Bold" />
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="{x:Static lang:CommonResources.Version}" Margin="2" />
				<TextBlock Text="{Binding Version, Mode=OneWay}" />
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="{x:Static lang:CommonResources.Build}" Margin="2" />
				<TextBlock Text="{Binding BuildDate, Mode=OneWay, StringFormat='dd.MM.yyyy в HH:mmm'}" />
			</StackPanel>
			<TextBlock Text="{Binding Copyright, Mode=OneWay}" />
			<TextBlock Text="{x:Static lang:CommonResources.Copyright}" />
			<TextBlock Text="{Binding Trademark, Mode=OneWay}" />
		</StackPanel>
	</Border>
</UserControl>