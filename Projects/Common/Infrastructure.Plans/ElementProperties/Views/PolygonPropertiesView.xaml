<UserControl x:Class="Infrastructure.Plans.ElementProperties.Views.PolygonPropertiesView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:xc="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
			 MinHeight="400" MinWidth="400">
	<TabControl Background="{DynamicResource BackgroundBrush}">
		<TabItem Header="Основные">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0" Grid.Column="0" Style="{DynamicResource TextBlockDetailsStyle}" Text="Название" HorizontalAlignment="Right" />
				<TextBlock Grid.Column="0" Grid.Row="1" Style="{DynamicResource TextBlockDetailsStyle}" Text="Цвет фона" HorizontalAlignment="Right" />
				<TextBlock Grid.Column="0" Grid.Row="2" Style="{DynamicResource TextBlockDetailsStyle}" Text="Цвет границы" HorizontalAlignment="Right" />
				<TextBlock Grid.Column="0" Grid.Row="3" Style="{DynamicResource TextBlockDetailsStyle}" Text="Ширина границы" HorizontalAlignment="Right" />
				<TextBlock Grid.Column="0" Grid.Row="4"  HorizontalAlignment="Right" Text="Отображать подсказку" Style="{DynamicResource TextBlockDetailsStyle}" />

				<TextBox Grid.Row="0" Grid.Column="1" Text="{Binding PresentationName, UpdateSourceTrigger=PropertyChanged}" Margin="2" VerticalContentAlignment="Center" />
				<xc:ColorPicker Grid.Column="1" Grid.Row="1" SelectedColor="{Binding BackgroundColor, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
				<xc:ColorPicker Grid.Column="1" Grid.Row="2" SelectedColor="{Binding BorderColor, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
				<TextBox Grid.Column="1" Grid.Row="3" Text="{Binding StrokeThickness, UpdateSourceTrigger=PropertyChanged}" Margin="2" />
				<CheckBox Grid.Column="1" Grid.Row="4" Margin="2" IsChecked="{Binding ShowTooltip}" />
			</Grid>
		</TabItem>
		<TabItem Header="Изображение">
			<ContentPresenter Content="{Binding ImagePropertiesViewModel}" />
		</TabItem>
	</TabControl>
</UserControl>
