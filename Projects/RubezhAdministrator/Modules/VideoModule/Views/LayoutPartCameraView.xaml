<UserControl x:Class="VideoModule.Views.LayoutPartCameraView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="White">
	<AlignableWrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center">
		<AlignableWrapPanel.LayoutTransform>
			<ScaleTransform ScaleX="2" ScaleY="2" />
		</AlignableWrapPanel.LayoutTransform>
		<Image Source="{Binding IconSource, Converter={StaticResource NullToImageConverter}}" Width="16" Margin="4" Stretch="Uniform" />
		<TextBlock Text="{Binding CameraTitle}" VerticalAlignment="Center" TextAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" />
	</AlignableWrapPanel>
</UserControl>