<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended" xmlns:xc="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit">
	<Style BasedOn="{StaticResource {x:Type ComboBox}}" TargetType="{x:Type ComboBox}">
		<Setter Property="Width" Value="163" />
		<Setter Property="Margin" Value="2" />
	</Style>
	<Style BasedOn="{StaticResource {x:Type xc:ColorPicker}}" TargetType="{x:Type xc:ColorPicker}">
		<Setter Property="Width" Value="163" />
		<Setter Property="Margin" Value="2" />
	</Style>
	<Style BasedOn="{StaticResource {x:Type Label}}" TargetType="{x:Type Label}">
		<Setter Property="Width" Value="100" />
		<Setter Property="Margin" Value="2" />
	</Style>
	<Style BasedOn="{StaticResource {x:Type extToolkit:IntegerUpDown}}" TargetType="{x:Type extToolkit:IntegerUpDown}">
		<Setter Property="Width" Value="163" />
		<Setter Property="Margin" Value="2" />
		<Setter Property="Height" Value="25" />
	</Style>
	<Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="{x:Type TextBox}">
		<Setter Property="Width" Value="163" />
		<Setter Property="Margin" Value="2" />
		<Setter Property="Height" Value="25" />
		<Setter Property="VerticalContentAlignment" Value="Center" />
	</Style>
	<Style BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="{x:Type CheckBox}">
		<Setter Property="Margin" Value="2, 7, 0, 0" />
	</Style>
	<Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="{x:Type TextBlock}">
		<Setter Property="HorizontalAlignment" Value="Right" />
	</Style>
</ResourceDictionary>