<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <title>Сервер приложений Глобал @(ViewBag.IsDemonstration == true ? "[Демонстрационный режим]" : "")</title>
</head>
<body>
    <div>
        <div>
            <ul class="nav nav-tabs">
                <li class="@(ViewBag.CurrentTab == "Connections" ? "active" : "")">@Html.ActionLink("Соединения", "Connections", "Connections")</li>
                <li class="@(ViewBag.CurrentTab == "Log" ? "active" : "")">@Html.ActionLink("Лог", "Log", "Log")</li>
                <li class="@(ViewBag.CurrentTab == "Status" ? "active" : "")">@Html.ActionLink("Статус", "Status", "Status")</li>
                <li class="@(ViewBag.CurrentTab == "GK" ? "active" : "")">@Html.ActionLink("ГК", "GK", "GK")</li>
                <li class="@(ViewBag.CurrentTab == "Polling" ? "active" : "")">@Html.ActionLink("Полинг", "Polling", "Polling")</li>
                <li class="@(ViewBag.CurrentTab == "Operations" ? "active" : "")">@Html.ActionLink("Операции", "Operations", "Operations")</li>
                <li class="@(ViewBag.CurrentTab == "License" ? "active" : "")">@Html.ActionLink("Лицензирование", "License", "License")</li>
            </ul>
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
</body>
</html>