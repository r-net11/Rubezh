<UserControl x:Class="GKImitator.Views.PumpStationPropertiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 MinWidth="400" MinHeight="400">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Content="Задержка, с" />
		<Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Content="Удержание, с" />

		<TextBox Grid.Row="0" Grid.Column="1" Margin="2" Text="{Binding Delay, UpdateSourceTrigger=PropertyChanged}" />
		<TextBox Grid.Row="1" Grid.Column="1" Margin="2" Text="{Binding Hold, UpdateSourceTrigger=PropertyChanged}" />
	</Grid>
</UserControl>
