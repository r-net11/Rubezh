<UserControl x:Class="GKModule.Views.MonthView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<StackPanel HorizontalAlignment="Center">
		<TextBlock Style="{DynamicResource LabelTextBlock}" Text="{Binding MonthType, Converter={StaticResource EnumToDescriptionConverter}}" HorizontalAlignment="Center" Margin="8" FontSize="14" />
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="28" />
			<ColumnDefinition Width="28" />
			<ColumnDefinition Width="28" />
			<ColumnDefinition Width="28" />
			<ColumnDefinition Width="28" />
			<ColumnDefinition Width="28" />
			<ColumnDefinition Width="28" />
		</Grid.ColumnDefinitions>

			<TextBlock Text="Пн" Grid.Column="0" Style="{DynamicResource LabelTextBlock}" />
			<TextBlock Text="Вт" Grid.Column="1" Style="{DynamicResource LabelTextBlock}" />
			<TextBlock Text="Ср" Grid.Column="2" Style="{DynamicResource LabelTextBlock}" />
			<TextBlock Text="Чт" Grid.Column="3" Style="{DynamicResource LabelTextBlock}" />
			<TextBlock Text="Пт" Grid.Column="4" Style="{DynamicResource LabelTextBlock}" />
			<TextBlock Text="Сб" Grid.Column="5" Style="{DynamicResource LabelTextBlock}" />
			<TextBlock Text="Вс" Grid.Column="6" Style="{DynamicResource LabelTextBlock}" />
		
		<ItemsControl Grid.Column="0" Grid.ColumnSpan="7" ItemsSource="{Binding Days}" Margin="-6,-8,0,0">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="28" />
							<ColumnDefinition Width="28" />
							<ColumnDefinition Width="28" />
							<ColumnDefinition Width="28" />
							<ColumnDefinition Width="28" />
							<ColumnDefinition Width="28" />
							<ColumnDefinition Width="28" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="28" />
							<RowDefinition Height="28" />
							<RowDefinition Height="28" />
							<RowDefinition Height="28" />
							<RowDefinition Height="28" />
							<RowDefinition Height="28" />
							<RowDefinition Height="28" />
						</Grid.RowDefinitions>
					</Grid>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Button Content="{Binding No}" Command="{Binding SelectCommand}" Foreground="{DynamicResource ForegroundColor_0}" >
						<Button.Style>
							<Style BasedOn="{StaticResource ToolBarButtonStyle}" TargetType="{x:Type Button}">
								<Style.Triggers>
									<DataTrigger Binding="{Binding IsSelected}" Value="True">
										<Setter Property="Background" Value="{DynamicResource PressedBackgroundBrush}" />
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</Button.Style>
					</Button>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
			<ItemsControl.ItemContainerStyle>
				<Style>
					<Setter Property="Grid.Column" Value="{Binding X}"/>
					<Setter Property="Grid.Row" Value="{Binding Y}"/>
				</Style>
			</ItemsControl.ItemContainerStyle>
		</ItemsControl>
	</Grid>
	</StackPanel>
</UserControl>
