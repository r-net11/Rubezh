<UserControl x:Class="GKModule.Views.PlotView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
             MinWidth="600" MinHeight="600">
    <Grid>
        <d3:ChartPlotter Name="plotter" Margin="10">
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalDateTimeAxis Name="dateAxis" />
            </d3:ChartPlotter.HorizontalAxis>
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalIntegerAxis Name="curentAxis" />
            </d3:ChartPlotter.VerticalAxis>

            <d3:Header FontFamily="Arial" Content="Статистика токопотребления" />
            <d3:VerticalAxisTitle FontFamily="Arial" Content="Ток" />
            <d3:HorizontalAxisTitle FontFamily="Arial" Content="Дата" />
        </d3:ChartPlotter>
    </Grid>
</UserControl>