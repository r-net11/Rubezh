<UserControl x:Class="GKModule.Views.GuardZonesWithFuncSelectationView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:Controls="clr-namespace:Controls;assembly=Controls"
		MinHeight="400" MinWidth="800">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="4*" />
				<ColumnDefinition Width="50" />
				<ColumnDefinition Width="3*" />
			</Grid.ColumnDefinitions>
			<DataGrid x:Name="dataGrid1" Grid.Column="0" ItemsSource="{Binding TargetZones}" SelectedItem="{Binding SelectedTargetZone}" SelectionChanged="OnSelectionChanged" CanUserSortColumns="True"
					  SelectionMode="Extended">
				<DataGrid.Resources>
					<InputBindingCollection x:Key="inputCollection" x:Shared="False">
						<MouseBinding Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ItemsControl}}" MouseAction="LeftDoubleClick" CommandParameter="{Binding ElementName=dataGrid1, Path=SelectedItems}" />
					</InputBindingCollection>
				</DataGrid.Resources>
				<DataGrid.ItemContainerStyle>
					<Style BasedOn="{StaticResource {x:Type DataGridRow}}" TargetType="{x:Type DataGridRow}">
						<Setter Property="Controls:Attach.InputBindings" Value="{StaticResource inputCollection}" />
					</Style>
				</DataGrid.ItemContainerStyle>
				<DataGrid.Columns>
					<DataGridTemplateColumn Header="№" SortMemberPath="No" Width="Auto" CanUserResize="False">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Image Margin="1 0 0 0" Source="/Controls;component/Images/GuardZone.png" VerticalAlignment="Center" />
									<TextBlock Margin="2" VerticalAlignment="Center" Text="{Binding No}" />
								</StackPanel>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTextColumn Binding="{Binding Name}" Header="Выбранные зоны" Width="*" />
					<DataGridTemplateColumn Width="Auto" MinWidth="150" Header="Функция">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<Controls:EditorPresenter>
									<Controls:EditorPresenter.ViewTemplate>
										<ControlTemplate>
											<Grid>
												<Grid VerticalAlignment="Center" Visibility="{Binding IsCodeReader, Converter={StaticResource InversedBoolToVisibilityConverter}}">
													<ComboBox VerticalAlignment="Center" VerticalContentAlignment="Center" ItemsSource="{Binding ActionTypes}" SelectedItem="{Binding SelectedActionType, UpdateSourceTrigger=PropertyChanged}">
														<ComboBox.ItemTemplate>
															<DataTemplate>
																<Controls:IconLabel Foreground="{DynamicResource ForegroundColorDark}" ImageSource="{Binding ., Converter={StaticResource GKGuardZoneDeviceActionTypeToIconConverter}}" Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
															</DataTemplate>
														</ComboBox.ItemTemplate>
													</ComboBox>
												</Grid>
												<TextBlock VerticalAlignment="Center" Visibility="{Binding IsCodeReader, Converter={StaticResource BoolToVisibilityConverter}}">
													<Hyperlink Command="{Binding ShowPropertiesCommand}" Style="{StaticResource HyperlinkStyle2}">
														<TextBlock Margin="2" Text="Свойства" />
													</Hyperlink>
												</TextBlock>
											</Grid>
										</ControlTemplate>
									</Controls:EditorPresenter.ViewTemplate>
								</Controls:EditorPresenter>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTextColumn Binding="{Binding Description}" Header="Примечание" />
				</DataGrid.Columns>
			</DataGrid>
			<StackPanel Grid.Column="1" Margin="2">
				<ToolBarButton Command="{Binding AddCommand}" ToolTip="Добавить выбранные зоны" ImageSource="left"  CommandParameter="{Binding ElementName=dataGrid2, Path=SelectedItems}" />
				<ToolBarButton Command="{Binding RemoveCommand}" ToolTip="Удалить выбранные зоны" ImageSource="right"  CommandParameter="{Binding ElementName=dataGrid1, Path=SelectedItems}" />
				<ToolBarButton Command="{Binding AddAllCommand}" ToolTip="Добавить все зоны" ImageSource="leftLeft"  />
				<ToolBarButton Command="{Binding RemoveAllCommand}" ToolTip="Удалить все зоны" ImageSource="rightRight"  />
			</StackPanel>
			<DataGrid x:Name="dataGrid2" Grid.Column="2" ItemsSource="{Binding SourceZones}" SelectedItem="{Binding SelectedSourceZone}" SelectionChanged="OnSelectionChanged" CanUserSortColumns="True"
					  SelectionMode="Extended" VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Standard">
				<DataGrid.Resources>
					<InputBindingCollection x:Key="inputCollection" x:Shared="False">
						<MouseBinding Command="{Binding DataContext.AddCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ItemsControl}}" MouseAction="LeftDoubleClick" CommandParameter="{Binding ElementName=dataGrid2, Path=SelectedItems}" />
					</InputBindingCollection>
				</DataGrid.Resources>
				<DataGrid.ItemContainerStyle>
					<Style BasedOn="{StaticResource {x:Type DataGridRow}}" TargetType="{x:Type DataGridRow}">
						<Setter Property="Controls:Attach.InputBindings" Value="{StaticResource inputCollection}" />
					</Style>
				</DataGrid.ItemContainerStyle>
				<DataGrid.Columns>
					<DataGridTemplateColumn Header="№" SortMemberPath="No" Width="Auto" CanUserResize="False">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Image Margin="1 0 0 0" Source="/Controls;component/Images/GuardZone.png" VerticalAlignment="Center" />
									<TextBlock Margin="2" VerticalAlignment="Center" Text="{Binding No}" />
								</StackPanel>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTextColumn Binding="{Binding Name}" Header="Зоны" Width="*" />
					<DataGridTextColumn Binding="{Binding Description}" Header="Примечание" />
				</DataGrid.Columns>
			</DataGrid>
		</Grid>
		<Button Grid.Row="1" Content="Создать новую зону" Command="{Binding CreateNewCommand}" Visibility="{Binding CanCreateNew, Converter={StaticResource BoolToVisibilityConverter}}"
			HorizontalAlignment="Left" Width="200" Margin="2" />
	</Grid>
</UserControl>