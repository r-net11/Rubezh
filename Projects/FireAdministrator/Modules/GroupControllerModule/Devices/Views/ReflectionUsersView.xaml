<UserControl x:Class="GKModule.Views.ReflectionUsersView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:views="clr-namespace:GKModule.Views"
			 MinHeight="550" MinWidth="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<DataGrid Grid.Row="0" ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*" />
				<DataGridTextColumn Header="Пароль" Binding="{Binding Password }" Width="*" />
				<DataGridTextColumn Header="Тип" Binding="{Binding Type, Converter={StaticResource EnumToDescriptionConverter}}" Width="*" />
			</DataGrid.Columns>
		</DataGrid>
		<StackPanel Grid.Row="1" Orientation="Horizontal">
			<ToolBarButton Command="{Binding AddCommand}" ToolTip="Добавить" ImageSource="Add" />
			<ToolBarButton Command="{Binding EditCommand}" ToolTip="Редактировать" ImageSource="Edit" />
			<ToolBarButton Command="{Binding DeleteCommand}" ToolTip="Удалить" ImageSource="Delete" />
			<ToolBarButton Command="{Binding ReadCommand}" ToolTip="Читать пользователей" ImageSource="BReadDeviceUsers" />
			<ToolBarButton Command="{Binding WriteCommand}" ToolTip="Записать пользователей" ImageSource="BUpdateDeviceUsers" />
		</StackPanel>
	</Grid>
</UserControl>
