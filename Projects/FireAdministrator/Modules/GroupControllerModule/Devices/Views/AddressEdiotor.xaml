<UserControl x:Class="GKModule.Views.AddressEditor"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<WrapPanel>
		<TextBox Name="addressEditor" Foreground="{DynamicResource ForegroundColorDark}" ContextMenu="{x:Null}"
				PreviewKeyDown="OnPreviewKeyDown"
				TextChanged="OnTextChanged"
				SelectionChanged="OnSelectionChanged"
				LostFocus="OnLostFocus"
				PreviewDragEnter="OnPreviewHandled"
				PreviewDragLeave="OnPreviewHandled"
				PreviewDragOver="OnPreviewHandled"
				PreviewDrop="OnPreviewHandled">
		</TextBox>
	</WrapPanel>
</UserControl>