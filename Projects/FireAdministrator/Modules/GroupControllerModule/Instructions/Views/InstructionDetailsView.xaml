<UserControl
	x:Class="GKModule.Views.InstructionDetailsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Controls="clr-namespace:Controls;assembly=Controls"
	xmlns:Converters="clr-namespace:GKModule.Converters"
	MinWidth="600"
	MinHeight="400">
	<UserControl.Resources>
		<Converters:DevicesToStringConverter x:Key="DevicesToStringConverter" />
		<Converters:DirectionsToStringConverter x:Key="DirectionsToStringConverter" />
	</UserControl.Resources>

	<Border
		Background="{DynamicResource BackgroundBrush}"
		CornerRadius="5"
		Padding="5">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" MinHeight="50" />
			</Grid.RowDefinitions>
			<Grid Grid.Row="0">
				<Grid Margin="2" TextBlock.FontSize="14">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="150" />
						<ColumnDefinition />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="auto" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="*" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="auto" />
					</Grid.RowDefinitions>
					<Label
						Grid.Row="0"
						Grid.Column="0"
						HorizontalAlignment="Right"
						Content="Название" />
					<!--<Label Grid.Column="0" Grid.Row="4" Content="Мультимедиа" HorizontalAlignment="Right" VerticalAlignment="Center" />-->
					<TextBox
						Grid.Row="0"
						Grid.Column="1"
						Margin="2"
						Text="{Binding Name}" />
					<Label
						Grid.Row="1"
						Grid.Column="0"
						HorizontalAlignment="Right"
						Content="Состояние" />
					<ComboBox
						Grid.Row="1"
						Grid.Column="1"
						Margin="2"
						ItemsSource="{Binding AvailableAlarmTypes}"
						SelectedItem="{Binding AlarmType,
					                                 UpdateSourceTrigger=PropertyChanged}"
						Text="{Binding AlarmType}">
						<ComboBox.ItemTemplate>
							<DataTemplate>
								<Controls:IconLabel
									Foreground="{DynamicResource ForegroundColorDark}"
									ImageSource="{Binding .,
								                                          Converter={StaticResource AlarmTypeToBIconConverter}}"
									Text="{Binding .,
								                                   Converter={StaticResource XAlarmTypeToStringConverter}}" />
							</DataTemplate>
						</ComboBox.ItemTemplate>
					</ComboBox>
					<Label
						Grid.Row="2"
						Grid.Column="0"
						HorizontalAlignment="Right"
						Content="Тип инструкции" />
					<ComboBox
						Grid.Row="2"
						Grid.Column="1"
						Margin="2"
						ItemsSource="{Binding AvailableInstructionsType}"
						SelectedItem="{Binding InstructionType,
					                                 UpdateSourceTrigger=PropertyChanged}"
						Text="{Binding InstructionType}">
						<ComboBox.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
							</DataTemplate>
						</ComboBox.ItemTemplate>
					</ComboBox>
					<Label
						Grid.Row="3"
						Grid.Column="0"
						HorizontalAlignment="Right"
						Content="Текст" />
					<TextBox
						Grid.Row="3"
						Grid.Column="1"
						Margin="2"
						AcceptsReturn="True"
						Text="{Binding Text,
					                        Mode=TwoWay,
					                        UpdateSourceTrigger=PropertyChanged}"
						TextWrapping="Wrap" />
					<!--<StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center">
						<TextBlock VerticalAlignment="Center">
							<Hyperlink Command="{Binding GetMediaCommand}" Style="{StaticResource HyperlinkStyle}">
								<TextBlock Text="{Binding Instruction.MediaSource}"/>
								<TextBlock>
									<TextBlock.Style>
										<Style>
											<Style.Triggers>
												<DataTrigger Binding="{Binding Instruction.HasMedia}" Value="false">
													<Setter Property="TextBlock.Text" Value="Нажмите для выбора мультимедиа" />
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</TextBlock.Style>
								</TextBlock>
							</Hyperlink>
						</TextBlock>
						<ToolBarButton Margin="2" ToolTip="Удалить" Command="{Binding RemoveMediaCommand}" ImageSource="Close"  Height="32" Width="32" Visibility="{Binding Instruction.HasMedia, Converter={StaticResource BoolToVisibilityConverter}}"/>
					</StackPanel>-->
				</Grid>
			</Grid>
			<Grid
				Grid.Row="1"
				HorizontalAlignment="Stretch"
				Visibility="{Binding IsDetails,
			                           Converter={StaticResource BoolToVisibilityConverter}}">
				<Grid Margin="2" TextBlock.FontSize="14">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="150" />
						<ColumnDefinition />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="auto" />
						<RowDefinition Height="*" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="auto" />
					</Grid.RowDefinitions>
					<Label
						Grid.Row="0"
						Grid.Column="0"
						HorizontalAlignment="Right"
						Content="Устройства" />
					<TextBlock
						Grid.Row="0"
						Grid.Column="1"
						VerticalAlignment="Center">
						<Hyperlink Command="{Binding SelectDeviceCommand}" Style="{StaticResource HyperlinkStyle}">
							<StackPanel Orientation="Horizontal">
								<TextBlock Margin="2" Text="{Binding InstructionDevices, Converter={StaticResource DevicesToStringConverter}}">
									<TextBlock.ToolTip>
										<WrapPanel>
											<TextBlock Text="{Binding InstructionDevices, Converter={StaticResource DevicesToStringConverter}}" TextWrapping="Wrap" />
										</WrapPanel>
									</TextBlock.ToolTip>
								</TextBlock>
								<TextBlock Margin="2">
									<TextBlock.Style>
										<Style>
											<Style.Triggers>
												<DataTrigger Binding="{Binding InstructionDevices.Count}" Value="0">
													<Setter Property="TextBlock.Text" Value="Нажмите для выбора устройств" />
													<Setter Property="TextBlock.ToolTip" Value="Нажмите для выбора устройств" />
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</TextBlock.Style>
								</TextBlock>
							</StackPanel>
						</Hyperlink>
					</TextBlock>
					<Label
						Grid.Row="1"
						Grid.Column="0"
						HorizontalAlignment="Right"
						Content="Зоны" />
					<TextBlock
						Grid.Row="1"
						Grid.Column="1"
						VerticalAlignment="Center">
						<Hyperlink Command="{Binding SelectZoneCommand}" Style="{StaticResource HyperlinkStyle}">
							<StackPanel Orientation="Horizontal">
								<TextBlock Margin="2">
									<TextBlock.Style>
										<Style>
											<Style.Triggers>
												<DataTrigger Binding="{Binding InstructionZones.Count}" Value="0">
													<Setter Property="TextBlock.Text" Value="Нажмите для выбора зон" />
													<Setter Property="TextBlock.ToolTip" Value="Нажмите для выбора зон" />
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</TextBlock.Style>
								</TextBlock>
							</StackPanel>
						</Hyperlink>
					</TextBlock>
					<Label
						Grid.Row="2"
						Grid.Column="0"
						HorizontalAlignment="Right"
						Content="Направления" />
					<TextBlock
						Grid.Row="2"
						Grid.Column="1"
						VerticalAlignment="Center">
						<Hyperlink Command="{Binding SelectDirectionCommand}" Style="{StaticResource HyperlinkStyle}">
							<StackPanel Orientation="Horizontal">
								<TextBlock
									Margin="2"
									Text="{Binding InstructionDirections,
								                          Converter={StaticResource DirectionsToStringConverter}}"
									TextWrapping="WrapWithOverflow">
									<TextBlock.ToolTip>
										<WrapPanel>
											<TextBlock Text="{Binding InstructionDirections, Converter={StaticResource DirectionsToStringConverter}}" TextWrapping="Wrap" />
										</WrapPanel>
									</TextBlock.ToolTip>
								</TextBlock>
								<TextBlock Margin="2">
									<TextBlock.Style>
										<Style>
											<Style.Triggers>
												<DataTrigger Binding="{Binding InstructionDirections.Count}" Value="0">
													<Setter Property="TextBlock.Text" Value="Нажмите для выбора направлений" />
													<Setter Property="TextBlock.ToolTip" Value="Нажмите для выбора направлений" />
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</TextBlock.Style>
								</TextBlock>
							</StackPanel>
						</Hyperlink>
					</TextBlock>
				</Grid>
			</Grid>
		</Grid>
	</Border>
</UserControl>