<UserControl x:Class="GKModule.Views.DirectionsView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<UserControl.Resources>
		<ContextMenu x:Key="DirectionContextMenu">
			<IconedMenuItem Command="{Binding AddCommand}" ImageSource="BAdd"  Text="Добавить (Ctrl+N)" />
			<IconedMenuItem Command="{Binding DeleteCommand}" ImageSource="BDelete"  Text="Удалить (Ctrl+Del)" />
			<IconedMenuItem Command="{Binding EditCommand}" ImageSource="BEdit"  Text="Редактировать (Ctrl+E)" />
			<IconedMenuItem Command="{Binding CopyCommand}" ImageSource="BCopy"  Text="Копировать (Ctrl+C)" />
			<IconedMenuItem Command="{Binding PasteCommand}" ImageSource="BPaste"  Text="Вставить (Ctrl+V)" />
			<Separator />
			<IconedMenuItem Command="{Binding CopyLogicCommand}" ImageSource="BCopy" Text="Копировать логику" />
			<IconedMenuItem Command="{Binding PasteLogicCommand}" ImageSource="BPaste" Text="Вставить логику" />
		</ContextMenu>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="0" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<DataGrid ContextMenu="{StaticResource DirectionContextMenu}" Grid.Column="0" CanUserSortColumns="True" ItemsSource="{Binding Directions}" SelectedItem="{Binding SelectedDirection}">
				<DataGrid.Columns>
					<DataGridTemplateColumn Header="№" SortMemberPath="Direction.No" Width="Auto" CanUserResize="False">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Image Source="{Binding VisualizationState, Converter={StaticResource VisualizationStateToImageSourceConverter}}" />
									<Image Width="16" Height="16" Source="/Controls;component/Images/BDirection.png" />
									<TextBlock Text="{Binding Direction.No}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2, 0, 5, 0" />
								</StackPanel>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTemplateColumn Width="*" MinWidth="250" Header="Наименование" SortMemberPath="Direction.Name">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<TextBlock VerticalAlignment="Center" Text="{Binding Direction.Name}" />
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTemplateColumn Width="Auto" Header="Задержка">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Margin="2" Text="{Binding Direction.Delay}" />
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTemplateColumn Width="Auto" Header="Удержание">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Margin="2" Text="{Binding Direction.Hold}" />
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTemplateColumn Width="Auto" Header="Режим">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Margin="2" Text="{Binding Direction.DelayRegime, Converter={StaticResource EnumToDescriptionConverter}}" />
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTemplateColumn Width="*" Header="Логика включения">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding PresentationLogic}" TextWrapping="NoWrap" MinWidth="100" VerticalAlignment="Top" LineHeight="15" Margin="0 3 0 0" Cursor="Hand">
									<TextBlock.Style>
										<Style TargetType="TextBlock">
											<Style.Triggers>
												<DataTrigger Binding="{Binding IsLogicGrayed}" Value="True">
													<Setter Property="TextBlock.Foreground" Value="Gray" />
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</TextBlock.Style>
									<TextBlock.InputBindings>
										<MouseBinding Command="{Binding ShowLogicCommand}" MouseAction="LeftClick" />
									</TextBlock.InputBindings>
									<TextBlock.ToolTip>
										<WrapPanel>
											<TextBlock Text="{Binding PresentationLogic}" TextWrapping="Wrap" />
										</WrapPanel>
									</TextBlock.ToolTip>
								</TextBlock>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
				</DataGrid.Columns>
			</DataGrid>
		</Grid>
		<Border Grid.Row="1" Margin="0 4 0 0" Background="White" CornerRadius="5">
			<Grid Visibility="{Binding SelectedDirection, Converter={StaticResource NullToVisibilityConverter}}">
				<StackPanel Margin="2" DataContext="{Binding SelectedDirection}" />
			</Grid>
		</Border>
	</Grid>
</UserControl>