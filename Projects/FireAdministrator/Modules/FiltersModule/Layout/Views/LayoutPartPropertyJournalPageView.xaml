<UserControl x:Class="FiltersModule.Views.LayoutPartPropertyJournalPageView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lang="clr-namespace:Localization.Filter.Views;assembly=Localization">
	<Grid>
		<DataGrid ItemsSource="{Binding Filters}" SelectedItem="{Binding SelectedFilter}">
			<DataGrid.Columns>
				<DataGridTextColumn Width="*" Binding="{Binding Name}" Header="{x:Static lang:CommonViews.Name}" />
                <DataGridTextColumn Width="*" Binding="{Binding Description}" Header="{x:Static lang:CommonViews.Description}" />
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>