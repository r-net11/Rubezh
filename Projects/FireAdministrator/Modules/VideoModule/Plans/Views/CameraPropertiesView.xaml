<UserControl x:Class="VideoModule.Plans.Views.CameraPropertiesView" 
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:langCommon="clr-namespace:Localization.Video.Common;assembly=Localization"
			 xmlns:langViews="clr-namespace:Localization.Video.Views;assembly=Localization"
			 MinWidth="600" MinHeight="400">
	<DataGrid Focusable="True" SelectedItem="{Binding SelectedCamera}" ItemsSource="{Binding Cameras}">
		<DataGrid.Columns>
			<DataGridTemplateColumn Width="*" Header="{x:Static langCommon:CommonResources.Camera}">
				<DataGridTemplateColumn.CellTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
                            <Grid Width="16" Height="16" HorizontalAlignment="Left" Background="{DynamicResource BVideo}" Margin="5 0 5 0" />
							<TextBlock Text="{Binding  Camera.Name, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Center" />
						</StackPanel>
					</DataTemplate>
				</DataGridTemplateColumn.CellTemplate>
			</DataGridTemplateColumn>
			<DataGridTextColumn Width="Auto" Header="{x:Static langViews:CommonViews.Address}" Binding="{Binding PresentationAddress}" />
		</DataGrid.Columns>
	</DataGrid>
</UserControl>