<UserControl x:Class="VideoModule.Views.CameraDetailsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
			 xmlns:mediaSourcePlayer="clr-namespace:MediaSourcePlayer;assembly=MediaSourcePlayer"
			 MinWidth="400" MinHeight="400">
	<TabControl>
		<TabItem Header="Основные">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

				<TextBlock Grid.Row="0" Grid.Column="0" Text="Название" HorizontalAlignment="Right" Style="{DynamicResource TextBlockDetailsStyle}" Margin="2" />
				<TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Camera.Name}" Style="{DynamicResource TextBlockDetailsStyle}" Margin="2" />

				<TextBlock Grid.Row="1" Grid.Column="0" Text="Адрес" HorizontalAlignment="Right" Style="{DynamicResource TextBlockDetailsStyle}" Margin="2" />
				<TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Camera.Ip}" Style="{DynamicResource TextBlockDetailsStyle}" Margin="2" />

				<TextBlock Grid.Row="2" Grid.Column="0" Text="Номер канала" HorizontalAlignment="Right" Style="{DynamicResource TextBlockDetailsStyle}" Margin="2" />
				<TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Camera.RviChannelNo}" Style="{DynamicResource TextBlockDetailsStyle}" Margin="2" />

				<TextBlock Grid.Row="3" Grid.Column="0" Text="Название канала" HorizontalAlignment="Right" Style="{DynamicResource TextBlockDetailsStyle}" Margin="2" />
				<TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Camera.RviChannelName}" Style="{DynamicResource TextBlockDetailsStyle}" Margin="2" />

				<Button Grid.Row="4" Grid.ColumnSpan="2" Click="ButtonBase_OnClick" Content="Предпросмотр" Width="150" Margin="2" IsEnabled="{Binding CanPlay}" />

				
				<Border Grid.Row="5" Grid.ColumnSpan="2">
					<Border.Background>
						<VisualBrush Stretch="Uniform">
							<VisualBrush.Visual>
								<mediaSourcePlayer:MediaPlayer
			                        x:Name="MediaSourcePlayer"
			                        Grid.Row="1"
			                        Grid.RowSpan="5"
			                        Grid.Column="2"
			                        Width="250"
			                        Height="250"
			                        Margin="5"
								    VerticalAlignment="Top">
								</mediaSourcePlayer:MediaPlayer>
							</VisualBrush.Visual>
						</VisualBrush >
					</Border.Background>
				</Border>
			</Grid>
		</TabItem>
	</TabControl>
</UserControl>