<UserControl x:Class="VideoModule.Views.CameraDetailsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
			 MinWidth="400" MinHeight="400">
	<TabControl>
		<TabItem Header="Основные">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

				<TextBlock Grid.Row="0" Grid.Column="0" Text="Название" HorizontalAlignment="Right" Foreground="{DynamicResource ForegroundColor_0}" Margin="2" />
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Camera.Name}" Foreground="White" Margin="2" />

				<TextBlock Grid.Row="1" Grid.Column="0" Text="Адрес" HorizontalAlignment="Right" Foreground="{DynamicResource ForegroundColor_0}" Margin="2" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Camera.Ip}" Foreground="White" Margin="2" />

				<TextBlock Grid.Row="2" Grid.Column="0" Text="Номер канала" HorizontalAlignment="Right" Foreground="{DynamicResource ForegroundColor_0}" Margin="2" />
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Camera.RviChannelNo}" Foreground="White" Margin="2" />

				<TextBlock Grid.Row="3" Grid.Column="0" Text="Название канала" HorizontalAlignment="Right" Foreground="{DynamicResource ForegroundColor_0}" Margin="2" />
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Camera.RviChannelName}" Foreground="White" Margin="2" />

                <Button Grid.Row="4" Grid.ColumnSpan="2" Command="{Binding ShowCommand}" Content="Предпросмотр" Width="150" Margin="2" />

                <Border Grid.Row="5" Grid.ColumnSpan="2" BorderThickness="2" BorderBrush="Black">
					<Border.Background>
						<VisualBrush Stretch="Uniform">
							<VisualBrush.Visual>
								<Image Source="{Binding Image}" />
							</VisualBrush.Visual>
						</VisualBrush >
					</Border.Background>
				</Border>
			</Grid>
		</TabItem>
	</TabControl>
</UserControl>