<UserControl x:Class="VideoModule.Views.LayoutPartPropertyCameraPageView" 
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:langViews="clr-namespace:Localization.Video.Views;assembly=Localization"
			 xmlns:langCommon="clr-namespace:Localization.Video.Common;assembly=Localization">

	<XDataGrid Focusable="True" SelectedItem="{Binding SelectedCamera}" ItemsSource="{Binding Cameras}">
		<DataGrid.Columns>
			<DataGridTemplateColumn Width="250" Header="{x:Static langCommon:CommonResources.Camera}">
				<DataGridTemplateColumn.CellTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<Grid Width="16" Height="16" Margin="5, 0, 5, 0" HorizontalAlignment="Left" Background="{DynamicResource BVideo}" />
							<TextBlock Text="{Binding  Camera.Name, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Center" />
						</StackPanel>
					</DataTemplate>
				</DataGridTemplateColumn.CellTemplate>
			</DataGridTemplateColumn>
            <DataGridTextColumn Width="100" Header="{x:Static langViews:CommonViews.Address}" Binding="{Binding PresentationAddress}" />
		</DataGrid.Columns>
	</XDataGrid>
</UserControl>