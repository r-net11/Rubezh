				<ContentPresenter Margin="6,3,6,3" ContentSource="Header" RecognizesAccessKey="True" />
				<Border Visibility="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}" Margin="5" Background="White" BorderBrush="{DynamicResource WindowBorderBrush}" BorderThickness="1" CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Top">
					<!--<Popup x:Name="Popup" AllowsTransparency="True" Focusable="False" IsOpen="{TemplateBinding IsSubmenuOpen}" Placement="Right" PopupAnimation="Fade">
