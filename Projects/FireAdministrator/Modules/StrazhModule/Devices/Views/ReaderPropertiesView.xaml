<UserControl
	x:Class="StrazhModule.Views.ReaderPropertiesView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:lang="clr-namespace:Localization.Strazh.Views;assembly=Localization"
	xmlns:langCommon="clr-namespace:Localization.Strazh.Common;assembly=Localization"
	MinWidth="600"
	MinHeight="400">
	<Border Background="{DynamicResource BackgroundBrush}">
		<StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock Text="{x:Static lang:CommonViews.CameraSelectationView}" Foreground="{DynamicResource ForegroundColorLight}" VerticalAlignment="Center" Margin="5 2" />
			<TextBlock VerticalAlignment="Center" Margin="5 2">
					<Hyperlink Command="{Binding SelectCameraCommand}" Style="{StaticResource HyperlinkStyle}">
						<TextBlock Margin="2">
						<TextBlock.Style>
							<Style>
								<Setter Property="TextBlock.Text" Value="{Binding Camera.PresentationName}" />
								<Style.Triggers>
									<DataTrigger Binding="{Binding Camera.PresentationName}" Value="{x:Null}">
                                        <Setter Property="TextBlock.Text" Value="{x:Static lang:CommonViews.SelectCamera}" />
                                        <Setter Property="TextBlock.ToolTip" Value="{x:Static lang:CommonViews.SelectCamera}" />
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</TextBlock.Style>
						</TextBlock>
					</Hyperlink>
				</TextBlock>
            <ToolBarButton HorizontalAlignment="Right" Margin="5 2" ToolTip="{x:Static langCommon:CommonResources.Delete}"
					Command="{Binding RemoveCameraCommand}"
					Background="{DynamicResource Delete}"  Height="32" Width="32" />
		</StackPanel>
	</Border>
</UserControl>