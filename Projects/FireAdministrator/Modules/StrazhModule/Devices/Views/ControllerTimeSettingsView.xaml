<UserControl x:Class="StrazhModule.Views.ControllerTimeSettingsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 MinWidth="471" MinHeight="308">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/Controls;component/Themes/Styles.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<Border Background="{StaticResource BackgroundBrush}">
		<Grid Margin="10">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<GroupBox Grid.Row="0"  Header="Дата и время на контроллере">
				<GroupBox.HeaderTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding}" Foreground="{DynamicResource ForegroundColorLight}"/>
					</DataTemplate>
				</GroupBox.HeaderTemplate>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding DeviceTime, Converter={StaticResource DateTimeToStringConverter}}" TextAlignment="Center" Foreground="{DynamicResource ForegroundColorLight}" Margin="2"/>
					<Button Grid.Row="1" Grid.Column="0" Content="Синхронизировать" Command="{Binding SynchronizeDeviceTimeCommand}" Width="150" Margin="2"/>
				</Grid>
			</GroupBox>
			<GroupBox Grid.Row="1" Header="Временная зона и NTP-сервер">
				<GroupBox.HeaderTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding}" Foreground="{DynamicResource ForegroundColorLight}"/>
					</DataTemplate>
				</GroupBox.HeaderTemplate>
				<Grid Margin="5">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>

					<TextBlock Grid.Row="0" Grid.Column="0" Text="Временная зона" HorizontalAlignment="Right" Foreground="{DynamicResource ForegroundColorLight}" Margin="0,2,2,2" Width="90" />
					<ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding AvailableTimeZoneTypes}" SelectedItem="{Binding SelectedTimeZoneType}" Margin="2">
						<ComboBox.ItemTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
							</DataTemplate>
						</ComboBox.ItemTemplate>
					</ComboBox>

					<CheckBox Grid.Row="1" Grid.Column="1" IsChecked="{Binding IsEnabled}" Content="Активировать синхронизацию с NTP-сервером" Foreground="{DynamicResource ForegroundColorLight}" Margin="2" />

					<TextBlock Grid.Row="2" Grid.Column="0" Text="IP-адрес" HorizontalAlignment="Right" Foreground="{DynamicResource ForegroundColorLight}" Margin="2" />
					<TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Name}" Margin="2" />

					<TextBlock Grid.Row="3" Grid.Column="0" Text="Порт" HorizontalAlignment="Right" Foreground="{DynamicResource ForegroundColorLight}" Margin="2" />
					<TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Port}" Margin="2" />

					<TextBlock Grid.Row="4" Grid.Column="0" Text="Описание" HorizontalAlignment="Right" Foreground="{DynamicResource ForegroundColorLight}" Margin="2" />
					<TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Description}" Margin="2" />

					<TextBlock Grid.Row="5" Grid.Column="0" Text="Период обновления, мин." HorizontalAlignment="Right" Foreground="{DynamicResource ForegroundColorLight}" Margin="2" />
					<TextBox Grid.Row="5" Grid.Column="1" Text="{Binding UpdatePeriod}" Margin="2" />

					<StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
						<Button Content="Считать" Command="{Binding ReadCommand}" Width="100" Margin="2" />
						<Button Content="Записать" Command="{Binding WriteCommand}" Width="100" Margin="2" />
					</StackPanel>
				</Grid>
			</GroupBox>
		</Grid>
	</Border>
</UserControl>