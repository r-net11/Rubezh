<UserControl x:Class="StrazhModule.Views.ControllerDoorTypeView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 MinWidth="493" MinHeight="318">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/Controls;component/Themes/StrazhTheme.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<Border Background="{StaticResource BackgroundBrush}">
		<StackPanel Margin="10">
			<StackPanel>
				<GroupBox Header="Тип точки доступа" Margin="2">
					<GroupBox.HeaderTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding}"  Foreground="{DynamicResource ForegroundColorLight}"/>
						</DataTemplate>
					</GroupBox.HeaderTemplate>
					<StackPanel Margin="5">
						<ComboBox ItemsSource="{Binding AvailableDoorTypes}" SelectedItem="{Binding SelectedDoorType}" Width="150" HorizontalAlignment="Left" Margin="2">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</StackPanel>
				</GroupBox>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<StackPanel>
					<GroupBox Header="Запрет повторного прохода" Foreground="{DynamicResource ForegroundColorLight}" Margin="2">
						<StackPanel MinHeight="160" Margin="5">
							<CheckBox Content="Активировать" IsChecked="{Binding IsAntiPassBackActivated}" IsEnabled="{Binding IsAntiPassBackEnabled}" Margin="2"/>
							<RadioButton GroupName="AntipassBackGroup" Content="Считыватель 1-вход, 2-выход" IsChecked="{Binding SelectedAntiPassBackMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=R1In_R2Out}" IsEnabled="{Binding IsAntiPassBackModeR1InR2OutEnabled}" Margin="2"/>
							<RadioButton GroupName="AntipassBackGroup" Content="Считыватель 3-вход, 4-выход" IsChecked="{Binding SelectedAntiPassBackMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=R3In_R4Out}" IsEnabled="{Binding IsAntiPassBackModeR3InR4OutEnabled}" Margin="2"/>
							<RadioButton GroupName="AntipassBackGroup" Content="Считыватель 1 и 3-вход, 2 и 4-выход" IsChecked="{Binding SelectedAntiPassBackMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=R1R3In_R2R4Out}" IsEnabled="{Binding IsAntiPassBackModeR1R3InR2R4OutEnabled}" Margin="2"/>
						</StackPanel>
					</GroupBox>
				</StackPanel>
				<StackPanel>
					<GroupBox Header="Блокировка одновременного прохода" Foreground="{DynamicResource ForegroundColorLight}" Margin="2">
						<StackPanel MinHeight="160" Margin="5">
							<CheckBox Content="Активировать" IsChecked="{Binding IsInterlockActivated}" IsEnabled="{Binding IsInterlockEnabled}" Margin="2"/>
							<RadioButton GroupName="InterlockGroup" Content="Замок 1+2" IsChecked="{Binding SelectedInterlockMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=L1L2}" IsEnabled="{Binding IsInterlockModeL1L2Enabled}" Margin="2"/>
							<RadioButton GroupName="InterlockGroup" Content="Замок 1+2+3" IsChecked="{Binding SelectedInterlockMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=L1L2L3}" IsEnabled="{Binding IsInterlockModeL1L2L3Enabled}" Margin="2"/>
							<RadioButton GroupName="InterlockGroup" Content="Замок 1+2+3+4" IsChecked="{Binding SelectedInterlockMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=L1L2L3L4}" IsEnabled="{Binding IsInterlockModeL1L2L3L4Enabled}" Margin="2"/>
							<RadioButton GroupName="InterlockGroup" Content="Замок 2+3+4" IsChecked="{Binding SelectedInterlockMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=L2L3L4}" IsEnabled="{Binding IsInterlockModeL2L3L4Enabled}" Margin="2"/>
							<RadioButton GroupName="InterlockGroup" Content="Замок 1+3 и 2+4" IsChecked="{Binding SelectedInterlockMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=L1L3_L2L4}" IsEnabled="{Binding IsInterlockModeL1L3_L2L4Enabled}" Margin="2"/>
							<RadioButton GroupName="InterlockGroup" Content="Замок 1+4 и 2+3" IsChecked="{Binding SelectedInterlockMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=L1L4_L2L3}" IsEnabled="{Binding IsInterlockModeL1L4_L2L3Enabled}" Margin="2"/>
							<RadioButton GroupName="InterlockGroup" Content="Замок 3+4" IsChecked="{Binding SelectedInterlockMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=L3L4}" IsEnabled="{Binding IsInterlockModeL3L4Enabled}" Margin="2"/>
						</StackPanel>
					</GroupBox>
				</StackPanel>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<Button Content="Считать" Command="{Binding ReadFromControllerCommand}" Width="150" Margin="2" />
				<Button Content="Записать" Command="{Binding WriteToControllerCommand}" Width="150" Margin="2" />
			</StackPanel>
		</StackPanel>
	</Border>
</UserControl>