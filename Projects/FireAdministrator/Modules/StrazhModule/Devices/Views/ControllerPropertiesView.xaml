<UserControl x:Class="StrazhModule.Views.ControllerPropertiesView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 MinWidth="400" MinHeight="400" MaxWidth="500" MaxHeight="500">

	<TabControl>
		<TabItem Header="Информация">
			<Border CornerRadius="5" Background="White" Margin="5">
				<StackPanel DataContext="{Binding DeviceInfo}" Margin="5">
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="Тип устройства" Width="200" HorizontalAlignment="Right" Margin="2" />
						<TextBlock Text="{Binding DeviceType}" Margin="2" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="Дата выпуска ПО" Width="200" HorizontalAlignment="Right" Margin="2" />
                        <TextBlock Text="{Binding SoftwareBuildDate, StringFormat=dd-MM-yyyy}" Margin="2" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="Версия ПО" Width="200" HorizontalAlignment="Right" Margin="2" />
						<TextBlock Text="{Binding SoftwareVersion}" Margin="2" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="IP-адрес" Width="200" HorizontalAlignment="Right" Margin="2" />
						<TextBlock Text="{Binding IP}" Margin="2" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="Маска подсети" Width="200" HorizontalAlignment="Right" Margin="2" />
						<TextBlock Text="{Binding SubnetMask}" Margin="2" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="Основной шлюз" Width="200" HorizontalAlignment="Right" Margin="2" />
						<TextBlock Text="{Binding DefaultGateway}" Margin="2" />
					</StackPanel>
				</StackPanel>
			</Border>
		</TabItem>
		<TabItem Header="Настройки">
			<Border CornerRadius="5" Background="White" Margin="5">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<GroupBox Grid.Row="0" Grid.Column="0" Header="Команды записи на контроллер" Margin="5">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<Button Grid.Row="0" Grid.Column="0" Content="Запись пропусков" Command="{Binding RewriteAllCardsCommand}" Width="150" Margin="5"/>
							<Button Grid.Row="1" Grid.Column="0" Content="Запись конфигурации" Command="{Binding RewriteConfigurationCommand}" Width="150" Margin="5" />
							<TextBlock  Grid.Row="2" Grid.Column="0" Text="При записи конфигурации на котроллер, на него будут записаны графики доступа, графики замков, пароли замков" TextWrapping="Wrap" TextAlignment="Center" Margin="5"/>
						</Grid>
					</GroupBox>
					<GroupBox Grid.Row="1" Grid.Column="0" Header="Сервисные команды" Margin="5">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<Button Grid.Row="0" Grid.Column="0" Content="Перезагрузить" Command="{Binding RebootCommand}" Width="150" Margin="5"/>
							<Button Grid.Row="1" Grid.Column="0" Content="Сбросить настройки" Command="{Binding ResetCommand}" Width="150" Margin="5" />
							<TextBlock  Grid.Row="2" Grid.Column="0" Text="При сбросе настроек все параметры контроллера будут установлены на заводские, а записанные карты доступа и пропуска будут стерты" TextWrapping="Wrap" TextAlignment="Center" Margin="5"/>
						</Grid>
					</GroupBox>
				</Grid>
			</Border>
		</TabItem>
	</TabControl>
</UserControl>