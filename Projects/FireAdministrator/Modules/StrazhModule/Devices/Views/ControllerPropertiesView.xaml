<UserControl
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:lang="clr-namespace:Localization.Strazh.Views;assembly=Localization"
			 mc:Ignorable="d" x:Class="StrazhModule.Views.ControllerPropertiesView"
			 MinWidth="380" MinHeight="380"
			 MaxWidth="400" MaxHeight="500">

	<TabControl>
		<TabItem Header="{x:Static lang:CommonViews.Information}">
			<Border CornerRadius="5" Background="White" Margin="5">
				<StackPanel>
					<StackPanel DataContext="{Binding DeviceInfo}" Margin="5">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="{x:Static lang:CommonViews.DeviceType}" Width="200" HorizontalAlignment="Right" Margin="2" />
							<TextBlock Text="{Binding DeviceType}" Margin="2" />
						</StackPanel>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="{x:Static lang:CommonViews.ReleaseDate}" Width="200" HorizontalAlignment="Right" Margin="2" />
							<TextBlock Text="{Binding SoftwareBuildDate, StringFormat=dd-MM-yyyy}" Margin="2" />
						</StackPanel>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="{x:Static lang:CommonViews.SoftwareVersion}" Width="200" HorizontalAlignment="Right" Margin="2" />
							<TextBlock Text="{Binding SoftwareVersion}" Margin="2" />
						</StackPanel>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="{x:Static lang:CommonViews.IPaddress}" Width="200" HorizontalAlignment="Right" Margin="2" />
							<TextBlock Text="{Binding IP}" Margin="2" />
						</StackPanel>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="{x:Static lang:CommonViews.Mask}" Width="200" HorizontalAlignment="Right" Margin="2" />
							<TextBlock Text="{Binding SubnetMask}" Margin="2" />
						</StackPanel>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="{x:Static lang:CommonViews.MainGateway}" Width="200" HorizontalAlignment="Right" Margin="2" />
							<TextBlock Text="{Binding DefaultGateway}" Margin="2" />
						</StackPanel>
					</StackPanel>
					<TextBlock Text="{x:Static lang:CommonViews.ObsoleteFirmware}" TextWrapping="Wrap" TextAlignment="Center" Margin="5" Visibility="{Binding IsObsoleteFirmware, Converter={StaticResource BoolToVisibilityConverter}}" />
				</StackPanel>
			</Border>
		</TabItem>
		<TabItem Header="{x:Static lang:CommonViews.Settings}">
			<Border CornerRadius="5" Background="White" Margin="5">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<GroupBox Grid.Row="0" Grid.Column="0" Header="{x:Static lang:CommonViews.ControllerWritesCommands}" Margin="5">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<Button Grid.Row="0" Grid.Column="0" Content="{x:Static lang:CommonViews.CardsWrite}" Command="{Binding RewriteAllCardsCommand}" IsEnabled="{Binding IsCriticalOperationsEnabled}" Width="150" Margin="5"/>
							<Button Grid.Row="1" Grid.Column="0" Content="{x:Static lang:CommonViews.ConfigWrite}" Command="{Binding RewriteConfigurationCommand}" IsEnabled="{Binding IsCriticalOperationsEnabled}" Width="150" Margin="5" />
							<TextBlock  Grid.Row="2" Grid.Column="0" Text="{x:Static lang:CommonViews.WriteAccessSchedules}" TextWrapping="Wrap" TextAlignment="Center" Margin="5"/>
						</Grid>
					</GroupBox>
					<GroupBox Grid.Row="1" Grid.Column="0" Header="{x:Static lang:CommonViews.ServiceCommands}" Margin="5">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<Button Grid.Row="0" Grid.Column="0" Content="{x:Static lang:CommonViews.Reload}" Command="{Binding RebootCommand}" IsEnabled="{Binding IsCriticalOperationsEnabled}" Width="150" Margin="5"/>
							<Button Grid.Row="1" Grid.Column="0" Content="{x:Static lang:CommonViews.ResetSettings}" Command="{Binding ResetCommand}" IsEnabled="{Binding IsCriticalOperationsEnabled}" Width="150" Margin="5" />
							<TextBlock  Grid.Row="2" Grid.Column="0" Text="{x:Static lang:CommonViews.ResetAllParameters}" TextWrapping="Wrap" TextAlignment="Center" Margin="5"/>
							<Button Grid.Row="3" Grid.Column="0" Content="{x:Static lang:CommonViews.UpdateFirmware}" Command="{Binding UpdateFirmwareCommand}" IsEnabled="{Binding IsCriticalOperationsEnabled}" Width="150" Margin="5" />
						</Grid>
					</GroupBox>
				</Grid>
			</Border>
		</TabItem>
	</TabControl>
</UserControl>