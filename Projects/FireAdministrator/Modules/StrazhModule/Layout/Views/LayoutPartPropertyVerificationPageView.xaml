<UserControl x:Class="StrazhModule.Views.LayoutPartPropertyVerificationPageView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lang="clr-namespace:Localization.Strazh.Views;assembly=Localization"
             xmlns:langCommon="clr-namespace:Localization.Strazh.Common;assembly=Localization">
	<DataGrid ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}" Margin="-5">
		<DataGrid.Columns>
            <DataGridTemplateColumn Header="{x:Static langCommon:CommonResources.Controller}" Width="*">
				<DataGridTemplateColumn.CellTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="{Binding Parent.Name}" Margin="2" />
							<TextBlock Text="{Binding Parent.Address}" Margin="2" />
						</StackPanel>
					</DataTemplate>
				</DataGridTemplateColumn.CellTemplate>
			</DataGridTemplateColumn>
            <DataGridTemplateColumn Header="{x:Static lang:CommonViews.Reader}" Width="*">
				<DataGridTemplateColumn.CellTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}" Margin="2" />
					</DataTemplate>
				</DataGridTemplateColumn.CellTemplate>
			</DataGridTemplateColumn>
		</DataGrid.Columns>
	</DataGrid>
</UserControl>