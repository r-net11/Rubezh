<UserControl x:Class="LayoutModule.Views.MonitorLayoutsMenuView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:langCommon="clr-namespace:Localization.Layout.Common;assembly=Localization"
             xmlns:lang="clr-namespace:Localization.Layout.Views;assembly=Localization">
	<StackPanel DataContext="{Binding Context}" Orientation="Horizontal">
        <ToolBarButton Command="{Binding AddCommand}" ImageSource="Add"  ToolTip="{x:Static langCommon:CommonResources.AddLayout}" />
        <ToolBarButton Command="{Binding EditCommand}" ImageSource="Edit"  ToolTip="{x:Static lang:CommonViews.EditLayout}" />
        <ToolBarButton Command="{Binding RemoveCommand}" ImageSource="Delete"  ToolTip="{x:Static lang:CommonViews.DeleteLayout}" />

        <ToolBarButton Command="{Binding LayoutCopyCommand}" ImageSource="Copy"  ToolTip="{x:Static langCommon:CommonResources.Copy}" />
        <ToolBarButton Command="{Binding LayoutCutCommand}" ImageSource="Cut"  ToolTip="{x:Static langCommon:CommonResources.Cut}" />
        <ToolBarButton Command="{Binding LayoutPasteCommand}" ImageSource="Paste"  ToolTip="{x:Static langCommon:CommonResources.Paste}" />
	</StackPanel>
</UserControl>