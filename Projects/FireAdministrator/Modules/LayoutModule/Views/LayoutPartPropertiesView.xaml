<UserControl x:Class="LayoutModule.Views.LayoutPartPropertiesView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:extToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended" xmlns:xc="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit" MinWidth="400" MinHeight="400">
	<UserControl.Resources>
		<SwitchConverter x:Key="UnitTypeConverter" Else="{x:Null}">
			<SwitchCase Then="Авто" When="Auto" />
			<SwitchCase Then="Пиксели" When="Pixel" />
			<SwitchCase Then="Звездочка" When="Star" />
		</SwitchConverter>
		<Style BasedOn="{StaticResource {x:Type ComboBox}}" TargetType="{x:Type ComboBox}">
			<Setter Property="ItemTemplate">
				<Setter.Value>
					<DataTemplate>
						<TextBlock Text="{Binding Converter={StaticResource UnitTypeConverter}}" />
					</DataTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</UserControl.Resources>
	<Border Background="{DynamicResource BackgroundBrush}" CornerRadius="5">
		<Grid Margin="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Content="Ширина" />
			<Label Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" Content="Высота" />

			<Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Content="Тип" />
			<Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Content="Размер" />
			<Label Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Content="Минимальный" />
			<Label Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" Content="Фиксированный" />
			<Label Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" Content="Отступ" />

			<ComboBox Grid.Row="1" Grid.Column="1" Margin="2" ItemsSource="{Binding UnitTypes}" SelectedItem="{Binding WidthType, UpdateSourceTrigger=PropertyChanged}" />
			<ComboBox Grid.Row="1" Grid.Column="2" Margin="2" ItemsSource="{Binding UnitTypes}" SelectedItem="{Binding HeightType, UpdateSourceTrigger=PropertyChanged}" />

			<extToolkit:DoubleUpDown Grid.Row="2" Grid.Column="1" Margin="2" FormatString="F2" Maximum="100000" Minimum="1" Value="{Binding Width, UpdateSourceTrigger=PropertyChanged}" />
			<extToolkit:DoubleUpDown Grid.Row="2" Grid.Column="2" Margin="2" FormatString="F2" Maximum="100000" Minimum="1" Value="{Binding Height, UpdateSourceTrigger=PropertyChanged}" />

			<extToolkit:IntegerUpDown Grid.Row="3" Grid.Column="1" Margin="2" Maximum="10000" Minimum="5" Value="{Binding MinWidth, UpdateSourceTrigger=PropertyChanged}" />
			<extToolkit:IntegerUpDown Grid.Row="3" Grid.Column="2" Margin="2" Maximum="10000" Minimum="5" Value="{Binding MinHeight, UpdateSourceTrigger=PropertyChanged}" />

			<CheckBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding IsWidthFixed, UpdateSourceTrigger=PropertyChanged}" />
			<CheckBox Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding IsHeightFixed, UpdateSourceTrigger=PropertyChanged}" />

			<extToolkit:IntegerUpDown Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="2" Maximum="100" Minimum="0" Value="{Binding Margin, UpdateSourceTrigger=PropertyChanged}" />
		</Grid>
	</Border>
</UserControl>