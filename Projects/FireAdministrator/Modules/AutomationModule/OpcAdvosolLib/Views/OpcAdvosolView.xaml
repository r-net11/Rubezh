<UserControl x:Class="AutomationModule.Views.OpcAdvosolView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:controls="clr-namespace:Controls;assembly=Controls">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		
		<StackPanel Grid.Column="0">
			<ComboBox ItemsSource="{Binding Computers}" SelectedItem="{Binding SelectedComputer}" 
					  HorizontalAlignment="Left" Margin="3" />
			
			<ComboBox ItemsSource="{Binding OpcServers}" SelectedItem="{Binding SelectedOpcServer}"
				  HorizontalAlignment="Left" Margin="3" />
		</StackPanel>
		
		<!--<TreeList Grid.Column="1" Margin="3" Focusable="True" SelectedTreeNode="">
		</TreeList>-->
		<TreeView Grid.Column="1" Margin="3" Focusable="True" ItemsSource="{Binding Tags}">
			<HierarchicalDataTemplate Template="{Binding Template}">
			</HierarchicalDataTemplate>
		</TreeView>
	</Grid>
</UserControl>