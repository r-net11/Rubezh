<UserControl x:Class="AutomationModule.Views.PtzStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Views="clr-namespace:AutomationModule.Views">
	<UserControl.Resources>
		<ResourceDictionary Source="ProcedureResources.xaml" />
	</UserControl.Resources>
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Камера" Style="{DynamicResource TextBlockDetailsStyle}" />
			<Views:ArgumentView DataContext="{Binding CameraArgument}" />
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Номер PTZ" Style="{DynamicResource TextBlockDetailsStyle}" />
			<Views:ArgumentView DataContext="{Binding PtzNumberArgument}" />
		</StackPanel>
	</StackPanel>
</UserControl>