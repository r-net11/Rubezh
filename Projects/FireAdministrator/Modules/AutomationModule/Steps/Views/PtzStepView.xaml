<UserControl x:Class="AutomationModule.Views.PtzStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Views="clr-namespace:AutomationModule.Views"
			 xmlns:lang="clr-namespace:Localization.Automation.Views;assembly=Localization">
	<UserControl.Resources>
		<ResourceDictionary Source="ProcedureResources.xaml" />
	</UserControl.Resources>
	<StackPanel>
		<StackPanel Orientation="Horizontal">
            <Label Content="{x:Static lang:CommonViews.Camera}" Width="140"/>
			<Views:ArgumentView DataContext="{Binding CameraArgument}" />
		</StackPanel>
		<StackPanel Orientation="Horizontal">
            <Label Content="{x:Static lang:CommonViews.PTZNumber}" Width="140"/>
			<Views:ArgumentView DataContext="{Binding PtzNumberArgument}" />
		</StackPanel>
	</StackPanel>
</UserControl>