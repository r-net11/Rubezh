<UserControl
	x:Class="AutomationModule.Views.GuardZoneControlStepView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:StrazhAPI.Enums;assembly=StrazhAPI"
    xmlns:lang="clr-namespace:Localization.Automation.Views;assembly=Localization"
    mc:Ignorable="d"
    d:DesignHeight="300"
	d:DesignWidth="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<TextBlock
			Text="{x:Static lang:CommonViews.GuardZone}"
			VerticalAlignment="Center"
			Foreground="White"
			Margin="5"/>
		<TextBlock
			Grid.Column="1"
			Foreground="White"
			VerticalAlignment="Center"
			Margin="5"
			Focusable="False">
			<Hyperlink
				Command="{Binding ShowGuardListCommand}"
				Style="{StaticResource HyperlinkStyle}">
				<TextBlock
					Foreground="White"
					Text="{Binding CurrentGuardZone}"/>
			</Hyperlink>
		</TextBlock>
		<TextBlock
			Grid.Row="1"
			Text="{x:Static lang:CommonViews.Command}"
			Foreground="White"
			VerticalAlignment="Center"
			Margin="5" />
		<ComboBox
			Grid.Row="1"
			Grid.Column="1"
			ItemsSource="{Binding Source={x:Type enums:GuardZoneCommand}, Converter={StaticResource EnumToItemsSourceConverter}}"
			ItemTemplate="{StaticResource EnumDescriptionTemplate}"
			SelectedItem="{Binding SelectedCommand}"
			Width="200"
			VerticalAlignment="Center"
			HorizontalAlignment="Left"
			Margin="5"/>
	</Grid>
</UserControl>
