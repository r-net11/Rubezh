<UserControl x:Class="AutomationModule.Views.GetListCountStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Views="clr-namespace:AutomationModule.Views"
			 xmlns:lang="clr-namespace:Localization.Automation.Views;assembly=Localization">
	<UserControl.Resources>
		<ResourceDictionary Source="ProcedureResources.xaml" />
	</UserControl.Resources>
	<StackPanel>
		<StackPanel Orientation="Horizontal">
            <Label Content="{x:Static lang:CommonViews.List}" />
			<Views:ArgumentView DataContext="{Binding ListArgument}" />
		</StackPanel>
		<StackPanel Orientation="Horizontal">
            <Label Content="{x:Static lang:CommonViews.Size}" />
			<Views:ArgumentView DataContext="{Binding CountArgument}" />
		</StackPanel>
	</StackPanel>
</UserControl>
