<UserControl x:Class="AutomationModule.Views.GetListCountStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Views="clr-namespace:AutomationModule.Views">
	<UserControl.Resources>
		<ResourceDictionary Source="ProcedureResources.xaml" />
	</UserControl.Resources>
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Список" Style="{DynamicResource TextBlockDetailsStyle}" />
			<Views:ArgumentView DataContext="{Binding ListArgument}" />
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Размер" Style="{DynamicResource TextBlockDetailsStyle}" />
			<Views:ArgumentView DataContext="{Binding CountArgument}" />
		</StackPanel>
	</StackPanel>
</UserControl>
