<UserControl 
    x:Class="AutomationModule.Views.CheckPermissionStepView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Views="clr-namespace:AutomationModule.Views"
	xmlns:lang="clr-namespace:Localization.Automation.Views;assembly=Localization">
    
	<UserControl.Resources>
		<ResourceDictionary Source="ProcedureResources.xaml" />
	</UserControl.Resources>
	<StackPanel>
		<StackPanel Orientation="Horizontal">
            <Label Content="{x:Static lang:CommonViews.Right}" />
			<Views:ArgumentView DataContext="{Binding PermissionArgument}" />
		</StackPanel>
		<StackPanel Orientation="Horizontal">
            <Label Content="{x:Static lang:CommonViews.Result}" />
			<Views:ArgumentView DataContext="{Binding ResultArgument}" />
		</StackPanel>
	</StackPanel>
</UserControl>
