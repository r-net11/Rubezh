<UserControl x:Class="AutomationModule.Views.RandomStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Views="clr-namespace:AutomationModule.Views">
	<UserControl.Resources>
		<ResourceDictionary Source="ProcedureResources.xaml" />
	</UserControl.Resources>
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Результат" Style="{DynamicResource TextBlockDetailsStyle}" />
			<Views:ArgumentView DataContext="{Binding ResultArgument}" />
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Максимум" Style="{DynamicResource TextBlockDetailsStyle}" />
			<Views:ArgumentView DataContext="{Binding MaxValueArgument}" />
		</StackPanel>
	</StackPanel>
</UserControl>