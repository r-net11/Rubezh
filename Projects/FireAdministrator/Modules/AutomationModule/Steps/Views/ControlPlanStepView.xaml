<UserControl x:Class="AutomationModule.Views.ControlPlanStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:views="clr-namespace:AutomationModule.Views"
			 xmlns:automation="clr-namespace:RubezhAPI.Automation;assembly=RubezhAPI">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="ProcedureResources.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Column="0" Grid.Row="0" Text="План" Style="{DynamicResource TextBlockDetailsStyle}" />
		<ComboBox Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" ItemsSource="{Binding Plans}" SelectedItem="{Binding SelectedPlan}">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Caption}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<TextBlock Grid.Column="0" Grid.Row="1" Text="Элемент" Style="{DynamicResource TextBlockDetailsStyle}" />
		<ComboBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" ItemsSource="{Binding Elements}" SelectedItem="{Binding SelectedElement}">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding PresentationName}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<TextBlock Grid.Column="0" Grid.Row="2" Text="Свойство" Style="{DynamicResource TextBlockDetailsStyle}" />
		<ComboBox Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" ItemsSource="{Binding ElementPropertyTypes}" SelectedItem="{Binding SelectedElementPropertyType}">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<TextBlock Grid.Column="0" Grid.Row="3" Text="Значение" Style="{DynamicResource TextBlockDetailsStyle}" />
		<views:ArgumentView Grid.Column="1" Grid.Row="3" DataContext="{Binding ValueArgument}" />

		<TextBlock Grid.Column="0" Grid.Row="5" Text="Всем клиентам" Style="{DynamicResource TextBlockDetailsStyle}" Visibility="{Binding IsServerContext, Converter={StaticResource BoolToVisibilityConverter}}" />
		<CheckBox Grid.Column="1" Grid.Row="5" IsChecked="{Binding ForAllClients}" Visibility="{Binding IsServerContext, Converter={StaticResource BoolToVisibilityConverter}}" />

		<TextBlock Grid.Column="0" Grid.Row="4" Text="Восстанавливать" VerticalAlignment="Top" Width="108" Style="{DynamicResource TextBlockDetailsStyle}" Visibility="{Binding Path=ControlElementType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static automation:ControlElementType.Set}}" />
		<CheckBox Grid.Column="1" Grid.Row="4" IsChecked="{Binding StoreOnServer}" IsEnabled="{Binding CanStoreOnServer}" Visibility="{Binding Path=ControlElementType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static automation:ControlElementType.Set}}" />

		<views:ProcedureLayoutCollectionView Grid.Column="2" Grid.RowSpan="7" DataContext="{Binding ProcedureLayoutCollectionViewModel}" Margin="2" HorizontalAlignment="Left" />
	</Grid>
</UserControl>
