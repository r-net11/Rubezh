<UserControl x:Class="AutomationModule.Views.ForeachStepView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Views="clr-namespace:AutomationModule.Views">
	<UserControl.Resources>
		<ResourceDictionary Source="ProcedureResources.xaml" />
	</UserControl.Resources>

	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Список" Style="{DynamicResource TextBlockDetailsStyle}" />
			<Views:ArgumentView DataContext="{Binding ListArgument}" />
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Элемент" Style="{DynamicResource TextBlockDetailsStyle}" />
			<Views:ArgumentView DataContext="{Binding ItemArgument}" />
		</StackPanel>
	</StackPanel>
</UserControl>