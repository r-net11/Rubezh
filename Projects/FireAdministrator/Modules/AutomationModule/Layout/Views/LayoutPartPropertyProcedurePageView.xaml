<UserControl 
    x:Class="AutomationModule.Layout.Views.LayoutPartPropertyProcedurePageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:inf="clr-namespace:Infrastructure.Common.Windows.Views;assembly=Infrastructure.Common"
    xmlns:lang="clr-namespace:Localization.Automation.Views;assembly=Localization">
	<ListView ItemsSource="{Binding Procedures}" SelectedItem="{Binding SelectedProcedure}">
		<ListView.Resources>
			<InputBindingCollection x:Key="inputCollection" x:Shared="False">
				<MouseBinding Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType={x:Type inf:SaveCancelDialogView}}, Mode=OneTime}" MouseAction="LeftDoubleClick" />
			</InputBindingCollection>
		</ListView.Resources>
		<ListView.ItemContainerStyle>
			<Style BasedOn="{StaticResource {x:Type ListViewItem}}" TargetType="{x:Type ListViewItem}">
				<Setter Property="Attach.InputBindings" Value="{StaticResource inputCollection}" />
			</Style>
		</ListView.ItemContainerStyle>
		<ListView.View>
			<GridView>
				<GridViewColumn Width="250" Header="{x:Static lang:CommonViews.Title}">
					<GridViewColumn.CellTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<Grid VerticalAlignment="Center" Background="{DynamicResource Procedure}" Margin="2 0 0 0" />
								<TextBlock Text="{Binding Name}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2 0" />
							</StackPanel>
						</DataTemplate>
					</GridViewColumn.CellTemplate>
				</GridViewColumn>
			</GridView>
		</ListView.View>
	</ListView>
</UserControl>