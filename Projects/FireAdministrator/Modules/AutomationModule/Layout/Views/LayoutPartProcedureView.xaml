<UserControl x:Class="AutomationModule.Layout.Views.LayoutPartProcedureView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="clr-namespace:Controls;assembly=Controls" Background="White">
	<controls:AlignableWrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center">
		<controls:AlignableWrapPanel.LayoutTransform>
			<ScaleTransform ScaleX="2" ScaleY="2" />
		</controls:AlignableWrapPanel.LayoutTransform>
		<Image Width="16" Margin="4" Source="{Binding IconSource, Converter={StaticResource NullToImageConverter}}" Stretch="Uniform" />
		<TextBlock VerticalAlignment="Center" Text="{Binding Title}" TextAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" />
		<TextBlock VerticalAlignment="Center" Text="{Binding ProcedureTitle}" TextAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" />
	</controls:AlignableWrapPanel>
</UserControl>