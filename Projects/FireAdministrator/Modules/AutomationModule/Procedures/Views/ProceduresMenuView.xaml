<UserControl x:Class="AutomationModule.Views.ProceduresMenuView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Controls="clr-namespace:Controls;assembly=Controls">
	<StackPanel DataContext="{Binding Context}" Orientation="Horizontal">
		<ToolBarButton Command="{Binding AddCommand}" ToolTip="Добавить" ImageSource="Add" />
		<ToolBarButton Command="{Binding EditCommand}" ToolTip="Редактировать" ImageSource="Edit" />
		<ToolBarButton Command="{Binding DeleteCommand}" ToolTip="Удалить" ImageSource="Delete" />
		<ToolBarButton Command="{Binding CopyCommand}" ToolTip="Копировать" ImageSource="Copy" />
		<ToolBarButton Command="{Binding PasteCommand}" ToolTip="Вставить" ImageSource="Paste" />
	</StackPanel>
</UserControl>