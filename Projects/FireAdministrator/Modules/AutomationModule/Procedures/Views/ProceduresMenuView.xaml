<UserControl 
    x:Class="AutomationModule.Views.ProceduresMenuView" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:Controls="clr-namespace:Controls;assembly=Controls"
    xmlns:lang="clr-namespace:Localization.Automation.Views;assembly=Localization">
	
    <StackPanel DataContext="{Binding Context}" Orientation="Horizontal">
        <ToolBarButton Command="{Binding AddCommand}" ToolTip="{x:Static lang:CommonViews.Add}" ImageSource="Add" />
        <ToolBarButton Command="{Binding EditCommand}" ToolTip="{x:Static lang:CommonViews.Edit}" ImageSource="Edit" />
        <ToolBarButton Command="{Binding DeleteCommand}" ToolTip="{x:Static lang:CommonViews.Delete}" ImageSource="Delete" />
        <ToolBarButton Command="{Binding CopyCommand}" ToolTip="{x:Static lang:CommonViews.Copy}" ImageSource="Copy" />
        <ToolBarButton Command="{Binding CutCommand}" ToolTip="{x:Static lang:CommonViews.Cut}" ImageSource="Cut" />
        <ToolBarButton Command="{Binding PasteCommand}" ToolTip="{x:Static lang:CommonViews.Paste}" ImageSource="Paste" />
	</StackPanel>
</UserControl>