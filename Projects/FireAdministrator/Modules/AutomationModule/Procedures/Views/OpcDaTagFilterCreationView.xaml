<UserControl x:Class="AutomationModule.Views.OpcDaTagFilterCreationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="150" MinWidth="400">
	<Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="0" Text="OPC DA Сервер: " VerticalAlignment="Center" />
		<ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding OpcDaServers}" DisplayMemberPath="ServerName" SelectedItem="{Binding SelectedOpcDaServer}"
						HorizontalAlignment="Stretch" />
		<TextBlock Grid.Row="1" Grid.Column="0" Text="Тег: " VerticalAlignment="Center" />
		<ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding OpcDaTags}" DisplayMemberPath="Path" 
				  SelectedItem="{Binding SelectedOpcDaTag}" HorizontalAlignment="Stretch" />
		<TextBlock Grid.Row="2" Grid.Column="0" Text="Гистерезис: " VerticalAlignment="Center" />
		<TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Hysteresis}" IsEnabled="{Binding HysterasisEnabled}" 
				 HorizontalAlignment="Stretch" VerticalAlignment="Center" />
		<TextBlock Grid.Row="3" Grid.Column="0" Text="Название фильтра: " VerticalAlignment="Center" />
		<TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Name}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
		<TextBlock Grid.Row="4" Grid.Column="0" Text="Описание: " VerticalAlignment="Center" />
		<TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Description}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
		
	</Grid>
</UserControl>
