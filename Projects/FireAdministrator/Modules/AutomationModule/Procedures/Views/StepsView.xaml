<UserControl 
    x:Class="AutomationModule.Views.StepsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
    xmlns:ctrl="clr-namespace:Controls.ListViewLayoutManager;assembly=Controls"
    xmlns:lang="clr-namespace:Localization.Automation.Views;assembly=Localization">
    
	<UserControl.Resources>
		<ContextMenu x:Key="StepContextMenu">
            <IconedMenuItem Command="{Binding StepsViewModel.AddStepCommand}" ImageSource="BAdd"  Text="{x:Static lang:CommonViews.AddFunction}" />
            <IconedMenuItem Command="{Binding StepsViewModel.DeleteCommand}" ImageSource="BDelete"  Text="{x:Static lang:CommonViews.DeleteFunction}" />
            <IconedMenuItem Command="{Binding StepsViewModel.CopyCommand}" ImageSource="BCopy"  Text="{x:Static lang:CommonViews.Copy}" />
            <IconedMenuItem Command="{Binding StepsViewModel.CutCommand}" ImageSource="BCut"  Text="{x:Static lang:CommonViews.Cut}" />
            <IconedMenuItem Command="{Binding StepsViewModel.PasteCommand}" ImageSource="BPaste"  Text="{x:Static lang:CommonViews.Paste}" />
		</ContextMenu>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="*" MinHeight="200" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="315" MinHeight="150"/>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal">
            <ToolBarButton Command="{Binding AddStepCommand}" ToolTip="{x:Static lang:CommonViews.AddStep}" ImageSource="Add"  />
            <ToolBarButton Command="{Binding DeleteCommand}" ToolTip="{x:Static lang:CommonViews.DeleteStep}" ImageSource="Delete"  />
            <ToolBarButton Command="{Binding AddIfCommand}" ToolTip="{x:Static lang:CommonViews.AddCondition}" ImageSource="AddCondition"  />
            <ToolBarButton Command="{Binding UpCommand}" ToolTip="{x:Static lang:CommonViews.Up}" ImageSource="arrowUp"  />
            <ToolBarButton Command="{Binding DownCommand}" ToolTip="{x:Static lang:CommonViews.Down}" ImageSource="arrowDown"  />
            <ToolBarButton Command="{Binding DownIntoCommand}" ToolTip="{x:Static lang:CommonViews.Into}" ImageSource="arrowInto"  />
		</StackPanel>
		<tree:TreeList
			ctrl:ListViewLayoutManager.Enabled="True"
			Grid.Row="1"
			Focusable="True"
			SelectedTreeNode="{Binding SelectedStep}"
			Source="{Binding RootSteps}"
			tree:SortBehavior.CanUserSortColumns="False">
			<tree:TreeList.Resources>
				<Style x:Key="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
					<Setter Property="MinWidth" Value="0" />
					<Setter Property="MinHeight" Value="0" />
				</Style>
			</tree:TreeList.Resources>
			<tree:TreeList.View>
				<GridView>
                    <GridViewColumn Width="250" Header="{x:Static lang:CommonViews.Function}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<DockPanel ContextMenu="{StaticResource StepContextMenu}">
									<EditorPresenter>
										<EditorPresenter.ViewTemplate>
											<ControlTemplate>
												<StackPanel Orientation="Horizontal">
													<Image
														VerticalAlignment="Center"
														Source="{Binding ImageSource}"
														Margin="1 0 0 0" />
													<TextBlock
														VerticalAlignment="Center"
														Text="{Binding Step.ProcedureStepType, Converter={StaticResource EnumToDescriptionConverter}}"
														Margin="2" />
												</StackPanel>
											</ControlTemplate>
										</EditorPresenter.ViewTemplate>
									</EditorPresenter>
								</DockPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
                    <GridViewColumn Width="100" ctrl:ProportionalColumn.Width="1"  Header="{x:Static lang:CommonViews.Value}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<EditorPresenter>
									<EditorPresenter.ViewTemplate>
										<ControlTemplate>
											<TextBlock Text="{Binding Content.Description}" ToolTip="{Binding Content.Description}"  />
										</ControlTemplate>
									</EditorPresenter.ViewTemplate>
								</EditorPresenter>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</tree:TreeList.View>
		</tree:TreeList>
		<GridSplitter
			Grid.Row="2"
			Height="5"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Background="Transparent"
			Cursor="SizeNS" />
		<Border
			Grid.Row="3"
			Background="{DynamicResource BackgroundBrush}"
			CornerRadius="5,0,0,5"
			DataContext="{Binding SelectedStep}">
			<ContentPresenter
				Margin="5"
				Content="{Binding Content}"
				ContentTemplateSelector="{StaticResource stepTypeTemplateSelector}" />
		</Border>
	</Grid>
</UserControl>