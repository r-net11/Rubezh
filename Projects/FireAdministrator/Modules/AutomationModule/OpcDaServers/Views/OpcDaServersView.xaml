<UserControl x:Class="AutomationModule.Views.OpcDaServersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<ListView Grid.Column="0" ItemsSource="{Binding OpcDaServers}" SelectedItem="{Binding SelectedOpcDaServer}">
			<ListView.View>
				<GridView>
					<GridViewColumn DisplayMemberBinding="{Binding Path=ServerName}">OPC DA Серверы</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>
		
	</Grid>
</UserControl>
