<UserControl x:Class="AutomationModule.Views.OpcDaClientEditingTagsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Controls="clr-namespace:Controls;assembly=Controls"
			 MinWidth="400" MinHeight="300">
	<TreeList Focusable="True" SelectedTreeNode="{Binding SelectedItem}" Source="{Binding RootItems}">
		<TreeList.View>
			<GridView>
				<GridViewColumn Header="Тег" Width="Auto">
					<GridViewColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Margin="31,0,0,0" HorizontalAlignment="Stretch" Width="Auto"
									   VerticalAlignment="Center" TextAlignment="Left" Text="{Binding Element.ElementName}" />
						</DataTemplate>
					</GridViewColumn.CellTemplate>
				</GridViewColumn>
				<GridViewColumn Header="Выбрано" Width="Auto">
					<GridViewColumn.CellTemplate>
						<DataTemplate>
							<CheckBox HorizontalAlignment="Center" IsChecked="{Binding Element.IsChecked, UpdateSourceTrigger=PropertyChanged}"
									  Visibility="{Binding Element.IsTag, Converter={StaticResource BoolToVisibilityConverter}}" Width="*" />
						</DataTemplate>
					</GridViewColumn.CellTemplate>
				</GridViewColumn>
			</GridView>
		</TreeList.View>
	</TreeList>
</UserControl>