<UserControl x:Class="AutomationModule.Views.OpcDaClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<DataGrid Grid.Column="0" ItemsSource="{Binding OpcDaServers}" SelectedItem="{Binding SelectedOpcServer}" Margin="3">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Название" Binding="{Binding ServerName}" IsReadOnly="True" />
				<DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" />
				<DataGridTextColumn Header="URL" Binding="{Binding Url}" IsReadOnly="True" />
				<DataGridTextColumn Header="Login" Binding="{Binding Login}" IsReadOnly="True" />
				<DataGridTextColumn Header="Password" Binding="{Binding Password}" IsReadOnly="True" />
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>
