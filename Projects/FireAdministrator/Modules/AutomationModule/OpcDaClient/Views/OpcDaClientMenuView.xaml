<UserControl x:Class="AutomationModule.Views.OpcDaClientMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<StackPanel Orientation="Horizontal" DataContext="{Binding Context}">
			<ToolBarButton Command="{Binding AddOpcServerCommand}" ToolTip="Добавать OPC DA сервер (Ctrl + N)" ImageSource="Add" />
			<ToolBarButton Command="{Binding RemoveOpcServerCommand}" ToolTip="Удалить OPC DA сервер (Ctrl + Del)" ImageSource="Delete" />
			<ToolBarButton Command="{Binding EditTagListCommand}" ToolTip="Редактировать список тегов (Ctrl + E)" ImageSource="Edit" />
		</StackPanel>
	</Grid>
</UserControl>