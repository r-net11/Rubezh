<UserControl x:Class="AutomationModule.Views.SoundsMenuView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<StackPanel Orientation="Horizontal" DataContext="{Binding Context}">
		<ToolBarButton Command="{Binding AddCommand}" ToolTip="Добавить" ImageSource="Add"  />
		<ToolBarButton Command="{Binding EditCommand}" ToolTip="Редактировать" ImageSource="Edit"  />
		<ToolBarButton Command="{Binding DeleteCommand}" ToolTip="Удалить" ImageSource="Delete"  />
		<ToolBarButton Command="{Binding PlaySoundCommand}" ImageSource="Stop" Width="32" Visibility="{Binding IsNowPlaying, Converter={StaticResource BoolToVisibilityConverter}}" />
		<ToolBarButton Command="{Binding PlaySoundCommand}" ImageSource="Play" Visibility="{Binding IsNowPlaying, Converter={StaticResource InversedBoolToVisibilityConverter}}" />
	</StackPanel>
</UserControl>