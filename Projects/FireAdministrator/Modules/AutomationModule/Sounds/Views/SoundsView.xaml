<UserControl 
    x:Class="AutomationModule.Views.SoundsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:lang="clr-namespace:Localization.Automation.Views;assembly=Localization">

	<DataGrid
		CanUserSortColumns="True"
		ItemsSource="{Binding Sounds}" 
		SelectedItem="{Binding SelectedSound}" 
		IsReadOnly="False">
		<DataGrid.Columns>
			<DataGridTemplateColumn 
				Header="{x:Static lang:CommonViews.Sound}"
				SortMemberPath="Name"
				Width="*">
				<DataGridTemplateColumn.CellTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<Grid Background="{DynamicResource BlueSound}" Width="16" Margin="2 0 2 0" />
							<TextBlock Text="{Binding Name}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="2 0"/>
						</StackPanel>
					</DataTemplate>
				</DataGridTemplateColumn.CellTemplate>
			</DataGridTemplateColumn>
		</DataGrid.Columns>
	</DataGrid>
</UserControl>