<UserControl x:Class="DevicesModule.Views.IndicatorPageDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Привязать зоны к индикаторам данной страницы" Foreground="White" Margin="2" />
            <TextBlock Text="{Binding PresenrationZones}" Foreground="White" Margin="2" TextWrapping="Wrap" />
            <Button Content="Изменить зоны" Command="{Binding ShowZonesCommand}" Width="200" Margin="2" />
        </StackPanel>
    </Grid>
</UserControl>