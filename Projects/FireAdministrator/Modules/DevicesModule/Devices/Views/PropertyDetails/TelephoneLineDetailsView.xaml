<UserControl x:Class="DevicesModule.Views.TelephoneLineDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:extToolkit="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit.Extended" xmlns:Views="clr-namespace:DevicesModule.Views" MinWidth="600" MinHeight="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Border Grid.Column="1" CornerRadius="5" Margin="5, 0, 0, 0" Background="{DynamicResource BackgroundBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" Content="Линия 1" />
                    <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" Content="Линия 2" />
                    <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" Content="Линия 3" />
                    <Label Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" Content="Линия 4" />
                    <Label Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right" Content="Номер объекта" />
                    <Label Grid.Column="0" Grid.Row="5" HorizontalAlignment="Right" Content="Период проверки тона (мин)" />
                    <Label Grid.Column="0" Grid.Row="6" HorizontalAlignment="Right" Content="Период проверки линейного нарпяжения (сек)" />
                    <Label Grid.Column="0" Grid.Row="7" HorizontalAlignment="Right" Content="Количество попыток связи" />
                    <Label Grid.Column="0" Grid.Row="8" HorizontalAlignment="Right" Content="Время потери связи с ППКП (сек)" />
                    <Label Grid.Column="0" Grid.Row="9" HorizontalAlignment="Right" Content="Период проверки исходящего теста (мин)" />

                    <TextBox Views:TelephoneLineDetailsView.IsNumericOnly="True" Grid.Column="1" Grid.Row="0" Text="{Binding Phone1}" Margin="2" />
                    <TextBox Views:TelephoneLineDetailsView.IsNumericOnly="True" Grid.Column="1" Grid.Row="1" Text="{Binding Phone2}" Margin="2" />
                    <TextBox Views:TelephoneLineDetailsView.IsNumericOnly="True" Grid.Column="1" Grid.Row="2" Text="{Binding Phone3}" Margin="2" />
                    <TextBox Views:TelephoneLineDetailsView.IsNumericOnly="True" Grid.Column="1" Grid.Row="3" Text="{Binding Phone4}" Margin="2" />
                    <TextBox Views:TelephoneLineDetailsView.IsNumericOnly="True" Grid.Column="1" Grid.Row="4" Text="{Binding ObjectNumber}" Margin="2" />
                    <extToolkit:IntegerUpDown Grid.Column="1" Grid.Row="5" Value="{Binding TestDialtone}" Minimum="0" Increment="5" Margin="2" />
                    <extToolkit:IntegerUpDown Grid.Column="1" Grid.Row="6" Value="{Binding TestVoltage}" Minimum="0" Maximum="30" Increment="10" Margin="2" />
                    <extToolkit:IntegerUpDown Grid.Column="1" Grid.Row="7" Value="{Binding CountRecalls}" Minimum="1" Maximum="8" Increment="1" Margin="2" />
                    <extToolkit:IntegerUpDown Grid.Column="1" Grid.Row="8" Value="{Binding Timeout}" Minimum="0" Maximum="160" Increment="10" Margin="2" />
                    <extToolkit:IntegerUpDown Grid.Column="1" Grid.Row="9" Value="{Binding OutcomingTest}" Minimum="0" Maximum="160" Increment="10" Margin="2" />
                </Grid>
            </Border>
            <StackPanel Orientation="Horizontal">
                <Button Content="Прямое соединение" Command="{Binding ResetToDirectConnectionCommand}" Width="150" Margin="2" />
                <Button Content="Считать настройки" Command="{Binding ReadCommand}" Width="150" Margin="2" />
                <Button Content="Выбрать все" Command="{Binding SelectAllCommand}" Width="100" Margin="2" />
                <Button Content="Отменить все" Command="{Binding DeselectAllCommand}" Width="100" Margin="2" />
            </StackPanel>
        </StackPanel>
        <ListBox Grid.Row="1" ItemsSource="{Binding FilterItems}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsActive}" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
