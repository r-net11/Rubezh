<UserControl x:Class="DevicesModule.Views.AddressEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <WrapPanel>
        <TextBox Name="addressEditor" Foreground="Black" ContextMenu="{x:Null}"
                PreviewKeyDown="OnPreviewKeyDown"
                TextChanged="OnTextChanged"
                SelectionChanged="OnSelectionChanged"
                LostFocus="OnLostFocus"
                PreviewDragEnter="OnPreviewHandled"
                PreviewDragLeave="OnPreviewHandled"
                PreviewDragOver="OnPreviewHandled"
                PreviewDrop="OnPreviewHandled" 
                GotFocus="addressEditor_GotFocus">
        </TextBox>
    </WrapPanel>
</UserControl>