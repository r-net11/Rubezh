<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:s="clr-namespace:PlansModule.Designer">

	<Style x:Key="ThumbCorner" TargetType="{x:Type Shape}">
		<Setter Property="SnapsToDevicePixels" Value="true" />
		<Setter Property="Stroke" Value="LightSlateGray" />
		<Setter Property="StrokeThickness" Value=".5" />
		<Setter Property="Width" Value="7" />
		<Setter Property="Height" Value="7" />
		<Setter Property="Margin" Value="-2" />
		<Setter Property="Fill">
			<Setter.Value>
				<RadialGradientBrush Center="0.3, 0.3" GradientOrigin="0.3, 0.3" RadiusX="0.7" RadiusY="0.7">
					<GradientStop Offset="0" Color="White" />
					<GradientStop Offset="0.9" Color="DarkSlateGray" />
				</RadialGradientBrush>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type s:ResizeChromeRectangle}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type s:ResizeChromeRectangle}">
					<Grid>
						<Grid Name="PART_ResizeGrid" Margin="-3" Opacity="0">
							<s:ResizeThumbRectangle Name="PART_TopThumb" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Top" Cursor="SizeNS" />
							<s:ResizeThumbRectangle Name="PART_LeftThumb" Width="3" HorizontalAlignment="Left" VerticalAlignment="Stretch" Cursor="SizeWE" />
							<s:ResizeThumbRectangle Name="PART_RightThumb" Width="3" HorizontalAlignment="Right" VerticalAlignment="Stretch" Cursor="SizeWE" />
							<s:ResizeThumbRectangle Name="PART_BottomThumb" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Cursor="SizeNS" />
							<s:ResizeThumbRectangle Name="PART_TopLeftThumb" Width="7" Height="7" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="SizeNWSE" />
							<s:ResizeThumbRectangle Name="PART_TopRightThumb" Width="7" Height="7" Margin="0" HorizontalAlignment="Right" VerticalAlignment="Top" Cursor="SizeNESW" />
							<s:ResizeThumbRectangle Name="PART_BottomLeftThumb" Width="7" Height="7" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Cursor="SizeNESW" />
							<s:ResizeThumbRectangle Name="PART_BottomRightThumb" Width="7" Height="7" Margin="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Cursor="SizeNWSE" />
						</Grid>
						<Grid Name="PART_Decorators" Margin="-3" IsHitTestVisible="False" Opacity="1">
							<Rectangle Name="PART_CornerRectangle" Margin="1" SnapsToDevicePixels="True" StrokeThickness="1">
								<Rectangle.Stroke>
									<LinearGradientBrush Opacity=".7" StartPoint="0, 0" EndPoint="1, .3">
										<GradientStop Offset="0" Color="SlateGray" />
										<GradientStop Offset=".5" Color="LightGray" />
										<GradientStop Offset="1" Color="SlateGray" />
									</LinearGradientBrush>
								</Rectangle.Stroke>
							</Rectangle>
							<Ellipse Name="PART_TopLeftEllipse" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource ThumbCorner}" />
							<Ellipse Name="PART_TopRightEllipse" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{StaticResource ThumbCorner}" />
							<Ellipse Name="PART_BottomLeftEllipse" HorizontalAlignment="Left" VerticalAlignment="Bottom" Style="{StaticResource ThumbCorner}" />
							<Ellipse Name="PART_BottomRightEllipse" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource ThumbCorner}" />
						</Grid>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>