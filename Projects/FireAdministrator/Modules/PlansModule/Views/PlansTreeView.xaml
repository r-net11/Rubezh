<UserControl
	x:Class="PlansModule.Views.PlansTreeView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Controls="clr-namespace:Controls;assembly=Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:drag="clr-namespace:Infrastructure.Common.Services.DragDrop;assembly=Infrastructure.Common"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
	xmlns:lang="clr-namespace:Localization.Plans.Views;assembly=Localization"
	xmlns:langCommon="clr-namespace:Localization.Plans.Common;assembly=Localization"
	d:DesignHeight="300"
	d:DesignWidth="300"
	mc:Ignorable="d">
	<drag:TreeListDragDropDecorator
		IsSource="True"
		IsTarget="True"
		TreeNodeDropCommand="{Binding TreeNodeDropCommand}">
		<tree:TreeList SelectedTreeNode="{Binding PlansViewModel.SelectedPlan}" Source="{Binding PlansViewModel.Plans}">
			<tree:TreeList.Resources>
				<InputBindingCollection x:Key="inputCollection" x:Shared="False">
					<MouseBinding Command="{Binding DataContext.PlansViewModel.EditCommand, RelativeSource={RelativeSource AncestorType={x:Type tree:TreeList}}}" MouseAction="LeftDoubleClick" />
				</InputBindingCollection>
				<ContextMenu x:Key="contextMenu" DataContext="{Binding DataContext.PlansViewModel, RelativeSource={RelativeSource AncestorType={x:Type tree:TreeList}}}">
					<Controls:IconedMenuItem
						Command="{Binding AddSubPlanCommand}"
						ImageSource="BAdd"
						Text="{x:Static lang:CommonViews.ChildPlanAdd}" />
					<Controls:IconedMenuItem
						Command="{Binding AddSubFolderCommand}"
						ImageSource="BFolderOpen"
						Text="{x:Static lang:CommonViews.ChildFolderAdd}" />
					<Controls:IconedMenuItem
						Command="{Binding EditCommand}"
						ImageSource="BEdit"
						Text="{x:Static lang:CommonViews.Edit}" />
					<Controls:IconedMenuItem
						Command="{Binding RemoveCommand}"
						ImageSource="BDelete"
						Text="{x:Static lang:CommonViews.Delete}" />
					<Separator />
					<Controls:IconedMenuItem
						Command="{Binding PlanCopyCommand}"
						ImageSource="BCopy"
						Text="{x:Static langCommon:CommonResources.Copy}" />
					<Controls:IconedMenuItem
						Command="{Binding PlanCutCommand}"
						ImageSource="BCut"
						Text="{x:Static langCommon:CommonResources.Cut}" />
					<Controls:IconedMenuItem
						Command="{Binding PlanPasteCommand}"
						CommandParameter="{StaticResource False}"
						ImageSource="BPaste"
						Text="{x:Static langCommon:CommonResources.Paste}" />
				</ContextMenu>
			</tree:TreeList.Resources>
			<tree:TreeList.ItemContainerStyle>
				<Style BasedOn="{StaticResource {x:Type tree:TreeListItem}}" TargetType="{x:Type tree:TreeListItem}">
					<Setter Property="ContextMenu" Value="{StaticResource contextMenu}" />
					<Setter Property="Controls:Attach.InputBindings" Value="{StaticResource inputCollection}" />
					<Setter Property="Focusable" Value="True" />
				</Style>
			</tree:TreeList.ItemContainerStyle>
			<tree:TreeList.View>
				<GridView>
                    <GridViewColumn Width="250" Header="{x:Static langCommon:CommonResources.Plans}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<Border Background="Transparent">
									<StackPanel Orientation="Horizontal">
										<Image
											Name="Image"
											Margin="2"
											VerticalAlignment="Center"
											Source="/Controls;component/Images/CMap.png" />
										<TextBlock VerticalAlignment="Center" Text="{Binding Caption}" />
									</StackPanel>
								</Border>
								<DataTemplate.Triggers>
									<DataTrigger Binding="{Binding IsFolder}" Value="True">
										<Setter TargetName="Image" Property="Image.Source" Value="/Controls;component/Images/CFolder.png" />
									</DataTrigger>
								</DataTemplate.Triggers>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</tree:TreeList.View>
		</tree:TreeList>
	</drag:TreeListDragDropDecorator>
</UserControl>