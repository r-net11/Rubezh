<UserControl x:Class="PlansModule.Views.LayoutPartPlansView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 Background="White">
	<UserControl.Style>
		<Style>
			<Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
		</Style>
	</UserControl.Style>
	<AlignableWrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center">
		<AlignableWrapPanel.LayoutTransform>
			<ScaleTransform ScaleX="2" ScaleY="2" />
		</AlignableWrapPanel.LayoutTransform>
		<Image Width="16" Margin="4" Source="{Binding IconSource, Converter={StaticResource NullToImageConverter}}" Stretch="Uniform" />
		<TextBlock VerticalAlignment="Center" Text="{Binding Title}" TextAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" />
		<TextBlock VerticalAlignment="Center" Text="{Binding PlansTitle}" TextAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" />
	</AlignableWrapPanel>
</UserControl>