<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<?include Variables.wxi?>
	<Fragment>
		<Icon Id="ServerMonitorIcon" SourceFile="Data\ServerLogo.ico"/>

		<DirectoryRef Id="ProgramMenuDir.AdditionalFolder">
			<Component
				Id="Server.ProgramsMenuShortcut"
				Guid="0B78E060-19EB-4811-8094-A96E3CBC6613">
				<Shortcut
					Id="Server.ProgramsMenuShortcut"
					Name="$(var.ServerMonitorName)"
					Target="[SERVERLOCATION]$(var.Server.TargetFileName)"
		            WorkingDirectory="SERVERLOCATION"
					Description="$(var.ServerMonitorName)"
					Icon="ServerMonitorIcon"/>
				<RegistryValue
					Root="HKCU"
					Key="Software\[Manufacturer]\[ProductName]\$(var.ServerMonitorName)"
					Name="installed"
					Type="integer"
					Value="1"
					KeyPath="yes" />
				<Condition>SHORTCUT_PROGRAMMENU</Condition>
			</Component>
		</DirectoryRef>
	</Fragment>
</Wix>