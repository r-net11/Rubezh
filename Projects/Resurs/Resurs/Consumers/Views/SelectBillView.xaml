<UserControl x:Class="Resurs.Views.SelectBillView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
			 xmlns:viewModel="clr-namespace:Resurs.ViewModels"
			 xmlns:view="clr-namespace:Resurs.Views" 
			 MinWidth="1240" MinHeight="600">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<view:ConsumerListView DataContext="{Binding ConsumerListViewModel}" />
		<GridSplitter Grid.Column="1" Width="5" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" Background="Transparent" />
		<StackPanel Grid.Column="2" Visibility="{Binding Bills, Converter={StaticResource NullToVisibilityConverter}}">
			<view:BillsView DataContext="{Binding Bills}" />
		</StackPanel>
	</Grid>
</UserControl>