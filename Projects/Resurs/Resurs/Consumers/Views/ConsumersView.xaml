<UserControl x:Class="Resurs.Views.ConsumersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:tree="clr-namespace:Controls.TreeList;assembly=Controls"
			 xmlns:viewModel="clr-namespace:Resurs.ViewModels"
			  xmlns:views="clr-namespace:Resurs.Views" >
	<UserControl.Resources>
		<viewModel:ConsumerViewModelNameComparer x:Key="ConsumerViewModelNameComparer" />
		<viewModel:ConsumerViewModelAddressComparer x:Key="ConsumerViewModelAddressComparer" />
		<viewModel:ConsumerViewModelDescriptionComparer x:Key="ConsumerViewModelDescriptionComparer" />
	</UserControl.Resources>


	<Grid>
		<Grid.InputBindings>
			<KeyBinding Modifiers="Control" Key="N" Command="{Binding AddCommand}" />
			<KeyBinding Modifiers="Control" Key="E" Command="{Binding EditCommand}" />
			<KeyBinding Modifiers="Control" Key="Del" Command="{Binding RemoveCommand}" />
			<KeyBinding Modifiers="Control" Key="G" Command="{Binding AddFolderCommand}" />
			<KeyBinding Modifiers="Control" Key="M" Command="{Binding ChangeParentCommand}" />
		</Grid.InputBindings>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal">
			<ToolBarButton Command="{Binding AddCommand}" ToolTip="Добавить (Ctrl+N)" ImageSource="Add" />
			<ToolBarButton Command="{Binding AddFolderCommand}" ToolTip="Добавить группу (Ctrl+G)" ImageSource="AddChild" />
			<ToolBarButton Command="{Binding ChangeParentCommand}" ToolTip="Переместить в группу (Ctrl+M)" ImageSource="ArrowInto" />
			<ToolBarButton Command="{Binding EditCommand}" ToolTip="Редактировать (Ctrl+E)" ImageSource="Edit" />
			<ToolBarButton Command="{Binding RemoveCommand}" ToolTip="Удалить (Ctrl+Del)" ImageSource="Delete" />
		</StackPanel>
		<tree:TreeList Grid.Row="1" Source="{Binding RootConsumers}" SelectedTreeNode="{Binding SelectedConsumer}" ItemActivatedCommand="{Binding EditCommand}"
					   Focusable="True" tree:SortBehavior.CanUserSortColumns="True">
			<tree:TreeList.View>
				<GridView>
					<GridViewColumn Header="Название" ListViewLayoutManager.StarWidth="1" tree:SortBehavior.SortComparer="{StaticResource ConsumerViewModelNameComparer}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Image Margin="1 0 0 0" VerticalAlignment="Center" Source="{Binding ImageSource}" />
									<TextBlock Margin="2 0" VerticalAlignment="Center" Text="{Binding Consumer.Name}" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="Адрес" ListViewLayoutManager.StarWidth="1" tree:SortBehavior.SortComparer="{StaticResource ConsumerViewModelAddressComparer}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Margin="2 0" VerticalAlignment="Center" Text="{Binding Consumer.Address}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="Примечание" ListViewLayoutManager.StarWidth="1" tree:SortBehavior.SortComparer="{StaticResource ConsumerViewModelDescriptionComparer}">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<TextBlock Margin="2 0" VerticalAlignment="Center" Text="{Binding Consumer.Description}" />
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</tree:TreeList.View>
		</tree:TreeList>
		<GridSplitter Grid.Column="1" Grid.Row="1" Width="4" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext"/>
		<views:ConsumerDetailsView Grid.Column="2" Grid.Row="1" DataContext="{Binding SelectedConsumer.ConsumerDetails}" Visibility="{Binding ., Converter={StaticResource NullToVisibilityConverter}}" Margin="5 0 0 0" />
		<views:ConsumersFolderDetailsView Grid.Column="2" Grid.Row="1" DataContext="{Binding SelectedConsumer.ConsumersFolderDetails}" Visibility="{Binding ., Converter={StaticResource NullToVisibilityConverter}}" Margin="5 0 0 0" />
	</Grid>
</UserControl>