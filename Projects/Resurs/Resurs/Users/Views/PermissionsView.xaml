<UserControl x:Class="Resurs.Views.PermissionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<ListView Grid.Row="0" Focusable="True" ItemsSource="{Binding PermissionViewModels}" SortBehavior.CanUserSortColumns="True">
			<ListView.View>
				<GridView >
					<GridViewColumn Header="Права" >
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal" >
									<Image Margin="1 0 0 0" VerticalAlignment="Center" Source="/Controls;component/Images/AccessTemplate.png" />
									<CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5 2" IsEnabled="{Binding IsEnabled}" Content="{Binding PermissionType,Converter={StaticResource EnumToDescriptionConverter}}" />
								</StackPanel>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>
		<StackPanel Grid.Row="1" Orientation="Horizontal">
			<ToolBarButton Command="{Binding CheckAllCommand}" ToolTip="Выделить все" ImageSource="SelectAll" />
			<ToolBarButton Command="{Binding UnCheckAllCommand}" ToolTip="Снять все выделения" ImageSource="SelectNone" />
		</StackPanel>
	</Grid>
</UserControl>