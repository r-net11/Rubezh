<UserControl x:Class="Resurs.Views.TariffDetailsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 MinWidth="400" MinHeight="200">
	<StackPanel Orientation="Vertical">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="150" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto" />
				<RowDefinition Height="auto" />
				<RowDefinition Height="auto" />
				<RowDefinition Height="auto" />
			</Grid.RowDefinitions>
			<TextBlock Grid.Column="0" Grid.Row="0" Text="Название тарифа" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{DynamicResource TextBlockDetailsStyle}" />
			<TextBlock Grid.Column="0" Grid.Row="2" Text="Описание" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{DynamicResource TextBlockDetailsStyle}" />
			<TextBlock Grid.Column="0" Grid.Row="3" Text="Тип ресурса" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{DynamicResource TextBlockDetailsStyle}" />

			<TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Name}" VerticalAlignment="Center" MaxLength="100" Margin="5" />
			<TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Description}" VerticalAlignment="Center" MaxLength="100" Margin="5" />
			<ComboBox Grid.Column="1" Grid.Row="3" ItemsSource="{Binding TariffType}"  SelectedItem="{Binding SelectedTariffType}" VerticalAlignment="Center" Margin="5" >
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding ., Converter={StaticResource EnumToDescriptionConverter}}" Margin="1" />
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
		</Grid>
		<StackPanel>
			<TextBlock>
				<Hyperlink Command="{Binding EditTariffPartCommand}" Style="{StaticResource HyperlinkStyle}">
					<TextBlock Text="Редактировать тарифные интервалы" />
				</Hyperlink>
			</TextBlock>
			<TextBlock>
				<Hyperlink Command="{Binding EditDevicesCommand}" Style="{StaticResource HyperlinkStyle}">
					<TextBlock Text="Привязать устройства" />
				</Hyperlink>
			</TextBlock>
		</StackPanel>
	</StackPanel>
</UserControl>