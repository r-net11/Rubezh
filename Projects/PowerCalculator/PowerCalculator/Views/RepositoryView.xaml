<UserControl x:Class="PowerCalculator.Views.RepositoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="600" MinHeight="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <ToolBarButton Command="{Binding AddDeviceCommand}" ToolTip="Добавить устройство" ImageSource="Add" Margin="2" />
            <ToolBarButton Command="{Binding RemoveDeviceCommand}" ToolTip="Удалить устройство" ImageSource="Delete" Margin="2" />
        </StackPanel>
        <DataGrid Grid.Row="1" Grid.Column="0" ItemsSource="{Binding DeviceRepositoryItems}" SelectedItem="{Binding SelectedDeviceRepositoryItem}" IsReadOnly="False" Margin="2">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Устройство" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding SelectedDriverType.DriverType, Converter={StaticResource EnumToDescriptionConverter}}" Margin="2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DriverTypes}" SelectedItem="{Binding SelectedDriverType}" Margin="2">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DriverType, Converter={StaticResource EnumToDescriptionConverter}}" Foreground="Black" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Количество" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Count}" Margin="2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Count}" Foreground="Black" Margin="2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <ToolBarButton Command="{Binding AddCableCommand}" ToolTip="Добавить кабель" ImageSource="Add" Margin="2" />
            <ToolBarButton Command="{Binding RemoveCableCommand}" ToolTip="Удалить кабель" ImageSource="Delete" Margin="2" />
        </StackPanel>
        <DataGrid Grid.Row="1" Grid.Column="1" ItemsSource="{Binding CableRepositoryItems}" SelectedItem="{Binding SelectedCableRepositoryItem}" IsReadOnly="False" Margin="2">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Сопротивление" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Resistivity}" Margin="2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Resistivity}" Foreground="Black" Margin="2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Длина" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Lenght}" Margin="2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Lenght}" Foreground="Black" Margin="2" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>