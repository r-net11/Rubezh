<UserControl x:Class="PowerCalculator.Views.RepositoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="800" MinHeight="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                <ToolBarButton Command="{Binding AddDeviceCommand}" ToolTip="Добавить устройство" ImageSource="Add" Margin="2" />
                <ToolBarButton Command="{Binding RemoveDeviceCommand}" ToolTip="Удалить устройство" ImageSource="Delete" Margin="2" />
            </StackPanel>
            <DataGrid Grid.Row="1" Grid.Column="0" ItemsSource="{Binding DeviceRepositoryItems}" SelectedItem="{Binding SelectedDeviceRepositoryItem}" IsReadOnly="False" Margin="2">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Устройство" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="16" Height="16" Margin="5, 0, 5, 0" HorizontalAlignment="Left" Source="{Binding SelectedDriver.Driver.ImageSource}" />
                                    <TextBlock Text="{Binding SelectedDriver.Driver.DriverType, Converter={StaticResource EnumToDescriptionConverter}}" Margin="2" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding Drivers}" SelectedItem="{Binding SelectedDriver}" Margin="2">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="16" Height="16" Margin="5, 0, 5, 0" HorizontalAlignment="Left" Source="{Binding Driver.ImageSource}" />
                                                <TextBlock Text="{Binding Driver.DriverType, Converter={StaticResource EnumToDescriptionConverter}}" Foreground="Black" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Количество" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Count}" Margin="2" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Count}" Foreground="Black" Margin="2" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                <ToolBarButton Command="{Binding AddCableCommand}" ToolTip="Добавить кабель" ImageSource="Add" Margin="2" />
                <ToolBarButton Command="{Binding RemoveCableCommand}" ToolTip="Удалить кабель" ImageSource="Delete" Margin="2" />
            </StackPanel>
            <DataGrid Grid.Row="1" Grid.Column="1" ItemsSource="{Binding CableRepositoryItems}" SelectedItem="{Binding SelectedCableRepositoryItem}" IsReadOnly="False" Margin="2">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Сопротивление кабеля" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Resistivity}" Margin="2" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Resistivity}" Foreground="Black" Margin="2" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Длина кабеля" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Lenght}" Margin="2" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Lenght}" Foreground="Black" Margin="2" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="2">
            <Button Command="{Binding CollectToRepositoryCommand}" Content="Собрать в репозиторий" HorizontalAlignment="Right" Width="200" Margin="2" />
            <Button Command="{Binding GenerateFromRepositoryCommand}" Content="Сгенерировать из репозитория" HorizontalAlignment="Right" Width="200" Margin="2" />
        </StackPanel>
    </Grid>
</UserControl>