@{
	ViewBag.Title = "Plan";
	Layout = null;
}

<link href="http://angular-ui-tree.github.io/angular-ui-tree/css/app.css" rel="stylesheet" />

<div class="plan">
	<div ng-controller="SignalrCtrl">
		   <div class="message"></div>
		</div>

	<script type="text/ng-template" id="nodes_renderer.html">
		<div ui-tree-handle class="tree-node tree-node-content">
			<a class="btn btn-success btn-xs" ng-if="plan.NestedPlans && plan.NestedPlans.length > 0" data-nodrag ng-click="toggle(this)">
				<span class="glyphicon"
					  ng-class="{
          'glyphicon-chevron-right': collapsed,
          'glyphicon-chevron-down': !collapsed
        }"></span>
			</a>
			<a ng-if="plan.IsFolder === false"
			   ng-click="LoadPlan(plan.Uid)">
				{{plan.Name}}
				{{plan.Description}}
			</a>
			<a ng-if="plan.IsFolder === true">
				{{plan.Name}}
				{{plan.Description}}
			</a>
		</div>

		
		<ol ui-tree-nodes="" ng-model="plan.NestedPlans" ng-class="{hidden: collapsed}">
			<li ng-repeat="plan in plan.NestedPlans" ui-tree-node ng-include="'nodes_renderer.html'">
			</li>
		</ol>
	</script>

	<div ng-controller="PlanCtrl" style="width: 100%;">
		<div style="float: left; width: auto;"><d3-plan data="d3Data"></d3-plan></div>
		<div id="plansGrid" class="group-scroll col-md-2" style="float: right;">
			<div ng-if="PlansList.length">
				<div ui-tree data-drag-enabled="false">
					<ol ui-tree-nodes="" ng-model="PlansList" id="tree-root">
						<li ng-repeat="plan in PlansList" ui-tree-node ng-include="'nodes_renderer.html'"></li>
					</ol>
				</div>
			</div>
		</div>
		<div id="modal">
			<div id="content"></div>
			<button id="modalClose"
					onclick="d3.select('#modal').style('display', 'none');">
				X
			</button>
		</div>

	</div>
</div>
<style>
	svg {
		-moz-shape-rendering: crispEdges;
		-ms-shape-rendering: crispEdges;
		-o-shape-rendering: crispEdges;
		-webkit-shape-rendering: crispEdges;
		font: 10px sans-serif;
		shape-rendering: crispEdges;
	}

	.group-scroll {
		float: right;
		height: 600px;
		overflow-y: scroll;
	}

	#modal {
		-ms-box-shadow: 10px 10px 5px #888888;
		-webkit-box-shadow: 10px 10px 5px #888888;
		background: white;
		border: 1px black solid;
		box-shadow: 10px 10px 5px #888888;
		display: none;
		left: 150px;
		position: fixed;
		top: 200px;
		width: 400px;
		z-index: 1;
	}

	#content {
		max-height: 400px;
		overflow: auto;
	}

	#modalClose {
		position: absolute;
		right: -0px;
		top: -0px;
		z-index: 1;
	}

	.context-menu {
		-ms-border-radius: 4px;
		background-color: #f2f2f2;
		border: 1px solid #d4d4d4;
		border-radius: 4px;
		display: none;
		font-family: Arial, sans-serif;
		font-size: 14px;
		min-width: 150px;
		position: absolute;
		z-index: 1200;
	}

		.context-menu ul {
			cursor: default;
			list-style-type: none;
			margin: 4px 0px;
			padding: 0px;
		}

			.context-menu ul li {
				padding: 4px 16px;
			}

				.context-menu ul li:hover {
					background-color: #4677f8;
					color: #fefefe;
				}

	.d3-tip {
		-ms-border-radius: 2px;
		background: rgba(0, 0, 0, 0.8);
		border-radius: 2px;
		color: #fff;
		font-weight: bold;
		line-height: 1;
		padding: 12px;
	}

		/* Creates a small triangle extender for the tooltip */

		.d3-tip:after {
			-moz-box-sizing: border-box;
			-webkit-box-sizing: border-box;
			box-sizing: border-box;
			color: rgba(0, 0, 0, 0.8);
			content: "\25BC";
			display: inline;
			font-size: 10px;
			line-height: 1;
			position: absolute;
			text-align: center;
			width: 100%;
		}

		/* Style northward tooltips differently */

		.d3-tip.n:after {
			left: 0;
			margin: -1px 0 0 0;
			top: 100%;
		}
</style>