
@{
    ViewBag.Title = "CardRemovalReason";
    Layout = null;
}

<div class="modal-header">
    <a class="close" href=""><img src="Content/Image/Icon/Header/close_pop.png" title="Закрыть" ng-click="cancel()" /></a>
    <h3 class="modal-title">Удаление пропуска</h3>
</div>
<div class="modal-body">
    <form class="form-inline" role="form">
        <div class="form-group">
            <label>
                <input type="radio" value="remove" ng-model="model.removeType" />
                Удалить
            </label>
        </div>
        <div class="form-group">
            <label>
                <input type="radio" value="deactivate" ng-model="model.removeType" />
                Деактивировать
            </label>
        </div>
        <div class="form-group" ng-show="model.removeType === 'deactivate'">
            <label class="control-label col-sm-4" for="removalReason">Причина деактивации</label>
            <div class="col-sm-8">
                <input id="removalReason" class="form-control" ng-model="model.removalReason">
            </div>
        </div>
    </form>
</div>
<div mobile-hover-fix class="modal-footer">
    <button class="btn btn-primary pull-right" ng-click="okClick()" ng-disabled="!canSave()">OK</button>
</div>