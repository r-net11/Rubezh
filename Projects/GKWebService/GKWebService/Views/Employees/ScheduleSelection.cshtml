
@{
    Layout = null;
}

<div class="modal-header">
    <a class="close" href=""><img src="Content/Image/Icon/Header/close_pop.png" title="Закрыть" ng-click="cancel()" /></a>
    <h3 class="modal-title">Выбор графика работы</h3>
</div>

<div class="modal-body">
    <form class="form-horizontal" role="form">
        <ul id="ScheduleSelectionList" class="SelectableList">
            <li ng-repeat="schedule in schedules" ng-class="{selected: model.selectedSchedule === schedule}">
                <div ng-click="model.selectedSchedule = schedule">
                    <label>
                        <span>{{schedule.Name}}</span>
                    </label>
                </div>
            </li>
        </ul>
        <div class="form-group">
            <label class="control-label col-sm-4" for="scheduleSelectionScheduleStartDate">Начало действия графика</label>
            <div class="col-sm-8">
                <p class="input-group">
                    <input type="text" id="scheduleSelectionScheduleStartDate" class="form-control" uib-datepicker-popup="dd.MM.yyyy" is-open="popupScheduleStartDate.opened" ng-model="model.scheduleStartDate">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default" ng-click="popupScheduleStartDate.opened = true"><i class="glyphicon glyphicon-calendar"></i></button>
                    </span>
                </p>
            </div>
        </div>
    </form>
</div>

<div mobile-hover-fix class="modal-footer">
    <button class="btn btn-primary pull-right" ng-click="save()">OK</button>
</div>