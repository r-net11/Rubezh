@{
    ViewBag.Title = "EmployeeDetails";
    Layout = null;
}


<div class="modal-header">
    <a class="close" href=""><img src="Content/Image/Icon/Header/close_pop.png" title="Закрыть" ng-click="cancel()" /></a>
    <h3 class="modal-title">{{title}}</h3>
</div>
<div class="modal-body">
    <uib-tabset>
        <uib-tab heading="Основные">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="control-label col-sm-4" for="lastName">Фамилия</label>
                    <div class="col-sm-8">
                        <input id="lastName" class="form-control" ng-model="employee.LastName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="firstName">Имя</label>
                    <div class="col-sm-8">
                        <input id="firstName" class="form-control" ng-model="employee.FirstName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="secondName">Отчество</label>
                    <div class="col-sm-8">
                        <input id="secondName" class="form-control" ng-model="employee.SecondName">
                    </div>
                </div>
                <div class="form-group" ng-show="isEmployee">
                    <label class="control-label col-sm-4" for="position">Должность</label>
                    <div class="col-sm-8">
                        <a id="position" href="" ng-click="selectPosition">
                            <span ng-show="isPositionSelected()">{{employee.PositionName}}</span>
                            <span ng-show="!isPositionSelected()">Нажмите для выбора должности</span>
                        </a>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="department">Подразделение</label>
                    <div class="col-sm-8">
                        <a id="department" href="" ng-click="selectDepartment">
                            <span ng-show="isDepartmentSelected()">{{employee.DepartmentName}}</span>
                            <span ng-show="!isDepartmentSelected()">Нажмите для выбора подразделения</span>
                        </a>
                    </div>
                </div>
                <div class="form-group" ng-show="!isEmployee">
                    <label class="control-label col-sm-4" for="escort">Сопровождающий</label>
                    <div class="col-sm-8">
                        <a id="escort" href="" ng-click="selectEscort">
                            <span ng-show="isEscortSelected()">{{employee.EscortName}}</span>
                            <span ng-show="!isEscortSelected()">Нажмите для выбора сопровождающего</span>
                        </a>
                    </div>
                </div>
                <div class="form-group" ng-show="!isEmployee">
                    <label class="control-label col-sm-4" for="description">Примечание</label>
                    <div class="col-sm-8">
                        <input id="description" class="form-control" ng-model="employee.Description">
                    </div>
                </div>
                <div class="form-group" ng-show="isEmployee">
                    <label class="control-label col-sm-4" for="schedule">График работы</label>
                    <div class="col-sm-8">
                        <a id="schedule" href="" ng-click="selectSchedule">
                            <span ng-show="isScheduleSelected()">{{employee.ScheduleName}}</span>
                            <span ng-show="!isScheduleSelected()">Нажмите для выбора графика работы</span>
                        </a>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="credentialsStartDate">Учётные данные действуют с</label>
                    <div class="col-sm-8">
                        <p class="input-group">
                            <input type="text" id="credentialsStartDate" class="form-control" uib-datepicker-popup="dd.MM.yyyy" is-open="popupCredentialsStartDate.opened" ng-model="employee.CredentialsStartDate">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-default" ng-click="popupCredentialsStartDate.opened = true"><i class="glyphicon glyphicon-calendar"></i></button>
                            </span>
                        </p>
                    </div>
                </div>
                <div class="form-group" ng-show="isEmployee">
                    <label class="control-label col-sm-4" for="tabelNo">Табельный номер</label>
                    <div class="col-sm-8">
                        <input id="tabelNo" class="form-control" ng-model="employee.TabelNo">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="phone">Телефон</label>
                    <div class="col-sm-8">
                        <input id="phone" class="form-control" ng-model="employee.Phone">
                    </div>
                </div>
                <div class="form-group" ng-show="isEmployee">
                    <label class="control-label col-sm-4" for="isOrganisationChief">Руководитель организации</label>
                    <div class="checkbox col-sm-8">
                        <input type="checkbox" ng-model="model.isOrganisationChief">
                    </div>
                </div>
                <div class="form-group" ng-show="isEmployee">
                    <label class="control-label col-sm-4" for="isOrganisationHRChief">Руководитель отдела кадров</label>
                    <div class="checkbox col-sm-8">
                        <input type="checkbox" ng-model="model.isOrganisationHRChief">
                    </div>
                </div>
            </form>
        </uib-tab>
        <uib-tab heading="Документ">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="control-label col-sm-4" for="documentNumber">Номер</label>
                    <div class="col-sm-8">
                        <input id="documentNumber" class="form-control" ng-model="employee.DocumentNumber">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="birthPlace">Место рождения</label>
                    <div class="col-sm-8">
                        <input id="birthPlace" class="form-control" ng-model="employee.BirthPlace">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="birthDate">Дата рождения</label>
                    <div class="col-sm-8">
                        <p class="input-group">
                            <input type="text" id="birthDate" class="form-control" uib-datepicker-popup="dd.MM.yyyy" is-open="popupBirthDate.opened" ng-model="employee.BirthDate">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-default" ng-click="popupBirthDate.opened = true"><i class="glyphicon glyphicon-calendar"></i></button>
                            </span>
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="givenBy">Кем выдан</label>
                    <div class="col-sm-8">
                        <input id="givenBy" class="form-control" ng-model="employee.DocumentGivenBy">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="givenDate">Дата выдачи</label>
                    <div class="col-sm-8">
                        <p class="input-group">
                            <input type="text" id="givenDate" class="form-control" uib-datepicker-popup="dd.MM.yyyy" is-open="popupGivenDate.opened" ng-model="employee.DocumentGivenDate">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-default" ng-click="popupGivenDate.opened = true"><i class="glyphicon glyphicon-calendar"></i></button>
                            </span>
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="validTo">Документ действителен до</label>
                    <div class="col-sm-8">
                        <p class="input-group">
                            <input type="text" id="validTo" class="form-control" uib-datepicker-popup="dd.MM.yyyy" is-open="popupDocumentValidTo.opened" ng-model="employee.DocumentValidTo">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-default" ng-click="popupDocumentValidTo.opened = true"><i class="glyphicon glyphicon-calendar"></i></button>
                            </span>
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="citizenship">Гражданство</label>
                    <div class="col-sm-8">
                        <input id="citizenship" class="form-control" ng-model="employee.Citizenship">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="gender">Пол</label>
                    <div class="col-sm-8">
                        <select id="gender" class="form-control" ng-model="employee.Gender" convert-to-number>
                            <option value="0">Мужской</option>
                            <option value="1">Женский</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="documentType">Тип документа</label>
                    <div class="col-sm-8">
                        <select id="documentType" class="form-control" ng-model="employee.DocumentType" convert-to-number>
                            <option value="0">Паспорт РФ</option>
                            <option value="1">Паспорт иного государства</option>
                        </select>
                    </div>
                </div>
            </form>
        </uib-tab>
        <uib-tab heading="Фото">
            <div id="PhotoSelection">
                <photo-selection ng-model="model.photoData"></photo-selection>
                @*<div data-bind="template: { name: 'PhotoSelectionTemplate', data: {PhotoData: $parent.PhotoData} }"></div>*@
            </div>
        </uib-tab>
    </uib-tabset>
</div>
<div mobile-hover-fix class="modal-footer">
    <button class="btn btn-primary pull-right" ng-click="save()">OK</button>
</div>