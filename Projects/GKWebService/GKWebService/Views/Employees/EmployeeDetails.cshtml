@{
    ViewBag.Title = "EmployeeDetails";
    Layout = null;
}

<div id="employee-details-box" class="save-cancel-popup">
    <div class="title-bar">
        <span>Оперативная задача Глобал</span>
        <a href="#"><img src="Content/Image/Icon/Header/close_pop.png" title="Close Window" alt="Close" data-bind="click: HR.EmployeeDetails.EmployeeDetailsClose" /></a>
    </div>
    <div class="data-input">
        <form>
            <label for="LastName"><span>Фамилия</span><input type="text" name="LastName" data-bind="value: HR.EmployeeDetails.LastName" value="" /></label>
            <label for="FirstName"><span>Имя</span><input type="text" name="FirstName" data-bind="value: HR.EmployeeDetails.FirstName" value="" /></label>
            <label for="SecondName"><span>Отчество</span><input type="text" name="SecondName" data-bind="value: HR.EmployeeDetails.SecondName" value="" /></label>
            <label for="Position"><span>Должность</span><a id="Position" href=""><span data-bind="click: HR.EmployeeDetails.SelectPosition">Нажмите для выбора должности</span></a></label>
            <label for="Department"><span>Подразделение</span><a id="Department" href=""><span data-bind="click: HR.EmployeeDetails.SelectDepartment">Нажмите для выбора подразделения</span></a></label>
            <label for="Escort"><span>Сопровождающий</span><a id="Escort" href=""><span data-bind="click: HR.EmployeeDetails.SelectEscort">Нажмите для выбора сопровождающего</span></a></label>
            <label for="Description"><span>Примечание</span><input type="text" name="Description" data-bind="value: HR.EmployeeDetails.Description" value="" /></label>
            <label for="Schedule"><span>График работы</span><a id="Schedule" href=""><span data-bind="click: HR.EmployeeDetails.SelectSchedule">Нажмите для выбора графика работы</span></a></label>
            <label for="CredentialsStartDate"><span>Учётные данные действуют с</span><input type="text" id="CredentialsStartDate" name="CredentialsStartDate" data-bind="value: HR.EmployeeDetails.CredentialsStartDateString" value="" /></label>
            <label for="TabelNo"><span>Табельный номер</span><input type="text" name="TabelNo" data-bind="value: HR.EmployeeDetails.TabelNo" value="" /></label>
            <label for="Phone"><span>Телефон</span><input type="text" name="Phone" data-bind="value: HR.EmployeeDetails.Phone" value="" /></label>
            <label><span>Руководитель организации</span><input type="checkbox" name="IsOrganisationChief" data-bind="value: HR.EmployeeDetails.IsOrganisationChief" value=""></label><br>
            <label><span>Руководитель отдела кадров</span><input type="checkbox" name="IsOrganisationHRChief" data-bind="value: HR.EmployeeDetails.IsOrganisationHRChief" value="" /></label><br>
            <button class="submit ok-cancel-button" type="button" data-bind="click: HR.EmployeeDetails.SaveEmployee">OK</button>
            <label data-bind="text: SaveError"></label>
        </form>
    </div>
</div>
