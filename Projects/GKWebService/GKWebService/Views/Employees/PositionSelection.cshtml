
@{
    Layout = null;
}

<div class="modal-header">
    <a class="close" href=""><img src="Content/Image/Icon/Header/close_pop.png" title="Закрыть" ng-click="cancel()" /></a>
    <h3 class="modal-title">Выбор должности</h3>
</div>

<div class="modal-body">
    <div>
        <div ui-grid="gridOptions" style="{{gridStyle}}" ui-grid-selection ui-grid-auto-resize ui-grid-resize-columns ui-grid-auto-size-column></div>
    </div>
</div>

<div mobile-hover-fix class="modal-footer">
    <div class="form-group">
        <button class="btn btn-primary" ng-click="clear()">Открепить от должности</button>
        <button class="btn btn-primary" ng-click="add()">Добавить новую должность</button>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" ng-click="save()">OK</button>
    </div>
</div>