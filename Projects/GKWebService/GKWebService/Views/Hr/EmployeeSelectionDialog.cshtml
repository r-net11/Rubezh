
@{
    ViewBag.Title = "EmployeeSelectionDialog";
    Layout = null;
}

<div class="modal-header">
    <a class="close" href=""><img src="Content/Image/Icon/Header/close_pop.png" title="Закрыть" ng-click="cancel()"/></a>
    <h3 class="modal-title">Выбор сотрудника</h3>
</div>
<div class="modal-body">
    <form id="EmployeeSelectionDialogForm">
        <ul id="EmployeeSelectionDialogList" class="SelectableList">
            <li ng-repeat="employee in employees" ng-class="{selected: employee === model.selectedEmployee}">
                <div ng-click="model.selectedEmployee = employee">
                    <label>
                        <span>{{employee.Name}}</span>
                    </label>
                </div>
            </li>
        </ul>
    </form>
</div>
<div mobile-hover-fix class="modal-footer">
    <button class="btn btn-primary pull-right" ng-click="save()">OK</button>
</div>
