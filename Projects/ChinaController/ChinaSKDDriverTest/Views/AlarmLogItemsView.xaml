<UserControl x:Class="ControllerSDK.Views.AlarmLogItemsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Orientation="Horizontal">
			<Button Content="Получить количество записей" Command="{Binding GetLogsCountCommand}" Width="200" Margin="2" />
			<Button Content="Считать все записи" Command="{Binding GetAllLogsCommand}" Width="200" Margin="2" />
		</StackPanel>
		<DataGrid Grid.Row="1" ItemsSource="{Binding AlarmLogItems}" AutoGenerateColumns="False" Margin="2">
			<DataGrid.Columns>
				<DataGridTextColumn Header="LogNo" Binding="{Binding AlarmLogItem.LogNo}" Width="Auto" />
				<DataGridTextColumn Header="DateTime" Binding="{Binding AlarmLogItem.DateTime}" Width="Auto" />
				<DataGridTextColumn Header="UserName" Binding="{Binding AlarmLogItem.UserName}" Width="Auto" />
				<DataGridTextColumn Header="LogType" Binding="{Binding AlarmLogItem.LogType}" Width="Auto" />
				<DataGridTextColumn Header="CardId" Binding="{Binding AlarmLogItem.CardId}" Width="Auto" />
				<DataGridTextColumn Header="DoorNo" Binding="{Binding AlarmLogItem.DoorNo}" Width="Auto" />
				<DataGridTextColumn Header="AlarmType" Binding="{Binding AlarmLogItem.AlarmType}" Width="Auto" />
				<DataGridTextColumn Header="LogMessage" Binding="{Binding AlarmLogItem.LogMessage}" Width="*" />
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>