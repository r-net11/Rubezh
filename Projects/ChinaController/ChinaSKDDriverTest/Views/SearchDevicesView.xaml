<UserControl x:Class="ControllerSDK.Views.SearchDevicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<Button Content="Найти" Command="{Binding SearchDevicesCommand}" Width="200" HorizontalAlignment="Left" Margin="2" />
			<Button Content="Добавить" Command="{Binding AddDeviceCommand}" Width="200" HorizontalAlignment="Left" Margin="2" />
		</StackPanel>
		<StackPanel>
			<TextBlock Text="Найденные устройства" HorizontalAlignment="Left" Margin="5 2"/>
			<DataGrid ItemsSource="{Binding SearchDevices}" SelectedItem="{Binding SelectedSearchDevice}" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False" Margin="2">
				<DataGrid.Columns>
					<DataGridTextColumn Header="Адрес" Binding="{Binding IpAddress}" Width="Auto" />
					<DataGridTextColumn Header="Порт" Binding="{Binding Port}" Width="Auto" />
					<DataGridTextColumn Header="Подсеть" Binding="{Binding Submask}" Width="Auto" />
					<DataGridTextColumn Header="Гейт" Binding="{Binding Gateway}" Width="Auto" />
					<DataGridTextColumn Header="Mac-адрес" Binding="{Binding Mac}" Width="*" />
				</DataGrid.Columns>
			</DataGrid>
		</StackPanel>
	</StackPanel>
</UserControl>
