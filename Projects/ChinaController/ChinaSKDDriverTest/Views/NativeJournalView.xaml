<UserControl x:Class="ControllerSDK.Views.NativeJournalView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Orientation="Horizontal">
		</StackPanel>
		<DataGrid Grid.Row="1" ItemsSource="{Binding JournalItems}" SelectedItem="{Binding SelectedJournalItem}" AutoGenerateColumns="False" Margin="2">
			<DataGrid.Columns>
				<DataGridTextColumn Header="SystemDateTime" Binding="{Binding JournalItem.SystemDateTime}" Width="Auto" />
				<DataGridTextColumn Header="DeviceDateTime" Binding="{Binding JournalItem.DeviceDateTime}" Width="Auto" />
				<DataGridTextColumn Header="EventNameType" Binding="{Binding JournalItem.JournalEventNameType, Converter={StaticResource EnumToDescriptionConverter}}" Width="*" />
				<DataGridTextColumn Header="Description" Binding="{Binding JournalItem.Description}" Width="*" />
                <DataGridTextColumn Header="ErrorCode" Binding="{Binding JournalItem.ErrorCode, Converter={StaticResource EnumToDescriptionConverter}}" Width="*" />
            </DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>