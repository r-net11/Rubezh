<UserControl 
	x:Class="ControllerSDK.Views.AccessLogItemsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0">
			<StackPanel Orientation="Horizontal">
				<Button Content="Получить количество записей" Command="{Binding GetCountCommand}" Width="200" Margin="2" />
				<Button Content="Считать все записи" Command="{Binding GetAllCommand}" Width="200" Margin="2" />
				<Button Content="Сгенерировать событие" Command="{Binding GenerateJournalItemCommand}" Width="200" Margin="2" />
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<Button Content="Считать записи до" Command="{Binding GetLogItemsUsingLogDeepCommand}" Width="200" Margin="2" />
				<xctk:DateTimePicker Value="{Binding LogDeepDateTime}" Width="154" Margin="2" Format="Custom" FormatString="dd.MM.yyyy HH:mm:ss"/>
			</StackPanel>
		</StackPanel>
		<DataGrid Grid.Row="1" ItemsSource="{Binding AccessLogItems}" SelectedItem="{Binding SelectedAccessLogItem}" AutoGenerateColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn Header="ID" Binding="{Binding RecordNo}" Width="Auto" />
				<DataGridTextColumn Header="Пропуск" Binding="{Binding CardNo}" Width="Auto" />
				<DataGridTextColumn Header="Пароль" Binding="{Binding Password}" Width="Auto" />
				<DataGridTextColumn Header="Время" Binding="{Binding Time, Converter={StaticResource TimeToStringConverter}}" Width="Auto" />
				<DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto" />
				<DataGridTextColumn Header="MethodType" Binding="{Binding MethodType, Converter={StaticResource EnumToDescriptionConverter}}" Width="Auto" />
				<DataGridTextColumn Header="Считыватель" Binding="{Binding ReaderID}" Width="Auto" />
				<DataGridTextColumn Header="Замок" Binding="{Binding DoorNo}" Width="Auto" />
				<DataGridTextColumn Header="Тип пропуска" Binding="{Binding CardType, Converter={StaticResource EnumToDescriptionConverter}}" Width="Auto" />
				<DataGridTextColumn Header="Код ошибки" Binding="{Binding ErrorCode, Converter={StaticResource EnumToDescriptionConverter}}" Width="*" />
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>