<UserControl x:Class="ControllerSDK.Views.CustomDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<Button Content="Считать" Command="{Binding ReadCustomDataCommand}" Width="200" Margin="2"/>
			<Button Content="Записать" Command="{Binding WriteCustomDataCommand}" Width="200" Margin="2"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Данные:" Margin="5 2"/>
			<TextBox Text="{Binding Data}" MaxLength="128" Width="349" Margin="2" TextWrapping="Wrap" Height="75"/>
		</StackPanel>
		
	</StackPanel>
</UserControl>
