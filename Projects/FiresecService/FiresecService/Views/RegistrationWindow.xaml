<Window
	x:Class="FiresecService.Views.RegistrationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="RegistrationWindow"
	Height="330"
	Width="360"
	Closed="RegistrationWindow_OnClosed">
	<Grid Background="#2035CFFB">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TextBlock
			Text="Ваш идентификационный номер"
			VerticalAlignment="Center"
			Margin="0 15 5 5"
			HorizontalAlignment="Center"/>
		<TextBox
			x:Name="UserKeyBox"
			Grid.Row="1"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Center"
			Text="{Binding UserKey, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
			IsReadOnly="True"
			Width="200"/>
		<TextBlock
			Grid.Row="2"
			Text="Введите ключ продукта"
			VerticalAlignment="Center"
			HorizontalAlignment="Center"
			Margin="0 15 0 5"/>
		<TextBox
			x:Name="ProductKeyBox"
			Grid.Row="3"
			TextWrapping="Wrap"
			Width="200"
			Height="150"
			Text="{Binding ProductKey, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
			VerticalAlignment="Top"
			VerticalContentAlignment="Top"/>
		<Button
			Grid.Row="4"
			Content="ОК"
			Command="{Binding SaveCommand}"
			Width="100"
			Margin="10"
			HorizontalAlignment="Center"/>
	</Grid>
</Window>
