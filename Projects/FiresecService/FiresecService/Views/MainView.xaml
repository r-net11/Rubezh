<UserControl x:Class="FiresecService.Views.MainView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 MinWidth="600" MinHeight="600"
			 Loaded="UserControl_Loaded">
	<UserControl.Resources>
		<Style x:Key="DataGridLogCellStyle" TargetType="{x:Type DataGridCell}">
			<Style.Setters>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type DataGridCell}">
							<Border Background="{TemplateBinding Background}" BorderThickness="0">
								<ContentPresenter VerticalAlignment="Center" />
							</Border>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style.Setters>
			<Style.Triggers>
				<Trigger Property="IsSelected" Value="True">
					<Setter Property="Background" Value="{DynamicResource PressedBackgroundBrush}" />
					<Setter Property="Foreground" Value="White" />
				</Trigger>
				<DataTrigger Binding ="{Binding IsError}" Value="True">
					<Setter Property="Background" Value="Red" />
				</DataTrigger>
			</Style.Triggers>
		</Style>
	</UserControl.Resources>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TabControl Grid.Row="0" Background="{DynamicResource AlternativeBackgroundBrush}">
			<TabItem Header="Соединения">
				<DataGrid ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}">
					<DataGrid.Columns>
						<DataGridTextColumn Binding="{Binding ClientType}" Header="Тип" />
						<DataGridTextColumn Binding="{Binding IpAddress}" Header="Адрес" />
						<DataGridTextColumn Width="*" Binding="{Binding FriendlyUserName}" Header="Пользователь" />
					</DataGrid.Columns>
				</DataGrid>
			</TabItem>
			<TabItem Header="Лог">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<DataGrid Grid.Row="0" ItemsSource="{Binding Logs}" SelectedItem="{Binding SelectedLog}" CellStyle="{StaticResource DataGridLogCellStyle}">
						<DataGrid.Columns>
							<DataGridTemplateColumn Header="Название" Width="*">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate>
										<TextBlock Text="{Binding Message}" Margin="2" />
									</DataTemplate>
								</DataGridTemplateColumn.CellTemplate>
							</DataGridTemplateColumn>
							<DataGridTemplateColumn Header="Дата" Width="Auto">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate>
										<TextBlock Text="{Binding DateTime}" Margin="2" />
									</DataTemplate>
								</DataGridTemplateColumn.CellTemplate>
							</DataGridTemplateColumn>
						</DataGrid.Columns>
					</DataGrid>
					<Grid Grid.Row="1" DataContext="{Binding SelectedLog}">
						<TextBlock Text="{Binding Message}" TextWrapping="Wrap" Foreground="{DynamicResource ForegroundColorWhite}" Margin="2" />
					</Grid>
				</Grid>
			</TabItem>
			<TabItem Header="Статус">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>

					<TextBlock Grid.Row="0" Grid.Column="0" Text="Локальный адрес сервера" Foreground="{DynamicResource ForegroundColorWhite}" VerticalAlignment="Center" Margin="2" />
					<TextBox Grid.Row="0" Grid.Column="1" Text="{Binding LocalAddress}" Margin="2" />

					<TextBlock Grid.Row="1" Grid.Column="0" Text="Удаленный адрес сервера" Foreground="{DynamicResource ForegroundColorWhite}" VerticalAlignment="Center" Margin="2" />
					<TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RemoteAddress}" Margin="2" />

					<TextBlock Grid.Row="2" Grid.Column="0" Text="Адрес сервера отчетов" Foreground="{DynamicResource ForegroundColorWhite}" VerticalAlignment="Center" Margin="2" />
					<TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ReportAddress}" Margin="2" />
				</Grid>
			</TabItem>
			<TabItem Header="ГК" DataContext="{Binding ServerTasksViewModel}">
				<DataGrid ItemsSource="{Binding GKViewModels}" SelectedItem="{Binding SelectedGKViewModel}">
					<DataGrid.Columns>
						<DataGridTextColumn Binding="{Binding Name}" Header="Название" Width="*" />
						<DataGridTextColumn Binding="{Binding State}" Header="Состояние" Width="*" />
					</DataGrid.Columns>
				</DataGrid>
			</TabItem>
			<TabItem Header="Операции" DataContext="{Binding ServerTasksViewModel}">
				<DataGrid ItemsSource="{Binding ServerTasks}" SelectedItem="{Binding SelectedServerTask}">
					<DataGrid.Columns>
						<DataGridTextColumn Binding="{Binding ServerTask.Name}" Header="Название" />
					</DataGrid.Columns>
				</DataGrid>
			</TabItem>
			<TabItem Header="Лицензирование" DataContext="{Binding LicenseViewModel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
					<TextBlock Text="Ключ:" Style="{DynamicResource TextBlockDetailsStyle}" Margin="5"/>
                    <TextBox Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding InitialKeyString}" IsReadOnly="True" VerticalContentAlignment="Center"/>
                    <DataGrid Grid.Row="1" Grid.ColumnSpan="3" ItemsSource="{Binding Parameters}" Margin="0 5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Name}" Header="Параметр" Width="*"/>
                            <DataGridTemplateColumn Header="Значение" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ContentControl x:Name="ValueColumnTemplate">
                                            <CheckBox IsEnabled="False" IsChecked="{Binding Value}"/>
                                        </ContentControl>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding Type}" Value="Integer">
                                                <Setter Property="Content" TargetName="ValueColumnTemplate">
                                                    <Setter.Value>
                                                        <TextBlock Text="{Binding Value}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="String">
                                                <Setter Property="Content" TargetName="ValueColumnTemplate">
                                                    <Setter.Value>
                                                        <TextBlock Text="{Binding Value}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="Float">
                                                <Setter Property="Content" TargetName="ValueColumnTemplate">
                                                    <Setter.Value>
                                                        <TextBlock Text="{Binding Value}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="DateTime">
                                                <Setter Property="Content" TargetName="ValueColumnTemplate">
                                                    <Setter.Value>
                                                        <TextBlock Text="{Binding Value}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Grid.Column="2" Grid.Row="2" Content="Загрузить лицензию" Width="150" Command="{Binding LoadLicenseCommand}"/>
                </Grid>
            </TabItem>
        </TabControl>
		<Grid Grid.Row="1">
			<TextBlock Margin="2" FontSize="11" FontWeight="Bold" Foreground="Orange" Text="{Binding LastLog}" />
		</Grid>
	</Grid>
</UserControl>