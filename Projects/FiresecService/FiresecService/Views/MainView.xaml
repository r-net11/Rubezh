<UserControl x:Class="FiresecService.Views.MainView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MinWidth="400" MinHeight="400" Loaded="UserControl_Loaded">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TabControl Grid.Row="0" Background="{DynamicResource AlternativeBackgroundBrush}">
			<TabItem Header="Соединения">
				<DataGrid ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}">
					<DataGrid.Columns>
						<DataGridTextColumn Binding="{Binding ClientType}" Header="Тип" />
						<DataGridTextColumn Binding="{Binding IpAddress}" Header="Адрес" />
						<DataGridTextColumn Width="*" Binding="{Binding FriendlyUserName}" Header="Пользователь" />
					</DataGrid.Columns>
				</DataGrid>
			</TabItem>
			<TabItem Header="Лог">
				<ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
					<TextBox AcceptsReturn="True" IsReadOnly="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Text="{Binding InfoLog}" TextWrapping="WrapWithOverflow" />
				</ScrollViewer>
			</TabItem>
            <TabItem Header="Лицензирование">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Ключ:" Foreground="White" Margin="5"/>
                    <TextBox Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding InitialKeyString}" IsReadOnly="True" VerticalContentAlignment="Center"/>
                    <DataGrid Grid.Row="1" Grid.ColumnSpan="3" ItemsSource="{Binding License.Parameters}" Margin="0 5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Name}" Header="Параметр" Width="*"/>
                            <DataGridTemplateColumn Header="Значение" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ContentControl x:Name="ValueColumnTemplate">
                                            <CheckBox IsEnabled="False" IsChecked="{Binding Value}"/>
                                        </ContentControl>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding Type}" Value="Integer">
                                                <Setter Property="Content" TargetName="ValueColumnTemplate">
                                                    <Setter.Value>
                                                        <TextBlock Text="{Binding Value}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="String">
                                                <Setter Property="Content" TargetName="ValueColumnTemplate">
                                                    <Setter.Value>
                                                        <TextBlock Text="{Binding Value}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="Float">
                                                <Setter Property="Content" TargetName="ValueColumnTemplate">
                                                    <Setter.Value>
                                                        <TextBlock Text="{Binding Value}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="DateTime">
                                                <Setter Property="Content" TargetName="ValueColumnTemplate">
                                                    <Setter.Value>
                                                        <TextBlock Text="{Binding Value}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Grid.Column="2" Grid.Row="2" Content="Загрузить лицензию" Width="150" Command="{Binding LoadLicenseCommand}"/>
                </Grid>
            </TabItem>
        </TabControl>
		<Grid Grid.Row="1">
			<TextBlock Margin="2" FontSize="11" FontWeight="Bold" Foreground="Orange" Text="{Binding LastLog}" />
		</Grid>
	</Grid>
</UserControl>