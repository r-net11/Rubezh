<Window x:Class="Main.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Main"
    Title="Assad Client" Height="900" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2">
                <Button Command="{Binding ConnectCommand}"  Content="Connect" />
                <Button Command="{Binding ShowLogsCommand}" Content="Show Logs" />
            </StackPanel>

        <TabControl Grid.Row="1">
            <TabItem Header="Assad" Name="AssadTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <local:AssadTreeView Grid.Column="0" />
                    <local:AssadDeviceDetails Grid.Column="1" />
                </Grid>
            </TabItem>
            <TabItem Header="Com Server" Name="ComServerTab">
                <ScrollViewer>
                    <StackPanel>
                        <TextBox Text="{Binding StateMessage}" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <local:ComServerTreeView Grid.Column="0" />
                            <local:ComDeviceDetails Grid.Column="1" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
