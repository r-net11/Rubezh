<Window x:Class="Revisor.RevisorView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Инспектор ОЗ" MaxHeight="100" MaxWidth="200" MinHeight="100" MinWidth="200" ShowInTaskbar="False" Visibility="Hidden">
	<StackPanel Background="LightBlue">
		<Button Content="Запустить инспектор" Command="{Binding StartCommand}" Background="Green" FontSize="15" />
		<Button Content="Остановить инспектор" Command="{Binding StopCommand}" Background="Red" FontSize="15" />
	</StackPanel>
</Window>