			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mediaSourcePlayer="clr-namespace:MediaSourcePlayer;assembly=MediaSourcePlayer"
			 Width="{Binding Width}" Height="{Binding Height}"
			 MinWidth="400" MinHeight="300">
