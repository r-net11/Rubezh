<UserControl x:Class="CurrentDeviceModule.Views.CurrentDeviceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Views="clr-namespace:DeviceControls;assembly=DeviceControls"
             xmlns:Converters="clr-namespace:CurrentDeviceModule.Converters">
        <ContentControl Content="{Binding CurrentDeviceControl}" Margin="0" 
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ContentControl.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Отключить"
                              Background="Aqua">
                    </MenuItem>
                    <MenuItem Header="Свойства устройства" Command="{Binding ShowPropertiesCommand}" 
                              Background="Aqua">
                    </MenuItem>
                </ContextMenu>
            </ContentControl.ContextMenu>
            <ContentControl.ToolTip>
                <ToolTip>
                    <TextBlock Name="txtToolTip" Text="{Binding ToolTip}" />
                </ToolTip>
            </ContentControl.ToolTip>
        </ContentControl>
</UserControl>
